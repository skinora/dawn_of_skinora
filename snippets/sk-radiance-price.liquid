<style>
  .sk-radiance-price .sk-price {
    display: flex;
    align-items: baseline;
    flex-direction: row;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
</style>

<div
  class="sk-radiance-price"
  data-sk-price
  data-price=""
  data-compare=""
>
  <div class="sk-radiance-price__container">
    <div class="sk-radiance-price__wrapper">
      <div class="sk-price">
        <!-- Current price -->
        <span
          class="sk-price__current"
          data-sk-price-current
        ></span>

        <!-- Compare / Verdi price -->
        <span
          class="sk-price__value"
          data-sk-price-compare
          hidden
        ></span>
      </div>
    </div>
  </div>
</div>

{%- if request.design_mode -%}
  <script>
    console.log('[sk-radiance-price] snippet loaded');

    document.addEventListener('DOMContentLoaded', () => {
      const el = document.querySelector('[data-sk-price]');
      if (!el) {
        console.warn('[sk-radiance-price] price root NOT found');
        return;
      }

      console.log('[sk-radiance-price] initial dataset', {
        price: el.dataset.price,
        compare: el.dataset.compare,
      });
    });
  </script>
{%- endif -%}
