<style>
  .sk-announcement {
    background: var(--mine-shaft-800, #454545);
    color: var(--color-white, #ffffff);
    font-family: var(--font-body-family, 'Inter', 'system-ui', sans-serif);
  }

  .sk-announcement__inner {
    min-height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 0.75rem var(--sk-page-gutter, 1rem);
  }

  .sk-announcement__text,
  .sk-announcement__link {
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: clamp(1.1rem, 1.4vw, 1.35rem);
    line-height: var(--sk-line-height-tight, 1.45);
    margin: 0;
    color: inherit;
    text-decoration: none;
  }

  .sk-announcement__link:focus-visible,
  .sk-announcement__link:hover {
    opacity: 0.85;
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }
</style>

<div class="sk-announcement">
  <div class="page-width sk-announcement__inner">
    {%- assign text = section.settings.text | default: 'Legg til annonsetekst' -%}
    {%- if section.settings.link != blank -%}
      <a class="sk-announcement__link" href="{{ section.settings.link }}">{{ text }}</a>
    {%- else -%}
      <p class="sk-announcement__text">{{ text }}</p>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "SK Announcement Bar",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Announcement text",
      "default": "Gratis frakt i Norge â€“ Handle trygt hos Skinora"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Optional link"
    }
  ],
  "blocks": [
    {
      "type": "placeholder",
      "name": "Content block",
      "settings": []
    }
  ],
  "presets": [
    {
      "name": "SK Announcement Bar"
    }
  ]
}
{% endschema %}
