<style>
  .sk-wavelengths {
    padding: 3rem 0;
  }

  .sk-wavelengths__content {
    text-align: center;
    margin-bottom: 1.25rem;
  }

  .sk-wavelengths__heading {
    font-size: clamp(32px, 2.5vw, 42px);
    color: #30273e;
    margin: 0;
    line-height: 1.1;
    font-weight: 600;
  }

  .sk-wavelengths__grid {
    display: grid;
    gap: clamp(24px, 2vw, 48px);
    align-items: start;
    justify-content: stretch;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    width: 100%;
  }

  .sk-wavelength {
    background-color: #fff;
    border-radius: 20px;
    padding: 0;
    box-shadow: 0 20px 40px rgba(7, 15, 20, 0.08);
    display: flex;
    flex-direction: column;
    gap: 0;
    animation: skFade 0.8s ease both;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    position: relative;
  }

  .sk-wavelength__visual {
    border-radius: 20px;
    background: #fff;
    padding: 1.5rem 1.25rem;
  }

  .sk-wavelength__diagram {
    background: #fff;
    border-radius: 16px;
    border: 1px solid #e3e5e5;
    position: relative;
    padding: 1.5rem 1.25rem 2.5rem;
    height: 220px;
    overflow: hidden;
  }

  .sk-wavelength__beams {
    position: absolute;
    top: 16px;
    left: 50%;
    transform: translateX(-50%);
    height: 180px;
    width: 65%;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 8px;
  }

  .sk-wavelength__beam {
    flex: 1;
    border-radius: 999px;
    position: relative;
  }

  .sk-wavelength__beam span {
    position: absolute;
    top: -22px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #30273e;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    font-weight: 600;
  }

  .sk-wavelength__beam--red {
    background: rgba(224, 50, 69, 0.25);
    border: 1px solid rgba(224, 50, 69, 0.4);
    min-height: 120px;
  }

  .sk-wavelength__beam--near-infrared {
    background: rgba(200, 96, 187, 0.25);
    border: 1px solid rgba(200, 96, 187, 0.4);
    min-height: 140px;
  }

  .sk-wavelength__beam--deep {
    background: rgba(32, 78, 152, 0.25);
    border: 1px solid rgba(32, 78, 152, 0.4);
    min-height: 170px;
  }

  .sk-wavelength__layers {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .sk-wavelength__layer {
    flex: 1;
    padding: 6px 12px;
    font-size: 13px;
    font-weight: 500;
    color: #2f2f2f;
    background: rgba(255, 170, 140, 0.2);
    border-bottom: 1px solid rgba(47, 47, 47, 0.08);
  }

  .sk-wavelength__layer:nth-child(2) {
    background: rgba(255, 221, 194, 0.3);
  }

  .sk-wavelength__layer:nth-child(3) {
    background: rgba(233, 241, 243, 0.35);
  }

  .sk-wavelength__title {
    font-size: 22px;
    color: #30273e;
    margin: 0;
    line-height: 1.3;
    font-weight: 600;
    text-align: center;
  }

  .sk-wavelength__body {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    align-items: stretch;
    margin-top: 1.25rem;
    padding: 0 1.75rem 1.75rem;
    text-align: left;
  }

  .sk-wavelength__subtitle {
    font-size: 16px;
    font-weight: 600;
    color: #2f2f2f;
    text-align: left;
    margin: 0;
  }

  .sk-wavelength__benefits {
    list-style: none;
    margin: 0;
    padding: 0;
    color: #333333;
    font-size: 16px;
    line-height: 1.55;
    display: flex;
    flex-direction: column;
    gap: 0.85rem;
  }

  .sk-wavelength__benefits li {
    position: relative;
    padding-left: 2.6rem;
  }

  .sk-wavelength__benefits li::before {
    content: '';
    width: 18px;
    height: 18px;
    border-radius: 999px;
    border: 1px solid #2f2f2f;
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    display: inline-flex;
  }

  .sk-wavelength__benefits li::after {
    content: '✔︎';
    color: #2f2f2f;
    font-size: 12px;
    position: absolute;
    left: 3px;
    top: 50%;
    transform: translateY(-50%);
  }

  .sk-wavelengths__arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.6;
  }

  .sk-wavelengths__slider {
    display: none;
    position: relative;
  }

  .sk-wavelengths__dot-row {
    margin-top: 18px;
    display: flex;
    justify-content: center;
    gap: 12px;
  }

  .sk-wavelengths__dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: #c4c4c4;
  }

  .sk-wavelengths__dot--active {
    background: #30273e;
  }

  .sk-wavelengths--animated .sk-wavelength {
    opacity: 0;
    animation: skFade 0.8s ease forwards;
  }

  @keyframes skFade {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 750px) {
    .sk-wavelengths {
      padding: 4rem 0 3rem;
    }

    .sk-wavelengths__grid {
      display: none;
    }

    .sk-wavelengths__slider {
      display: block;
      padding: 0 12px 24px;
      max-height: 80vh;
    }

    .sk-wavelengths__heading {
      font-size: clamp(36px, 4.2vw, 44px);
      letter-spacing: 0.6px;
      line-height: 1.18;
      margin-bottom: 0.9rem;
    }

    .sk-wavelengths__slider .swiper-slide {
      padding: 0;
    }

    .sk-wavelengths__slider .sk-wavelength {
      box-shadow: none;
      border-radius: 16px;
      padding: 0;
    }

    .sk-wavelengths__slider .sk-wavelength__visual {
      padding: 1.25rem 1rem 1rem;
    }

    .sk-wavelengths__slider .sk-wavelength__diagram {
      height: 200px;
    }

    .sk-wavelengths__slider .sk-wavelength__body {
      padding: 0 1.5rem 1.5rem;
      gap: 1rem;
      margin-top: 0;
    }

    .sk-wavelengths__slider .sk-wavelength__dot-row {
      margin-top: 12px;
    }

    .sk-wavelengths__slider .sk-wavelengths__dot {
      width: 12px;
      height: 12px;
      background: #c4c4c4;
    }
  }

  @media (max-width: 500px) {
    .sk-wavelengths__heading {
      font-size: 28px;
    }

    .sk-wavelength__title {
      font-size: 20px;
    }

    .sk-wavelength__benefits {
      font-size: 15px;
    }
  }
</style>

<section class="sk-wavelengths section--full-bleed">
  <div class="page-width">
    {% if section.settings.sk_led_light_work_heading != blank %}
      <div class="sk-wavelengths__content sk-section-content">
        <h2 class="sk-wavelengths__heading sk-section-heading sk-section-heading--h1">
          {{ section.settings.sk_led_light_work_heading | escape }}
        </h2>
      </div>
    {% endif %}

    {% capture arrow_svg %}
      {{ 'led-light-works-arrow.svg' | inline_asset_content }}
    {% endcapture %}
    {% assign visible_blocks = section.blocks | where_exp: 'block', 'block.settings.sk_wavelength_visible != false' %}
    {% assign visible_blocks_count = visible_blocks.size %}
    {% assign grid_block_count = visible_blocks_count %}
    {% if grid_block_count == 0 %}
      {% assign grid_block_count = 4 %}
    {% endif %}
    {% if visible_blocks_count > 0 %}
      <div class="sk-wavelengths__grid" style="--sk-wavelength-block-count: {{ grid_block_count }};">
        {% for block in visible_blocks %}
          <div class="sk-wavelength">
            <div class="sk-wavelength__visual">
              <div class="sk-wavelength__diagram">
                <div class="sk-wavelength__beams">
                  <div class="sk-wavelength__beam sk-wavelength__beam--red">
                    <span>630 nm Rødt Lys</span>
                  </div>
                  <div class="sk-wavelength__beam sk-wavelength__beam--near-infrared">
                    <span>830 nm NIR-Lys</span>
                  </div>
                  <div class="sk-wavelength__beam sk-wavelength__beam--deep">
                    <span>1072 nm Dypt NIR-Lys</span>
                  </div>
                </div>
                <div class="sk-wavelength__layers">
                  <span class="sk-wavelength__layer">Epidermis</span>
                  <span class="sk-wavelength__layer">Dermis</span>
                  <span class="sk-wavelength__layer">Subcutis</span>
                </div>
              </div>
            </div>
            <div class="sk-wavelength__body">
              <h3 class="sk-wavelength__title">{{ block.settings.sk_wavelength_heading | escape }}</h3>
              <ul class="sk-wavelength__benefits" role="list">
                {%- assign items = block.settings.sk_wavelength_benefits | split: '\n' -%}
                {%- for item in items -%}
                  {%- assign trimmed = item | strip -%}
                  {%- if trimmed != blank -%}
                    <li>{{ trimmed }}</li>
                  {%- endif -%}
                {%- endfor -%}
              </ul>
            </div>
          </div>
          {% unless forloop.last %}
            <div class="sk-wavelengths__arrow" aria-hidden="true">
              {{ arrow_svg | replace: '<svg', '<svg aria-hidden="true" focusable="false" role="presentation"' }}
            </div>
          {% endunless %}
        {% endfor %}
      </div>
    {% endif %}

    {% if visible_blocks_count > 0 %}
      <div class="sk-wavelengths__slider sk-wavelengths-swiper-{{ section.id }}">
        <div class="swiper llw-swiper-{{ section.id }}">
          <div class="swiper-wrapper">
            {% for block in visible_blocks %}
              <div class="swiper-slide">
                <div class="sk-wavelength sk-wavelength--slide">
                  <div class="sk-wavelength__visual">
                    <div class="sk-wavelength__diagram">
                      <div class="sk-wavelength__beams">
                        <div class="sk-wavelength__beam sk-wavelength__beam--red">
                          <span>630 nm Rødt Lys</span>
                        </div>
                        <div class="sk-wavelength__beam sk-wavelength__beam--near-infrared">
                          <span>830 nm NIR-Lys</span>
                        </div>
                        <div class="sk-wavelength__beam sk-wavelength__beam--deep">
                          <span>1072 nm Dypt NIR-Lys</span>
                        </div>
                      </div>
                      <div class="sk-wavelength__layers">
                        <span class="sk-wavelength__layer">Epidermis</span>
                        <span class="sk-wavelength__layer">Dermis</span>
                        <span class="sk-wavelength__layer">Subcutis</span>
                      </div>
                    </div>
                  </div>
                  <div class="sk-wavelength__body">
                    <h3 class="sk-wavelength__title">{{ block.settings.sk_wavelength_heading | escape }}</h3>
                    <ul class="sk-wavelength__benefits" role="list">
                      {%- assign items = block.settings.sk_wavelength_benefits | split: '\n' -%}
                      {%- for item in items -%}
                        {%- assign trimmed = item | strip -%}
                        {%- if trimmed != blank -%}
                          <li>{{ trimmed }}</li>
                        {%- endif -%}
                      {%- endfor -%}
                    </ul>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="swiper-pagination"></div>
        </div>
        <div class="sk-wavelengths__dot-row" aria-hidden="true">
          <span class="sk-wavelengths__dot sk-wavelengths__dot--active"></span>
          <span class="sk-wavelengths__dot"></span>
        </div>
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    if ({{ visible_blocks_count }} === 0) {
      return;
    }
    var sliderContainer = document.querySelector('.sk-wavelengths-swiper-{{ section.id }} .swiper');
    if (!sliderContainer) return;

    var mql = window.matchMedia('(max-width: 700px)');
    var swiperInstance = null;

    function initOrDestroy() {
      if (mql.matches && !swiperInstance) {
        swiperInstance = new Swiper(sliderContainer, {
          slidesPerView: 1,
          spaceBetween: 24,
          centeredSlides: true,
          pagination: {
            el: sliderContainer.querySelector('.swiper-pagination'),
            clickable: true,
          },
        });
      } else if (!mql.matches && swiperInstance) {
        swiperInstance.destroy(true, true);
        swiperInstance = null;
      }
    }

    initOrDestroy();
    if (mql.addEventListener) {
      mql.addEventListener('change', initOrDestroy);
    } else {
      mql.addListener(initOrDestroy);
    }
  });
</script>

