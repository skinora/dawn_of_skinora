<style>
  .sk-wavelengths {
    padding: 5rem 0;
  }

  .sk-wavelengths__content {
    text-align: center;
    margin-bottom: 2rem;
  }

  .sk-wavelengths__heading {
    font-size: clamp(32px, 2.5vw, 42px);
    color: #30273e;
    margin: 0;
    line-height: 1.1;
    font-weight: 600;
  }

  .sk-wavelengths__grid {
    display: grid;
    gap: 48px;
    align-items: start;
    justify-content: center;
    grid-template-columns: repeat(auto-fit, minmax(calc(100vw / var(--sk-wavelength-block-count, 4)), 1fr));
  }

  .sk-wavelength {
    background-color: #fff;
    border-radius: 16px;
    padding: 1.75rem;
    box-shadow: 0 18px 45px rgba(16, 10, 37, 0.08);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    animation: skFade 0.8s ease both;
    width: calc(100vw / var(--sk-wavelength-block-count, 4));
    max-width: 100%;
    box-sizing: border-box;
    position: relative;
  }

  .sk-wavelength__image {
    width: 100%;
    aspect-ratio: 4 / 5;
    border-radius: 12px;
    overflow: hidden;
    background: #f7f7f7;
    display: block;
  }

  .sk-wavelength__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .sk-wavelength__title {
    font-size: 22px;
    color: #30273e;
    margin: 0;
    line-height: 1.3;
    font-weight: 600;
  }

  .sk-wavelength__benefits {
    list-style: none;
    margin: 0;
    padding: 0;
    color: #333333;
    font-size: 16px;
    line-height: 1.55;
    display: flex;
    flex-direction: column;
    gap: 0.65rem;
  }

  .sk-wavelength__benefits li {
    position: relative;
    padding-left: 1.4rem;
  }

  .sk-wavelength__benefits li::before {
    content: '\2022';
    position: absolute;
    left: 0;
    top: 0;
    color: var(--color-brand, #f05d23);
    font-size: 1.25rem;
    line-height: 1;
  }

  .sk-wavelengths__arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.6;
  }

  .sk-wavelengths__slider {
    display: none;
  }

  .sk-wavelengths--animated .sk-wavelength {
    opacity: 0;
    animation: skFade 0.8s ease forwards;
  }

  @keyframes skFade {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 750px) {
    .sk-wavelengths {
      padding: 4rem 0;
    }

    .sk-wavelengths__grid {
      display: none;
    }

    .sk-wavelengths__slider {
      display: block;
    }

    .sk-wavelengths__slider .swiper-slide {
      padding: 0;
    }

    .sk-wavelengths__slider .sk-wavelength,
    .sk-wavelengths__slider .sk-wavelength--slide {
      background: transparent;
      box-shadow: none;
      padding: 0;
      width: 100%;
      max-width: 100%;
    }

    .sk-wavelengths__slider .sk-wavelength__image {
      border-radius: 0;
      background: none;
      width: 100%;
      height: auto;
      aspect-ratio: auto;
      margin-bottom: 0;
    }

    .sk-wavelengths__slider .sk-wavelength__image img {
      width: 100%;
      height: auto;
    }

    .sk-wavelengths__slider .sk-wavelength__title,
    .sk-wavelengths__slider .sk-wavelength__benefits {
      background: transparent;
      padding: 0 1rem 1.5rem;
    }
  }

  @media (max-width: 500px) {
    .sk-wavelengths__heading {
      font-size: 28px;
    }
    .sk-wavelength__title {
      font-size: 20px;
    }
    .sk-wavelength__benefits {
      font-size: 15px;
    }
  }
</style>

<section class="sk-wavelengths section--full-bleed">
  <div class="page-width">
    {% if section.settings.sk_led_light_work_heading != blank %}
      <div class="sk-wavelengths__content sk-section-content">
        <h2 class="sk-wavelengths__heading sk-section-heading sk-section-heading--h1">
          {{ section.settings.sk_led_light_work_heading | escape }}
        </h2>
      </div>
    {% endif %}

    {% capture arrow_svg %}
      {{ 'led-light-works-arrow.svg' | inline_asset_content }}
    {% endcapture %}
    {% assign visible_blocks = section.blocks | where_exp: 'block', 'block.settings.sk_wavelength_visible != false' %}
    {% assign visible_blocks_count = visible_blocks.size %}
    {% assign grid_block_count = visible_blocks_count %}
    {% if grid_block_count == 0 %}
      {% assign grid_block_count = 4 %}
    {% endif %}
    {% if visible_blocks_count > 0 %}
      <div class="sk-wavelengths__grid" style="--sk-wavelength-block-count: {{ grid_block_count }};">
        {% for block in visible_blocks %}
          <div class="sk-wavelength">
            {% if block.settings.sk_wavelength_image != blank %}
              {% assign wavelength_img = block.settings.sk_wavelength_image %}
              <figure class="sk-wavelength__image">
                <img
                  src="{{ wavelength_img | image_url: width: 1000 }}"
                  alt="{{ wavelength_img.alt | escape }}"
                  loading="lazy"
                  decoding="async"
                  width="340"
                  height="425"
                >
              </figure>
            {% endif %}
            <h3 class="sk-wavelength__title">{{ block.settings.sk_wavelength_heading | escape }}</h3>
            <ul class="sk-wavelength__benefits" role="list">
              {%- assign items = block.settings.sk_wavelength_benefits | split: '\n' -%}
              {%- for item in items -%}
                {%- assign trimmed = item | strip -%}
                {%- if trimmed != blank -%}
                  <li>{{ trimmed }}</li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          </div>
          {% unless forloop.last %}
            <div class="sk-wavelengths__arrow" aria-hidden="true">
              {{ arrow_svg | replace: '<svg', '<svg aria-hidden="true" focusable="false" role="presentation"' }}
            </div>
          {% endunless %}
        {% endfor %}
      </div>
    {% endif %}

    {% if visible_blocks_count > 0 %}
      <div class="sk-wavelengths__slider sk-wavelengths-swiper-{{ section.id }}">
        <div class="swiper llw-swiper-{{ section.id }}">
          <div class="swiper-wrapper">
            {% for block in visible_blocks %}
              <div class="swiper-slide">
                <div class="sk-wavelength sk-wavelength--slide">
                  {% if block.settings.sk_wavelength_image != blank %}
                    {% assign wavelength_img = block.settings.sk_wavelength_image %}
                    <figure class="sk-wavelength__image">
                      <img
                        src="{{ wavelength_img | image_url: width: 1000 }}"
                        alt="{{ wavelength_img.alt | escape }}"
                        loading="lazy"
                        decoding="async"
                        width="340"
                        height="425"
                      >
                    </figure>
                  {% endif %}
                  <h3 class="sk-wavelength__title">{{ block.settings.sk_wavelength_heading | escape }}</h3>
                  <ul class="sk-wavelength__benefits" role="list">
                    {%- assign items = block.settings.sk_wavelength_benefits | split: '\n' -%}
                    {%- for item in items -%}
                      {%- assign trimmed = item | strip -%}
                      {%- if trimmed != blank -%}
                        <li>{{ trimmed }}</li>
                      {%- endif -%}
                    {%- endfor -%}
                  </ul>
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="swiper-pagination"></div>
        </div>
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    if ({{ visible_blocks_count }} === 0) {
      return;
    }
    var sliderContainer = document.querySelector('.sk-wavelengths-swiper-{{ section.id }} .swiper');
    if (!sliderContainer) return;

    var mql = window.matchMedia('(max-width: 700px)');
    var swiperInstance = null;

    function initOrDestroy() {
      if (mql.matches && !swiperInstance) {
        swiperInstance = new Swiper(sliderContainer, {
          slidesPerView: 1,
          spaceBetween: 24,
          centeredSlides: true,
          pagination: {
            el: sliderContainer.querySelector('.swiper-pagination'),
            clickable: true,
          },
        });
      } else if (!mql.matches && swiperInstance) {
        swiperInstance.destroy(true, true);
        swiperInstance = null;
      }
    }

    initOrDestroy();
    if (mql.addEventListener) {
      mql.addEventListener('change', initOrDestroy);
    } else {
      mql.addListener(initOrDestroy);
    }
  });
</script>

