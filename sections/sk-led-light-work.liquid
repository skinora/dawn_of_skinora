<!-- Swiper CSS (kun brukt p책 mobil) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<style>
  .sk-led-light-work {
    padding: 5rem 0;
  }

  .sk-led-light-work__content {
    width: min(760px, 90%);
    margin: 15px auto 50px;
    text-align: center;
  }

  .sk-led-light-work__heading {
    font-size: 48px;
    line-height: 1.15;
    font-weight: 600;
    margin: 0;
  }

  /* DESKTOP/TABLET: original rad med piler */
  .sk-led-light-work-images-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 18px;
  }

  .sk-led-light-work-image-item {
    width: 215px;
    aspect-ratio: 215 / 456;
    border-radius: 8px;
    overflow: hidden;
  }

  .sk-led-light-work-image-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    image-rendering: auto;
    -webkit-font-smoothing: antialiased;
    will-change: transform;
    backface-visibility: hidden;
  }

  .sk-led-light-work-images-container svg {
    width: 26px;
    height: 26px;
    flex: 0 0 26px;
    color: var(--color-brand);
  }

  /* MOBIL SLIDER: skjult p책 desktop, vises p책 <=700px */
  .sk-llw-swiper-{{ section.id }} {
    display: none;
  }

  .sk-llw-swiper-{{ section.id }} .swiper-slide {
    padding: 0 8px;
  }

  .sk-llw-swiper-{{ section.id }} .llw-slide {
    width: 215px;
    aspect-ratio: 215 / 456;
    border-radius: 8px;
    overflow: hidden;
    margin: 0 auto;
  }

  .sk-llw-swiper-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .sk-llw-swiper-{{ section.id }} .swiper-pagination {
    position: static;
    margin-top: 16px;
    text-align: center;
  }

  .sk-llw-swiper-{{ section.id }} .swiper-pagination-bullet {
    width: 10px; height: 10px; background: #ddd; opacity: 1;
  }
  .sk-llw-swiper-{{ section.id }} .swiper-pagination-bullet-active {
    background: #4a4458; transform: scale(1.15);
  }

  /* Responsivitet */
  @media (max-width: 700px) {
    /* Skjul desktop-layout, vis swiper */
    .sk-led-light-work-images-container { display: none; }

    .sk-llw-swiper-{{ section.id }} {
      display: block;
      max-width: 600px;
      margin: 0 auto;
      padding: 0 8px;
    }

    .sk-led-light-work__content {
      width: 100%;
      margin-bottom: 32px;
    }

    .sk-led-light-work {
      padding: 4rem 0;
    }
  }

  @media (max-width: 435px) {
    .sk-led-light-work__heading {
      font-size: 32px;
      line-height: 1.15;
    }
    .sk-llw-swiper-{{ section.id }} .llw-slide {
      width: 150px;
      aspect-ratio: 215 / 456;
    }
  }
</style>

<section class="sk-led-light-work section--full-bleed">
  <div class="page-width">
    <div class="sk-led-light-work__container">
      {% if section.settings.sk_led_light_work_heading != blank %}
        <div class="sk-led-light-work__content">
          <h2 class="sk-led-light-work__heading sk-section-heading sk-section-heading--h1">
            {{ section.settings.sk_led_light_work_heading | escape }}
          </h2>
        </div>
      {% endif %}

      {%- comment -%} DESKTOP/TABLET: original rad med piler {%- endcomment -%}
      {% if section.blocks.size > 0 %}
        <div class="sk-led-light-work-images-container">
          {% for block in section.blocks %}
            <div class="sk-led-light-work-image-item">
              {% if block.settings.sk_led_light_work_img != blank %}
                {%- assign img = block.settings.sk_led_light_work_img -%}
                <img
                  srcset="
                    {{ img | image_url: width: 220 }} 220w,
                    {{ img | image_url: width: 440 }} 440w,
                    {{ img | image_url: width: 660 }} 660w,
                    {{ img | image_url: width: 880 }} 880w
                  "
                  sizes="(max-width: 700px) 180px, 215px"
                  src="{{ img | image_url: width: 660 }}"
                  alt="{{ img.alt | escape }}"
                  loading="lazy"
                  decoding="async"
                  width="215"
                  height="456"
                >
              {% endif %}
            </div>

            {% unless forloop.last %}
              {%- capture arrow -%}{{ 'led-light-works-arrow.svg' | inline_asset_content }}{%- endcapture -%}
              {{ arrow | replace: '<svg', '<svg aria-hidden="true" focusable="false" role="presentation"' }}
            {% endunless %}
          {% endfor %}
        </div>
      {% endif %}

      {%- comment -%} MOBIL: swiper med prikker (uten midtpiler mellom slides for renere UX) {%- endcomment -%}
      {% if section.blocks.size > 0 %}
        <div class="sk-llw-swiper-{{ section.id }}">
          <div class="swiper llw-swiper-{{ section.id }}">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                {% if block.settings.sk_led_light_work_img != blank %}
                  {%- assign img = block.settings.sk_led_light_work_img -%}
                  <div class="swiper-slide">
                    <div class="llw-slide">
                      <img
                        srcset="
                          {{ img | image_url: width: 220 }} 220w,
                          {{ img | image_url: width: 440 }} 440w,
                          {{ img | image_url: width: 660 }} 660w,
                          {{ img | image_url: width: 880 }} 880w
                        "
                        sizes="(max-width: 435px) 150px, 180px"
                        src="{{ img | image_url: width: 660 }}"
                        alt="{{ img.alt | escape }}"
                        loading="lazy"
                        decoding="async"
                        width="215"
                        height="456"
                      >
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
            <div class="swiper-pagination"></div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<!-- Swiper JS (kun brukt p책 mobil) -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var container = document.querySelector('.llw-swiper-{{ section.id }}');
    if (!container) return;

    var mql = window.matchMedia('(max-width: 700px)');
    var swiperInstance = null;

    function initOrDestroy() {
      if (mql.matches && !swiperInstance) {
        swiperInstance = new Swiper(container, {
          slidesPerView: 1.2,
          spaceBetween: 14,
          centeredSlides: false,
          pagination: {
            el: container.querySelector('.swiper-pagination'),
            clickable: true,
          },
          breakpoints: {
            0: { slidesPerView: 1.2, spaceBetween: 12 },
            360: { slidesPerView: 1.4, spaceBetween: 14 },
            480: { slidesPerView: 2, spaceBetween: 16 },
          },
        });
      } else if (!mql.matches && swiperInstance) {
        swiperInstance.destroy(true, true);
        swiperInstance = null;
      }
    }

    initOrDestroy();
    if (mql.addEventListener) {
      mql.addEventListener('change', initOrDestroy);
    } else {
      mql.addListener(initOrDestroy); // eldre Safari
    }
  });
</script>

