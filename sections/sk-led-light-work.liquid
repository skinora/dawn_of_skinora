<style>
  /* Outer section */
  .sk-wavelengths {
    padding: 4rem 0;
  }

  /* Section heading */
  .sk-wavelengths__heading {
    font-size: clamp(36px, 3.5vw, 52px);
    font-weight: 600;
    color: #30273e;
    text-align: center;
    margin: 0 0 3rem 0;
    line-height: 1.1;
  }

  /* ---------- Dynamic 3-column Layout ---------- */
  .sk-wavelengths__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* auto-shared space */
    gap: clamp(32px, 4vw, 60px);
    width: 100%;
    max-width: 1500px;
    margin: 0 auto;
    padding: 0 32px;
    align-items: start;
  }

  /* IMAGE CONTAINER — takes full width of its column */
  .sk-wavelength__image-wrapper {
    width: 100%; /* full column width */
    max-width: 100%; /* no limiting */
    aspect-ratio: 1 / 0.82; /* controls vertical proportion – tweak if needed */
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* IMAGE — dynamically scales up/down */
  .sk-wavelength__image-wrapper img {
    width: 100%; /* fills container proportionally */
    height: auto; /* prevents distortion */
    object-fit: contain;
  }

  /* Title */
  .sk-wavelength__title {
    font-size: clamp(20px, 1.5vw, 26px);
    font-weight: 600;
    color: #30273e;
    text-align: center;
    margin: 1rem 0 1.25rem;
    line-height: 1.3;
  }

  /* Benefits list */
  .sk-wavelength__benefits {
    list-style: none;
    padding: 0;
    margin: 0 auto;
    max-width: 360px;
    font-size: clamp(15px, 1vw, 18px);
    line-height: 1.55;
    color: #333;
    display: flex;
    flex-direction: column;
    gap: 0.55rem;
  }

  .sk-wavelength__benefits li {
    position: relative;
    padding-left: 20px;
  }

  .sk-wavelength__benefits li::before {
    content: '•';
    position: absolute;
    left: 0;
    top: -1px;
    font-size: 20px;
    color: #30273e;
  }

  /* Hide desktop grid on mobile */
  @media (max-width: 750px) {
    .sk-wavelengths__grid {
      display: none;
    }
  }

  /* Hide mobile slider on desktop */
  @media (min-width: 751px) {
    .sk-wavelengths__slider {
      display: none !important;
    }
  }
</style>

<section class="sk-wavelengths section--full-bleed">
  <div class="page-width">
    {% if section.settings.sk_led_light_work_heading %}
      <div class="sk-wavelengths__content">
        <h2 class="sk-wavelengths__heading">
          {{ section.settings.sk_led_light_work_heading | escape }}
        </h2>
      </div>
    {% endif %}

    {% assign visible_blocks = section.blocks | where_exp: 'block', 'block.settings.sk_wavelength_visible' %}
    {% assign count = visible_blocks.size %}

    {%- comment -%}
      ============= DESKTOP 3-COLUMN GRID =============
    {%- endcomment -%}

    {% if count > 0 %}
      <div class="sk-wavelengths__grid">
        {% for block in visible_blocks %}
          <div class="sk-wavelength">
            <div class="sk-wavelength__image-wrapper">
              <img
                src="{{ block.settings.sk_wavelength_image | image_url: width: 600 }}"
                alt="{{ block.settings.sk_wavelength_heading | escape }}"
                loading="lazy"
                width="{{ block.settings.sk_wavelength_image.width }}"
                height="{{ block.settings.sk_wavelength_image.height }}"
              >
            </div>

            <h3 class="sk-wavelength__title">{{ block.settings.sk_wavelength_heading }}</h3>

            <ul class="sk-wavelength__benefits">
              {% assign items = block.settings.sk_wavelength_benefits | split: '\n' %}
              {% for item in items %}
                {% assign trimmed = item | strip %}
                {% if trimmed != blank %}
                  <li>{{ trimmed }}</li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {%- comment -%}
      ============= MOBILE SWIPER =============
      (Your original slider preserved untouched)
    {%- endcomment -%}

    {% if count > 0 %}
      <div class="sk-wavelengths__slider sk-wavelengths-swiper-{{ section.id }}">
        <div class="swiper llw-swiper-{{ section.id }}">
          <div class="swiper-wrapper">
            {% for block in visible_blocks %}
              <div class="swiper-slide">
                <div class="sk-wavelength">
                  <div class="sk-wavelength__image-wrapper">
                    <img
                      src="{{ block.settings.sk_wavelength_image | image_url: width: 600 }}"
                      alt="{{ block.settings.sk_wavelength_heading | escape }}"
                      loading="lazy"
                      width="{{ block.settings.sk_wavelength_image.width }}"
                      height="{{ block.settings.sk_wavelength_image.height }}"
                    >
                  </div>

                  <h3 class="sk-wavelength__title">{{ block.settings.sk_wavelength_heading }}</h3>

                  <ul class="sk-wavelength__benefits">
                    {% assign items = block.settings.sk_wavelength_benefits | split: '\n' %}
                    {% for item in items %}
                      {% assign trimmed = item | strip %}
                      {% if trimmed != blank %}
                        <li>{{ trimmed }}</li>
                      {% endif %}
                    {% endfor %}
                  </ul>
                </div>
              </div>
            {% endfor %}
          </div>

          <div class="swiper-pagination"></div>
        </div>
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var mql = window.matchMedia('(max-width: 750px)');
    var swiperInstance = null;
    var container = document.querySelector('.sw-{{ section.id }}');

    function setup() {
      if (mql.matches && !swiperInstance) {
        swiperInstance = new Swiper(container, {
          slidesPerView: 1,
          spaceBetween: 20,
          pagination: {
            el: container.querySelector('.swiper-pagination'),
            clickable: true,
          },
        });
      } else if (!mql.matches && swiperInstance) {
        swiperInstance.destroy(true, true);
        swiperInstance = null;
      }
    }

    setup();
    mql.addEventListener('change', setup);
  });
</script>

