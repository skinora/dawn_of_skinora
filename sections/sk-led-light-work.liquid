<style>
  /* SECTION WRAPPER */
  .sk-wavelengths {
    padding: 4rem 0 6rem;
  }

  /* TITLE */
  .sk-wavelengths__heading {
    text-align: center;
    font-size: clamp(32px, 2.8vw, 48px);
    font-weight: 700;
    color: #2d2640;
    margin-bottom: 3rem;
  }

  /* DESKTOP GRID */
  .sk-wavelengths__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 48px;
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 24px;
    align-items: stretch;
  }

  /* CARD */
  .sk-wavelength {
    background: #ffffff;
    border-radius: 24px;
    padding: 32px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  /* IMAGE WRAPPER */
  .sk-wavelength__visual {
    width: 100%;
    max-width: 550px; /* üí• max image width on big screens */
    margin: 0 auto 24px;
  }

  /* IMAGE ITSELF */
  .sk-wavelength__visual img {
    width: 100%;
    height: auto;
    object-fit: contain; /* üí• FIX: never stretches */
    display: block;
  }

  /* TITLE */
  .sk-wavelength__title {
    margin-top: 12px;
    margin-bottom: 16px;
    font-size: 20px;
    font-weight: 700;
    color: #2d2640;
  }

  /* BENEFITS LIST */
  .sk-wavelength__benefits {
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 16px;
    line-height: 1.55;
    color: #333;
    text-align: left;
  }

  .sk-wavelength__benefits li {
    padding-left: 22px;
    position: relative;
    margin-bottom: 10px;
  }

  .sk-wavelength__benefits li::before {
    content: '‚úî';
    font-size: 14px;
    color: #2d2640;
    position: absolute;
    left: 0;
    top: 3px;
  }

  /* MOBILE ‚Äî USE SWIPER ONLY */
  @media (max-width: 750px) {
    .sk-wavelengths__grid {
      display: none;
    }
  }
</style>

<section class="sk-wavelengths section--full-bleed">
  <div class="page-width">
    {% if section.settings.sk_led_light_work_heading != blank %}
      <h2 class="sk-wavelengths__heading">
        {{ section.settings.sk_led_light_work_heading }}
      </h2>
    {% endif %}

    <!-- DESKTOP GRID -->
    <div class="sk-wavelengths__grid">
      {% for block in section.blocks %}
        <div class="sk-wavelength">
          <!-- IMAGE -->
          <div class="sk-wavelength__visual">
            <img
              src="{{ block.settings.sk_wavelength_image | image_url: width: 900 }}"
              alt="{{ block.settings.sk_wavelength_heading | escape }}"
              loading="lazy"
              width="{{ block.settings.sk_wavelength_image.width }}"
              height="{{ block.settings.sk_wavelength_image.height }}"
            >
          </div>

          <!-- TEXT -->
          <h3 class="sk-wavelength__title">{{ block.settings.sk_wavelength_heading }}</h3>

          <ul class="sk-wavelength__benefits">
            {% assign items = block.settings.sk_wavelength_benefits | split: '\n' %}
            {% for item in items %}
              {% assign line = item | strip %}
              {% if line != blank %}
                <li>{{ line }}</li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </div>

    <!-- MOBILE SWIPER (unchanged, keep your existing block) -->
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var mql = window.matchMedia('(max-width: 750px)');
    var swiperInstance = null;
    var container = document.querySelector('.sw-{{ section.id }}');

    function setup() {
      if (mql.matches && !swiperInstance) {
        swiperInstance = new Swiper(container, {
          slidesPerView: 1,
          spaceBetween: 20,
          pagination: {
            el: container.querySelector('.swiper-pagination'),
            clickable: true,
          },
        });
      } else if (!mql.matches && swiperInstance) {
        swiperInstance.destroy(true, true);
        swiperInstance = null;
      }
    }

    setup();
    mql.addEventListener('change', setup);
  });
</script>

