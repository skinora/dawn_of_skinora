<style>
  /* === SECTION WRAPPER === */
  .sk-wavelengths {
    padding: 4rem 0 6rem;
  }

  .sk-header__section {
    text-align: center;
    margin-bottom: 3rem;
    color: inherit;
  }

  /* === DESKTOP GRID === */
  .sk-wavelengths__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 48px;
    max-width: 1800px;
    margin: 0 auto;
    padding: 0 24px;
    align-items: start;
  }

  .sk-wavelengths__slider {
    display: none;
  }

  /* === CARD WRAPPER === */
  .sk-wavelength {
    background: #ffffff;
    border-radius: 22px;
    padding: 32px;
    box-shadow: 0 18px 38px rgba(0, 0, 0, 0.06);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* === IMAGE WRAPPER === */
  .sk-wavelength__visual {
    width: 100%;
    max-width: 550px; /* Sweet spot for large images */
    margin: 0 auto 24px;
    aspect-ratio: 1 / 0.75; /* Keeps layout stable */
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sk-wavelength__visual img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  /* === TITLES === */
  .sk-wavelength__title {
    font-size: 22px;
    font-weight: 700;
    color: rgb(var(--sk-color-heading-text));
    margin-top: 4px;
    margin-bottom: 16px;
    line-height: 1.3;
  }

  /* === BENEFITS LIST === */
  .sk-wavelength__benefits {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
    margin-top: 12px;
    width: 100%;
    max-width: 500px;
  }

  .sk-wavelength__benefits li {
    font-size: 16px;
    color: rgb(var(--sk-color-body-text));
    margin-bottom: 8px;
    padding-left: 22px;
    position: relative;
    line-height: 1.45;
  }

  .sk-wavelength__benefits li::before {
    content: '•';
    position: absolute;
    left: 0;
    top: 0;
    color: rgb(var(--sk-color-heading-text));
    font-size: 20px;
  }

  /* === MOBILE SLIDER — same as before === */
  @media (max-width: 750px) {
    .sk-wavelengths__grid {
      display: none;
    }
    .sk-wavelengths__slider {
      display: block;
    }
    .sk-wavelength {
      box-shadow: none;
      padding: 24px 12px;
    }
    .sk-wavelength__visual {
      max-width: 420px;
    }
    .sk-wavelength__title {
      font-size: 20px;
    }
    .sk-wavelength__benefits li {
      font-size: 15px;
    }
  }
</style>

<section class="sk-wavelengths section--full-bleed">
  <div class="page-width">
    {% if section.settings.sk_led_light_work_heading != blank %}
      <h1 class="sk-header__section sk-section-heading sk-section-heading--h1">
        {{ section.settings.sk_led_light_work_heading }}
      </h1>
    {% endif %}

    {% assign visible_blocks = section.blocks | where_exp: 'block', 'block.settings.sk_wavelength_visible != false' %}

    <!-- DESKTOP GRID -->
    <div class="sk-wavelengths__grid">
      {% for block in visible_blocks %}
        <div class="sk-wavelength">
          <div class="sk-wavelength__visual">
            <img
              src="{{ block.settings.sk_wavelength_image | image_url: width: 1000 }}"
              alt="{{ block.settings.sk_wavelength_heading | escape }}"
              loading="lazy"
              width="{{ block.settings.sk_wavelength_image.width }}"
              height="{{ block.settings.sk_wavelength_image.height }}"
            >
          </div>

          <h3 class="sk-wavelength__title">
            {{ block.settings.sk_wavelength_heading }}
          </h3>

          <ul class="sk-wavelength__benefits">
            {% assign items = block.settings.sk_wavelength_benefits | split: '\n' %}
            {% for item in items %}
              {% assign line = item | strip %}
              {% if line != blank %}
                <li>{{ line }}</li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </div>

    <!-- MOBILE SWIPER -->
    <div class="sk-wavelengths__slider sk-wavelengths-swiper-{{ section.id }}">
      <div class="swiper llw-swiper-{{ section.id }}">
        <div class="swiper-wrapper">
          {% for block in visible_blocks %}
            <div class="swiper-slide">
              <div class="sk-wavelength">
                <div class="sk-wavelength__visual">
                  <img
                    src="{{ block.settings.sk_wavelength_image | image_url: width: 800 }}"
                    alt="{{ block.settings.sk_wavelength_heading | escape }}"
                    loading="lazy"
                    width="{{ block.settings.sk_wavelength_image.width }}"
                    height="{{ block.settings.sk_wavelength_image.height }}"
                  >
                </div>

                <h3 class="sk-wavelength__title">
                  {{ block.settings.sk_wavelength_heading }}
                </h3>

                <ul class="sk-wavelength__benefits">
                  {% assign items = block.settings.sk_wavelength_benefits | split: '\n' %}
                  {% for item in items %}
                    {% assign line = item | strip %}
                    {% if line != blank %}
                      <li>{{ line }}</li>
                    {% endif %}
                  {% endfor %}
                </ul>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var mql = window.matchMedia('(max-width: 750px)');
    var swiperInstance = null;

    var container = document.querySelector('.sk-wavelengths-swiper-{{ section.id }} .swiper');

    function setup() {
      if (mql.matches && !swiperInstance) {
        swiperInstance = new Swiper(container, {
          slidesPerView: 1,
          spaceBetween: 20,
          pagination: {
            el: container.querySelector('.swiper-pagination'),
            clickable: true,
          },
        });
      } else if (!mql.matches && swiperInstance) {
        swiperInstance.destroy(true, true);
        swiperInstance = null;
      }
    }

    setup();
    mql.addEventListener('change', setup);
  });
</script>

{% schema %}
{
  "name": "SK Led Light Work",
  "settings": [
    {
      "type": "text",
      "id": "sk_led_light_work_heading",
      "label": "Title",
      "default": "Hvordan Fungerer Skinora LED Lys"
    }
  ],
  "blocks": [
    {
      "type": "wavelength",
      "name": "Wavelength",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "sk_wavelength_image",
          "label": "Image"
        },
        {
          "type": "checkbox",
          "id": "sk_wavelength_visible",
          "label": "Display block",
          "default": true
        },
        {
          "type": "text",
          "id": "sk_wavelength_heading",
          "label": "Heading",
          "default": "630 nm Rødt Lys"
        },
        {
          "type": "textarea",
          "id": "sk_wavelength_benefits",
          "label": "Benefits",
          "default": "Stimulerer kollagen\nForbedrer glød\nFremmer redusert fine linjer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SK Led Light Work",
      "blocks": [{ "type": "wavelength" }, { "type": "wavelength" }, { "type": "wavelength" }]
    }
  ]
}
{% endschema %}
