<style>
  /* === SECTION WRAPPER === */
  .sk-wavelengths {
    --sk-color-brand: #30273e;
    --sk-color-neutral: #6c6c6c;
    --sk-color-border: #e6e6e6;
    --sk-color-body: #333333;
    --sk-color-tag-text: #ffffff;
    --sk-color-neutral-dark: #4c4c4c;
    --sk-spacing-unit: 4px;
    --sk-title-block-height: calc(var(--sk-spacing-unit) * 22);
    padding: 4rem 0 4rem;
    background: #ffffff;
  }

  .sk-header__section {
    text-align: center;
    margin-bottom: calc(var(--sk-spacing-unit) * 4);
    color: inherit;
  }

  .sk-wavelengths__eyebrow {
    margin: 0 0 0.5rem;
    font-size: 12px;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: var(--sk-color-neutral);
    font-weight: 500;
    text-align: center;
  }

  /* === DESKTOP GRID === */
  .sk-wavelengths__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 48px;
    max-width: 1800px;
    margin: calc(var(--sk-spacing-unit) * 6) auto 0;
    padding: 0 24px;
    align-items: start;
  }

  .sk-wavelengths__slider {
    display: none;
    margin-top: calc(var(--sk-spacing-unit) * 3);
    position: relative;
    padding: 0 24px;
  }

  .sk-wavelengths__empty {
    text-align: center;
    color: var(--sk-color-neutral);
    font-size: 14px;
    margin-top: 1rem;
  }

  /* === CARD WRAPPER === */
  .sk-wavelength {
    background: #ffffff;
    border-radius: 8px;
    padding: 32px;
    border: none;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: none;
    position: relative;
    overflow: visible;
    margin-top: calc(var(--sk-spacing-unit) * 2);
  }

  .sk-wavelength--has-tag {
    margin-top: calc(var(--sk-spacing-unit) * 6);
  }

  /* === IMAGE WRAPPER === */
  .sk-wavelength__visual {
    width: 100%;
    max-width: 550px;
    margin: 0 auto 16px;
    aspect-ratio: 1 / 0.75;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sk-wavelength__visual img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
    border-radius: 8px !important;
  }

  .sk-tag {
    position: absolute;
    top: -18px;
    left: 50%;
    transform: translateX(-50%);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 1.2px;
    padding: 7px 20px;
    color: var(--sk-color-tag-text);
    background: var(--sk-color-brand);
    border-radius: 999px;
    text-transform: uppercase;
    white-space: nowrap;
    overflow: hidden;
    isolation: isolate;
  }

  .sk-tag::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(120deg, transparent 0%, rgba(255, 255, 255, 0.7) 45%, transparent 90%);
    transform: translateX(-150%);
    pointer-events: none;
    z-index: -1;
    opacity: 0;
  }

  .sk-tag.sk-tag--shimmer::after {
    animation: sk-tag-shimmer 1.4s ease-out forwards;
    opacity: 1;
  }

  @keyframes sk-tag-shimmer {
    0% {
      transform: translateX(-150%);
      opacity: 0;
    }
    20% {
      opacity: 1;
    }
    60% {
      transform: translateX(150%);
      opacity: 1;
    }
    100% {
      transform: translateX(150%);
      opacity: 0;
    }
  }

  .sk-wavelength__eyebrow {
    margin: 0;
    font-size: 12px;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: var(--sk-color-neutral);
    font-weight: 500;
  }

  .sk-wavelength__header {
    min-height: var(--sk-title-block-height);
    max-height: var(--sk-title-block-height);
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: calc(var(--sk-spacing-unit) * 2);
    margin-bottom: calc(var(--sk-spacing-unit) * 6);
    overflow: hidden;
  }

  /* === TITLES === */
  .sk-wavelength__title {
    font-size: 22px;
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
    color: var(--sk-color-brand);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* === BENEFITS LIST === */
  .sk-wavelength__benefits {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
    margin-top: 0;
    width: 100%;
    max-width: 500px;
  }

  .sk-wavelength__benefits li {
    font-size: 20px;
    margin-bottom: 8px;
    display: grid;
    grid-template-columns: 10px 1fr;
    column-gap: 8px;
    align-items: center;
    line-height: 1.3;
    color: var(--sk-color-neutral-dark);
    font-weight: 400;
  }

  .sk-wavelength__benefits li::before {
    content: '';
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--sk-color-brand);
    margin-top: 0;
  }

  .sk-wavelengths__slider .swiper {
    padding: 28px 0 24px;
    overflow: visible;
    width: calc(100% + 48px);
    margin-left: -24px;
    margin-right: -24px;
  }

  .sk-wavelengths__slider .swiper-pagination {
    position: static;
    margin: 4px auto 0;
    width: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 6px;
  }

  .sk-wavelengths__slider .swiper-pagination-bullet {
    margin: 0;
  }

  .sk-wavelengths__arrow {
    position: absolute;
    top: 50%;
    width: 34px;
    height: 34px;
    border: none;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 5;
    color: rgba(48, 39, 62, 0.35);
    font-size: 26px;
    line-height: 1;
    transform: translateY(-50%);
    transition: color 0.2s ease, opacity 0.2s ease;
    pointer-events: auto;
    text-shadow: 0 3px 10px rgba(0, 0, 0, 0.18);
    padding: 8px;
  }

  .sk-wavelengths__arrow--prev {
    left: 12px;
  }

  .sk-wavelengths__arrow--next {
    right: 12px;
  }

  .sk-wavelengths__arrow:hover {
    color: rgba(48, 39, 62, 0.6);
  }

  .sk-wavelengths__arrow.swiper-button-disabled {
    opacity: 0;
    pointer-events: none;
  }

  .sk-wavelengths__arrow-icon {
    width: 18px;
    height: 18px;
    border: 1.5px solid currentColor;
    border-bottom: none;
    border-left: none;
    display: inline-block;
    filter: drop-shadow(0 1px 2px rgba(48, 39, 62, 0.15));
  }

  .sk-wavelengths__arrow--prev .sk-wavelengths__arrow-icon {
    transform: rotate(225deg);
  }

  .sk-wavelengths__arrow--next .sk-wavelengths__arrow-icon {
    transform: rotate(45deg);
  }

  .sk-wavelengths__slider .swiper-button-prev::after,
  .sk-wavelengths__slider .swiper-button-next::after {
    display: none;
  }

  /* === MOBILE SLIDER === */
  @media (max-width: 750px) {
    .sk-wavelengths__grid {
      display: none;
    }
    .sk-wavelengths__slider {
      display: block;
      margin-top: calc(var(--sk-spacing-unit) * -3);
    }
    .sk-wavelengths {
      --sk-title-block-height: calc(var(--sk-spacing-unit) * 20);
    }
    .sk-wavelength {
      padding: 20px 12px;
      margin-top: calc(var(--sk-spacing-unit) * -2);
    }
    .sk-wavelength--has-tag {
      margin-top: calc(var(--sk-spacing-unit) * 1);
    }
    .sk-wavelengths__arrow {
      width: auto;
      height: auto;
      padding: 14px;
      box-shadow: none;
    }
    .sk-wavelength__visual {
      max-width: 480px;
      width: calc(100% + 24px);
      margin: 0 -12px 16px;
    }
    .sk-wavelength__title {
      font-size: 20px;
    }
    .sk-wavelength__benefits li {
      font-size: 17px;
    }
  }
</style>

<section id="sk-wavelengths-{{ section.id }}" class="sk-wavelengths section--full-bleed sk-body-text--strong">
  <div class="page-width">
    {% if section.settings.sk_led_light_work_eyebrow != blank %}
      <p class="sk-wavelengths__eyebrow">
        {{ section.settings.sk_led_light_work_eyebrow }}
      </p>
    {% endif %}

    {% if section.settings.sk_led_light_work_heading != blank %}
      <h1 class="sk-header__section sk-section-heading sk-section-heading--h1 sk-heading-text--strong sk-heading-size--large">
        {{ section.settings.sk_led_light_work_heading }}
      </h1>
    {% endif %}

    {% liquid
      assign sk_metafield_handle = 'product.metafields.custom["led_light_work_cards"]'
    %}

    {% if product.metafields.custom.led_light_work_cards.value != blank %}
      {% assign sk_cards = product.metafields.custom.led_light_work_cards.value %}
      <!-- DESKTOP GRID -->
      <div class="sk-wavelengths__grid">
        {% for card in sk_cards %}
          {% liquid
            assign card_image = card.image.value | default: card.image
            assign card_eyebrow = card.eyebrow.value | default: card.eyebrow
            assign card_title = card.title.value | default: card.title
            assign title_parts = card_title | split: '|'
            assign card_primary_title = ''
            assign card_secondary_title = ''
            if title_parts.size > 1
              assign card_primary_title = title_parts[0] | strip
              assign card_secondary_title = title_parts[1] | strip
            else
              assign card_secondary_title = card_title | strip
            endif
            assign card_benefits = card.benefits.value | default: card.benefits
            assign card_highlight_tag = card.highlight_tag_text.value | default: card.highlight_tag_text
            assign card_show_highlight = card.show_highlight_text.value | default: card.show_highlight_text
          %}
          <div class="sk-wavelength{% if card_show_highlight %} sk-wavelength--has-tag{% endif %}">
            {% if card_show_highlight %}
              <span class="sk-tag">
                {{ card_highlight_tag | default: 'NY DYPTVIRKENDE BØLGELENGDE' }}
              </span>
            {% endif %}

            {% if card_image %}
              <div class="sk-wavelength__visual">
                <img
                  src="{{ card_image | image_url: width: 1000 }}"
                  alt="{{ card_title | default: 'Skinora LED lys' | escape }}"
                  loading="lazy"
                  width="{{ card_image.width | default: 1000 }}"
                  height="{{ card_image.height | default: 750 }}"
                >
              </div>
            {% endif %}

            {% if card_eyebrow != blank or card_primary_title != blank or card_secondary_title != blank %}
              <div class="sk-wavelength__header">
                {% if card_eyebrow != blank %}
                  <p class="sk-wavelength__eyebrow">{{ card_eyebrow }}</p>
                {% endif %}

                {% if card_primary_title != blank or card_secondary_title != blank %}
                  <h3 class="sk-wavelength__title">
                    {% if card_primary_title != blank %}
                      {{ card_primary_title }}
                    {% endif %}
                    {% if card_primary_title != blank and card_secondary_title != blank %}
                      |
                    {% endif %}
                    {% if card_secondary_title != blank %}
                      <em>{{ card_secondary_title }}</em>
                    {% endif %}
                  </h3>
                {% endif %}
              </div>
            {% endif %}

            {% if card_benefits != blank %}
              <ul class="sk-wavelength__benefits">
                {% assign items = card_benefits | newline_to_br | split: '<br />' %}
                {% for item in items %}
                  {% assign line = item | strip %}
                  {% if line != blank %}
                    <li>{{ line }}</li>
                  {% endif %}
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      <!-- MOBILE SWIPER -->
      <div class="sk-wavelengths__slider sk-wavelengths-swiper-{{ section.id }}">
        <div class="swiper llw-swiper-{{ section.id }}">
          <div class="swiper-wrapper">
            {% for card in product.metafields.custom.led_light_work_cards.value %}
              {% liquid
                assign card_image = card.image.value | default: card.image
                assign card_eyebrow = card.eyebrow.value | default: card.eyebrow
                assign card_title = card.title.value | default: card.title
                assign title_parts = card_title | split: '|'
                assign card_primary_title = ''
                assign card_secondary_title = ''
                if title_parts.size > 1
                  assign card_primary_title = title_parts[0] | strip
                  assign card_secondary_title = title_parts[1] | strip
                else
                  assign card_secondary_title = card_title | strip
                endif
                assign card_benefits = card.benefits.value | default: card.benefits
                assign card_highlight_tag = card.highlight_tag_text.value | default: card.highlight_tag_text
                assign card_show_highlight = card.show_highlight_text.value | default: card.show_highlight_text
              %}
              <div class="swiper-slide">
                <div class="sk-wavelength{% if card_show_highlight %} sk-wavelength--has-tag{% endif %}">
                  {% if card_show_highlight %}
                    <span class="sk-tag">
                      {{ card_highlight_tag | default: 'NY DYPTVIRKENDE BØLGELENGDE' }}
                    </span>
                  {% endif %}

                  {% if card_image %}
                    <div class="sk-wavelength__visual">
                      <img
                        src="{{ card_image | image_url: width: 800 }}"
                        alt="{{ card_title | default: 'Skinora LED lys' | escape }}"
                        loading="lazy"
                        width="{{ card_image.width | default: 800 }}"
                        height="{{ card_image.height | default: 600 }}"
                      >
                    </div>
                  {% endif %}

                  {% if card_eyebrow != blank or card_primary_title != blank or card_secondary_title != blank %}
                    <div class="sk-wavelength__header">
                      {% if card_eyebrow != blank %}
                        <p class="sk-wavelength__eyebrow">{{ card_eyebrow }}</p>
                      {% endif %}

                      {% if card_primary_title != blank or card_secondary_title != blank %}
                        <h3 class="sk-wavelength__title">
                          {% if card_primary_title != blank %}
                            {{ card_primary_title }}
                          {% endif %}
                          {% if card_primary_title != blank and card_secondary_title != blank %}
                            |
                          {% endif %}
                          {% if card_secondary_title != blank %}
                            <em>{{ card_secondary_title }}</em>
                          {% endif %}
                        </h3>
                      {% endif %}
                    </div>
                  {% endif %}

                  {% if card_benefits != blank %}
                    <ul class="sk-wavelength__benefits">
                      {% assign items = card_benefits | newline_to_br | split: '<br />' %}
                      {% for item in items %}
                        {% assign line = item | strip %}
                        {% if line != blank %}
                          <li>{{ line }}</li>
                        {% endif %}
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="swiper-pagination"></div>
        </div>
        <button
          type="button"
          class="sk-wavelengths__arrow sk-wavelengths__arrow--prev swiper-button-prev"
          aria-label="Forrige lysbilde"
        >
          <span class="sk-wavelengths__arrow-icon" aria-hidden="true"></span>
        </button>
        <button
          type="button"
          class="sk-wavelengths__arrow sk-wavelengths__arrow--next swiper-button-next"
          aria-label="Neste lysbilde"
        >
          <span class="sk-wavelengths__arrow-icon" aria-hidden="true"></span>
        </button>
      </div>
    {% else %}
      {% if request.design_mode %}
        <p class="sk-wavelengths__empty">
          Ingen data funnet. Legg til metaobjekter på <code>{{ sk_metafield_handle }}</code> for å fylle ut kortene.
        </p>
      {% endif %}
    {% endif %}
  </div>
</section>

<script>
  var skShimmerObserver = null;

  function skTriggerShimmer(tag) {
    if (!tag) return;
    tag.classList.remove('sk-tag--shimmer');
    // Force reflow to restart animation
    void tag.offsetWidth;
    tag.classList.add('sk-tag--shimmer');
    window.setTimeout(function () {
      tag.classList.remove('sk-tag--shimmer');
    }, 1600);
  }

  function skTriggerAllShimmers(scope) {
    var root = scope || document;
    var selector = root === document ? '.sk-wavelengths .sk-tag' : '.sk-tag';
    root.querySelectorAll(selector).forEach(skTriggerShimmer);
  }

  function skInitShimmerObserver(scopeEl) {
    var root = scopeEl || document;

    if (!('IntersectionObserver' in window)) {
      skTriggerAllShimmers(root);
      return null;
    }

    if (skShimmerObserver) {
      skShimmerObserver.disconnect();
      skShimmerObserver = null;
    }

    skShimmerObserver = new IntersectionObserver(
      function (entries) {
        entries.forEach(function (entry) {
          if (entry.isIntersecting) {
            entry.target.querySelectorAll('.sk-tag').forEach(skTriggerShimmer);
          }
        });
      },
      {
        threshold: [0, 0.45],
        rootMargin: '0px 0px -10% 0px',
      }
    );

    root.querySelectorAll('.sk-wavelength').forEach(function (card) {
      skShimmerObserver.observe(card);
    });

    return skShimmerObserver;
  }

  document.addEventListener('DOMContentLoaded', function () {
    var sectionEl = document.getElementById('sk-wavelengths-{{ section.id }}');
    if (!sectionEl) {
      skTriggerAllShimmers();
      return;
    }

    skInitShimmerObserver(sectionEl);
    var mql = window.matchMedia('(max-width: 750px)');
    var swiperInstance = null;
    var sliderRoot = sectionEl.querySelector('.sk-wavelengths-swiper-{{ section.id }}');
    var container = sliderRoot ? sliderRoot.querySelector('.swiper') : null;

    function setup() {
      if (!container) return;

      if (mql.matches && !swiperInstance) {
        var options = {
          slidesPerView: 1,
          spaceBetween: 20,
        };

        var paginationEl = container.querySelector('.swiper-pagination');
        if (paginationEl) {
          options.pagination = {
            el: paginationEl,
            clickable: true,
          };
        }

        var prevArrow = sliderRoot ? sliderRoot.querySelector('.sk-wavelengths__arrow--prev') : null;
        var nextArrow = sliderRoot ? sliderRoot.querySelector('.sk-wavelengths__arrow--next') : null;
        if (prevArrow && nextArrow) {
          options.navigation = {
            prevEl: prevArrow,
            nextEl: nextArrow,
          };
        }

        options.on = {
          slideChangeTransitionStart: function (swiper) {
            var activeSlide = swiper.slides ? swiper.slides[swiper.activeIndex] : null;
            if (activeSlide) {
              activeSlide.querySelectorAll('.sk-tag').forEach(skTriggerShimmer);
            }
          },
        };

        swiperInstance = new Swiper(container, options);
        // Initial shimmer on the first slide
        var initialSlide = swiperInstance.slides ? swiperInstance.slides[swiperInstance.activeIndex] : null;
        if (initialSlide) {
          initialSlide.querySelectorAll('.sk-tag').forEach(skTriggerShimmer);
        }
      } else if (!mql.matches && swiperInstance) {
        swiperInstance.destroy(true, true);
        swiperInstance = null;
      }
    }

    setup();
    mql.addEventListener('change', setup);
    skTriggerAllShimmers(sectionEl);
  });
</script>

