{{ 'section-sk-blog-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<div class="sk-blog-grid section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="sk-blog-grid__header">
      <div class="sk-blog-grid__heading-section">
        {%- if section.settings.heading != blank -%}
          <h1 class="sk-header__section sk-blog-grid__heading sk-section-heading sk-section-heading--h1{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
            {{ section.settings.heading | escape }}
          </h1>
        {%- endif -%}
      </div>

      <div class="sk-blog-grid__content-section">
        {%- if section.settings.description != blank -%}
          <div class="sk-blog-grid__description{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    </div>

    {%- if section.blocks.size > 0 -%}
      <div class="sk-blog-grid__posts" data-posts-per-page="{{ section.settings.posts_per_page }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'blog_post' -%}
              <article
                class="sk-blog-grid__post{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                data-post-index="{{ forloop.index }}"
                {{ block.shopify_attributes }}
              >
                <a
                  href="{{ block.settings.post_link | default: '#' }}"
                  class="sk-blog-grid__post-link"
                >
                  <div class="sk-blog-grid__post-image-wrapper">
                    {%- if block.settings.post_image != blank -%}
                      <img
                        srcset="
                          {%- if block.settings.post_image.width >= 300 -%}{{ block.settings.post_image | image_url: width: 300 }} 300w,{%- endif -%}
                          {%- if block.settings.post_image.width >= 400 -%}{{ block.settings.post_image | image_url: width: 400 }} 400w,{%- endif -%}
                          {%- if block.settings.post_image.width >= 500 -%}{{ block.settings.post_image | image_url: width: 500 }} 500w,{%- endif -%}
                          {{ block.settings.post_image | image_url }} {{ block.settings.post_image.width }}w
                        "
                        src="{{ block.settings.post_image | image_url: width: 400 }}"
                        sizes="400px"
                        alt="{{ block.settings.post_image.alt | escape }}"
                        class="sk-blog-grid__post-image"
                        width="{{ block.settings.post_image.width }}"
                        height="{{ block.settings.post_image.height }}"
                        loading="lazy"
                      >
                    {%- endif -%}
                    <div class="sk-blog-grid__post-overlay">
                      <div class="sk-blog-grid__post-content">
                        {%- if block.settings.post_title != blank -%}
                          <h3 class="sk-blog-grid__post-title">
                            {{ block.settings.post_title | escape }}
                          </h3>
                        {%- endif -%}
                        {%- if block.settings.post_subtitle != blank -%}
                          <p class="sk-blog-grid__post-subtitle">
                            {{ block.settings.post_subtitle | escape }}
                          </p>
                        {%- endif -%}
                      </div>
                    </div>
                  </div>
                </a>
              </article>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if section.settings.show_pagination -%}
      <div class="sk-blog-grid__pagination">
        <div class="sk-blog-grid__pagination-wrapper" data-pagination-section="{{ section.id }}">
          <!-- Pagination buttons will be generated by JavaScript -->
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  (function () {
    const sectionId = '{{ section.id }}';
    const postsContainer = document.querySelector('.sk-blog-grid__posts');
    const paginationWrapper = document.querySelector('[data-pagination-section="' + sectionId + '"]');

    if (!postsContainer) return;

    const postsPerPage = parseInt(postsContainer.dataset.postsPerPage) || 6;
    const allPosts = Array.from(postsContainer.querySelectorAll('.sk-blog-grid__post'));
    const totalPosts = allPosts.length;
    const totalPages = Math.ceil(totalPosts / postsPerPage);
    let currentPage = 1;

    function smoothScrollTo(element, duration = 800) {
      const targetPosition = element.getBoundingClientRect().top + window.pageYOffset;
      const startPosition = window.pageYOffset;
      const distance = targetPosition - startPosition;
      let startTime = null;

      function animation(currentTime) {
        if (startTime === null) startTime = currentTime;
        const timeElapsed = currentTime - startTime;
        const run = ease(timeElapsed, startPosition, distance, duration);
        window.scrollTo(0, run);
        if (timeElapsed < duration) requestAnimationFrame(animation);
      }

      // Easing function for smooth animation
      function ease(t, b, c, d) {
        t /= d / 2;
        if (t < 1) return (c / 2) * t * t + b;
        t--;
        return (-c / 2) * (t * (t - 2) - 1) + b;
      }

      requestAnimationFrame(animation);
    }

    function showPage(pageNumber) {
      const startIndex = (pageNumber - 1) * postsPerPage;
      const endIndex = startIndex + postsPerPage;

      allPosts.forEach((post, index) => {
        const postIndex = parseInt(post.dataset.postIndex);
        if (postIndex > startIndex && postIndex <= endIndex) {
          post.style.display = '';
        } else {
          post.style.display = 'none';
        }
      });

      currentPage = pageNumber;
      updatePaginationButtons();

      // Smooth scroll to top of section with custom duration
      const section = postsContainer.closest('.sk-blog-grid');
      if (section) {
        section.scrollIntoView({ behavior: 'instant', block: 'start' });
        // smoothScrollTo(section, 1000); // Duration in milliseconds (1000ms = 1 second)
      }
    }

    function updatePaginationButtons() {
      if (!paginationWrapper) return;

      paginationWrapper.innerHTML = '';

      // Determine which page numbers to show
      let pagesToShow = [];

      if (totalPages <= 5) {
        // Show all pages if 5 or fewer
        for (let i = 1; i <= totalPages; i++) {
          pagesToShow.push(i);
        }
      } else {
        // Show first page, current page area, and last page
        pagesToShow.push(1);

        if (currentPage > 3) {
          // Add ellipsis
          pagesToShow.push('...');
        }

        // Show pages around current page
        for (let i = Math.max(2, currentPage - 1); i <= Math.min(totalPages - 1, currentPage + 1); i++) {
          if (!pagesToShow.includes(i)) {
            pagesToShow.push(i);
          }
        }

        if (currentPage < totalPages - 2) {
          // Add ellipsis
          pagesToShow.push('...');
        }

        if (!pagesToShow.includes(totalPages)) {
          pagesToShow.push(totalPages);
        }
      }

      // Create buttons
      pagesToShow.forEach((page) => {
        if (page === '...') {
          const ellipsis = document.createElement('span');
          ellipsis.textContent = '...';
          ellipsis.className = 'sk-blog-grid__pagination-ellipsis';
          ellipsis.style.display = 'flex';
          ellipsis.style.alignItems = 'center';
          ellipsis.style.padding = '0 8px';
          ellipsis.style.color = '#6C6C6C';
          paginationWrapper.appendChild(ellipsis);
        } else {
          const button = document.createElement('button');
          button.textContent = page;
          button.className = 'sk-blog-grid__pagination-btn';

          if (page === currentPage) {
            button.classList.add('sk-blog-grid__pagination-btn--active');
            button.setAttribute('aria-current', 'page');
          }

          button.addEventListener('click', function () {
            showPage(page);
          });

          paginationWrapper.appendChild(button);
        }
      });
    }

    // Initialize pagination
    if (totalPages > 1 && paginationWrapper) {
      showPage(1);
    } else if (paginationWrapper) {
      // Hide pagination if only one page
      const paginationContainer = paginationWrapper.closest('.sk-blog-grid__pagination');
      if (paginationContainer) {
        paginationContainer.style.display = 'none';
      }
    }
  })();
</script>

