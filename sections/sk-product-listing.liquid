{% comment %}
  SK Product Listing Section
  Displays a grid of products with product cards matching the Skinora design
{% endcomment %}
<style>
  .sk-product-listing {
    padding: 7rem 0;
  }

  .sk-product-listing__header {
    text-align: center;
    margin-bottom: 50px;
    width: 65%;
    margin: auto;
    margin-bottom: 70px;
  }

  .sk-product-listing__title {
    margin-bottom: 15px;
    font-size: clamp(var(--sk-font-size-xl), 3vw, var(--sk-font-size-3xl));
  }

  .sk-product-listing__subtitle {
    margin-bottom: 0;
  }

  .sk-product-listing__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: clamp(1.5rem, 2vw, 3rem);
    align-items: stretch;
  }

  .sk-product-card {
    text-align: center;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: stretch;
    max-width: none;
    margin: 0;
    min-height: 0;
  }

  .sk-product-card__image {
    position: relative;
    width: 100%;
    height: 0;
    padding-top: 100%;
    margin: auto;
    margin-bottom: 25px;
    border-radius: 0;
    overflow: visible;
  }

  .sk-product-card__image-primary,
  .sk-product-card__image-secondary {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.35s ease, transform 0.35s ease;
  }

  .sk-product-card__image-secondary {
    opacity: 0;
  }

  .sk-product-card:hover .sk-product-card__image-primary {
    opacity: 0;
  }

  .sk-product-card:hover .sk-product-card__image-secondary {
    opacity: 1;
  }

  .sk-product-card__image-placeholder {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    color: var(--color-neutral-5);
    font-size: var(--sk-font-size-xxs);
  }

  .sk-product-card__badge {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 120px;
    height: 120px;
    border-radius: 999px;
    text-transform: uppercase;
    letter-spacing: 0.35em;
    font-size: 0.75rem;
    font-weight: 700;
    top: -30px;
    right: -20px;
    padding: 0.75rem;
    text-align: center;
    background: var(--color-brand);
    color: var(--color-white);
    box-shadow: 0 15px 25px rgba(15, 10, 30, 0.3);
    z-index: 2;
    opacity: 0.95;
    pointer-events: none;
    font-family: var(--font-heading-family);
  }

  .sk-product-card__badge[data-badge-target='secondary'] {
    opacity: 0;
  }

  .sk-product-card:hover .sk-product-card__badge[data-badge-target='secondary'] {
    opacity: 0.95;
  }

  .sk-product-card__content {
    width: 100%;
    padding: 0;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    flex: 1;
    justify-content: space-between;
    align-items: stretch;
    text-align: left;
  }

  .sk-product-card__content-body {
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
    width: 100%;
  }

  .sk-product-card__title {
    font-size: 1.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .sk-product-card__rating {
    display: flex;
    justify-content: left;
  }

  .sk-product-card__description p {
    margin: 0;
    font-size: var(--sk-font-size-small);
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .sk-product-card__footer {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .sk-product-card__price {
    font-size: var(--sk-font-size-large);
    font-weight: 500;
    color: var(--color-neutral-3);
    margin-bottom: 0;
  }

  .sk-product-card__content .sk-btn--primary {
    justify-content: center;
    width: 100%;
  }

  .buy_prod_btn.loading .loading__spinner {
    display: block;
  }

  .sk-product-card a {
    text-decoration: none;
    color: inherit;
  }

  @media only screen and (max-width: 700px) {
    .sk-product-listing__header {
      width: 100%;
    }

    .sk-product-listing__title {
      font-size: 40px;
      margin-bottom: 20px;
    }

    .sk-product-listing__grid {
      gap: 6px;
      justify-content: start;
    }

    .sk-product-card {
      flex: 0 0 100%;
      width: 100%;
      overflow: visible;
      margin: 0 0 32px;
      min-height: unset;
    }

    .sk-product-card__content {
      padding: 0;
      justify-content: flex-start;
    }

    .sk-product-card__content {
      gap: 0.5rem;
    }

    .sk-product-card__title {
      font-size: var(--sk-font-size-xl);
    }

    .sk-product-card__description p {
      font-size: var(--sk-font-size-small);
    }

    .sk-product-card__price {
      font-size: var(--sk-font-size-medium);
    }
  }

  @media only screen and (max-width: 435px) {
    .sk-product-listing__title {
      font-size: calc(var(--sk-font-size-2xl) * 1.0667);
      line-height: 37px;
    }
    .sk-product-listing__subtitle {
      font-size: var(--sk-font-size-xxs);
      line-height: 20px;
    }
    .sk-product-listing__header {
      margin-bottom: 36px;
    }
    .sk-product-card {
      flex: 0 0 100%;
      width: 100%;
      overflow: visible;
      margin: 0 0 32px;
    }
    .sk-product-card__content {
      gap: 0.4rem;
    }

    .sk-product-card__title {
      font-size: var(--sk-font-size-large);
    }
    .sk-product-card__description p {
      font-size: var(--sk-font-size-xxs);
    }
    .sk-product-card__price {
      font-size: var(--sk-font-size-small);
    }

    .sk-product-listing {
      padding-bottom: 0;
    }
  }
  @media screen and (max-width: 749px) {
    .sk-section-heading {
      font-size: var(--sk-mobile-heading-size);
      line-height: var(--sk-mobile-heading-line);
    }
    .sk-section-body {
      font-size: var(--sk-mobile-body-size);
      line-height: var(--sk-mobile-body-line);
    }
  }
</style>

<section class="sk-product-listing">
  <div class="page-width">
    <div class="sk-product-listing__container">
      {% if section.settings.section_title != blank or section.settings.section_subtitle != blank %}
        <div class="sk-product-listing__header">
          {% if section.settings.section_title != blank %}
            <h1 class="sk-section-header__title">
              {{ section.settings.section_title }}
            </h1>
          {% endif %}
          {% if section.settings.section_subtitle != blank %}
            <p class="sk-product-listing__subtitle sk-section-body">{{ section.settings.section_subtitle }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="sk-product-listing__grid">
          {% for block in section.blocks %}
            {% assign product = block.settings.product %}
            {% if product != blank %}
              {% assign hover_image = product.images[1] %}
              <div class="sk-product-card" {{ block.shopify_attributes }}>
                <a href="{{ product.url }}">
                  <div class="sk-product-card__image">
                    {% if product.featured_media %}
                      <img
                        class="sk-product-card__image-primary"
                        src="{{ product.featured_media | image_url: width: 540, height: 675, crop: 'center' }}"
                        alt="{{ product.featured_media.alt | default: product.title | escape }}"
                        width="540"
                        height="675"
                        loading="lazy"
                        fetchpriority="high"
                      >
                      {% if hover_image %}
                        <img
                          class="sk-product-card__image-secondary"
                          src="{{ hover_image | image_url: width: 540, height: 675, crop: 'center' }}"
                          alt="{{ hover_image.alt | default: product.title | escape }}"
                          width="540"
                          height="675"
                          loading="lazy"
                        >
                      {% endif %}
                    {% else %}
                      <div class="sk-product-card__image-placeholder">No Image</div>
                    {% endif %}
                    {% if block.settings.show_badge %}
                      <span
                        class="sk-product-card__badge"
                        data-badge-target="{{ block.settings.badge_image | default: 'primary' }}"
                      >
                        {{ block.settings.badge_text | default: 'LIMITED EDITION' | escape }}
                      </span>
                    {% endif %}
                  </div>
                </a>

                <div class="sk-product-card__content">
                  <div class="sk-product-card__content-body">
                    <a href="{{ product.url }}">
                      <h2 class="sk-product-card__title">{{ product.title | escape }}</h2>
                    </a>
                    {%- comment -%} Okendo star rating widget for product cards {%- endcomment -%}
                    <div
                      class="okeReviews okeReviews--reviewsSummary-starRating"
                      data-oke-reviews-product-id="shopify-{{ product.id }}"
                      data-oke-star-rating
                    ></div>
                    {% if block.settings.show_description and product.description != blank %}
                      <div class="sk-product-card__description sk-section-body">
                        <p>{{ product.description | strip_html }}</p>
                      </div>
                    {% endif %}
                  </div>

                  <div class="sk-product-card__footer">
                    <div class="sk-product-card__price">
                      {% if product.compare_at_price > product.price %}
                        <span style="text-decoration: line-through; color: var(--color-neutral-5); margin-right: 10px;">
                          {{ product.compare_at_price | money }}
                        </span>
                      {% endif %}
                      {{ product.price | money }}
                    </div>

                    {% if block.settings.button_text != blank %}
                      {% liquid
                        assign product_form_id = 'product-form-' | append: section.id | append: '-' | append: product.id
                        assign current_variant = product.selected_or_first_available_variant
                      %}

                      <product-form data-section-id="{{ section.id }}-{{ product.id }}">
                        <div class="product-form__error-message-wrapper" role="alert" hidden>
                          <span class="svg-wrapper">
                            {{- 'icon-error.svg' | inline_asset_content -}}
                          </span>
                          <span class="product-form__error-message"></span>
                        </div>

                        {%- form 'product',
                          product,
                          id: product_form_id,
                          class: 'sk-product-listing-form',
                          novalidate: 'novalidate',
                          data-type: 'add-to-cart-form'
                        -%}
                          <input
                            type="hidden"
                            name="id"
                            value="{{ current_variant.id }}"
                            class="product-variant-id"
                          >

                          <button
                            type="submit"
                            name="add"
                            class="sk-btn sk-btn--primary"
                          >
                            <span>
                              {% if current_variant.available == false %}
                                {{ 'products.product.sold_out' | t }}
                              {% else %}
                                {{ block.settings.button_text }}
                              {% endif %}
                            </span>
                            <span class="sk-btn__icon">
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 23 24"
                                fill="none"
                              >
                                <path d="M11.5001 1.79175V22.2084M1.29175 12.0001H21.7084" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                              </svg>
                            </span>
                            {%- render 'loading-spinner' -%}
                          </button>
                        {%- endform -%}
                      </product-form>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% else %}
        <div style="text-align: center; padding: 60px 0; color: var(--color-neutral-5);">
          <p>Add product blocks to display your products here.</p>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

