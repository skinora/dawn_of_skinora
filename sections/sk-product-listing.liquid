          "default": "LIMITED EDITION"
        },
        {
          "type": "select",
          "id": "badge_image",
          "label": "Badge Image",
          "default": "primary",
          "options": [
            {
              "value": "primary",
              "label": "Primary (featured image)"
            },
            {
              "value": "secondary",
              "label": "Secondary (hover image)"
            }
          ]
        }
