    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-neutral-5);
    margin-bottom: 0.35rem;
  }

  .sk-led-technology__callout-link {
    font-size: 0.85rem;
    color: var(--color-brand);
    text-transform: none;
    text-decoration: none;
  }

  .sk-led-technology__cta {
    margin: 2.5rem auto 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    align-items: center;
    text-align: center;
  }

  .sk-led-technology__cta-text {
