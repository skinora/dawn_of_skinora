  }

  .sk-led-technology__cta-button {
    padding: 1.5rem 3rem;
    border-radius: 999px;
    text-transform: uppercase;
    font-size: 1.1rem;
    letter-spacing: 0.08em;
    background: rgba(var(--color-ink-dark), 1);
    color: var(--color-white);
    border: none;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

