  .sk-led-technology__benefit {
    display: flex;
    gap: 1.75rem;
    align-items: center;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.12);
    padding: 1rem 0;
  }

  .sk-led-technology__benefit-icon {
    width: clamp(64px, 11vw, 96px);
    height: clamp(64px, 11vw, 96px);
    flex-shrink: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--color-neutral-4);
    padding: clamp(0.5rem, 1vw, 0.9rem);
  }

  .sk-led-technology__benefit-icon img,
  .sk-led-technology__benefit-icon svg {
    width: clamp(52px, 8vw, 88px);
    height: clamp(52px, 8vw, 88px);
    stroke: currentColor;
    stroke-width: 1.5;
    fill: none;
  }

  .sk-led-technology__benefit-text {
    font-size: 1.6rem;
    line-height: 1.9;
    margin: 0;
    color: var(--color-neutral-3);
    font-weight: 500;
    font-family: var(--font-body-family, 'Inter', 'system-ui', sans-serif);
    max-width: 300px;
    width: 100%;
  }

  .sk-led-technology__cards {
    margin: 0 auto;
    width: 100%;
    padding: clamp(2rem, 4vw, 3rem) 0;
  }

  .sk-led-technology__card-track {
    --sk-led-card-gap: clamp(0.75rem, 1.5vw, 1rem);
    --sk-led-card-padding-inline: clamp(0.75rem, 3vw, 1.5rem);
    --sk-led-card-bottom-padding: clamp(0.5rem, 2vw, 1rem);
    --sk-led-card-available: max(0px, calc(100% - (2 * var(--sk-led-card-padding-inline)) - var(--sk-led-card-gap)));
    display: flex;
    overflow-x: auto;
    gap: var(--sk-led-card-gap);
    padding: 0 var(--sk-led-card-padding-inline) var(--sk-led-card-bottom-padding);
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    touch-action: pan-x;
    overscroll-behavior-x: contain;
  }

  .sk-led-technology__card-track::-webkit-scrollbar {
    height: 0;
  }

  .sk-led-technology__card-track {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .sk-led-technology__card {
    position: relative;
    min-width: clamp(320px, var(--sk-led-card-available), 380px);
    width: min(var(--sk-led-card-available), 380px);
    flex: 0 0 auto;
    max-width: 380px;
    scroll-snap-align: start;
    border-radius: var(--popup-corner-radius);
    background-color: var(--color-white);
    border: 1px solid rgba(var(--color-foreground), 0.35);
    box-sizing: border-box;
    padding: clamp(1.1rem, 3vw, 2.4rem);
    display: flex;
    flex-direction: column;
    gap: clamp(0.8rem, 1.5vw, 1.4rem);
    align-items: flex-start;
    text-align: left;
    box-shadow: 0 12px 30px rgba(var(--color-shadow), 0.08);
    overflow: visible;
  }

  .sk-led-technology__card-title {
    font-size: clamp(1.6rem, 3vw, 2rem);
    color: var(--color-brand);
    margin: 0 0 0.45rem;
    line-height: 1.4;
  }

  .sk-led-technology__card-body {
    font-size: clamp(1.1rem, 2.7vw, 1.4rem);
    line-height: 1.4;
    color: rgba(var(--sk-color-body-text), 1);
    width: 100%;
    text-align: left;
  }

  .sk-led-technology__card-link {
    font-size: clamp(1rem, 2vw, 1.2rem);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    font-weight: 500;
    color: var(--color-ink-dark);
    text-decoration: none;
    align-self: flex-start;
    transition: color 0.2s ease;
  }

  .sk-led-technology__card-link:hover,
  .sk-led-technology__card-link:focus-visible {
    color: var(--color-brand);
    text-decoration: underline;
  }

  .sk-led-technology__card-icon {
    width: clamp(56px, 9vw, 96px);
    height: clamp(56px, 9vw, 96px);
    aspect-ratio: 1;
    margin-bottom: min(1.1rem, max(0.4rem, var(--sk-led-area-gap) / 3));
    align-self: flex-start;
    display: block;
    overflow: hidden;
    border-radius: var(--popup-corner-radius);
  }

  .sk-led-technology__card-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .sk-led-technology__card-badge {
    position: absolute;
    top: clamp(-0.85rem, -0.5vw, -0.45rem);
    right: clamp(-0.85rem, -0.5vw, -0.45rem);
    padding: 0.65rem 1.25rem;
    border-radius: 999px;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    font-size: clamp(1rem, 1.4vw, 1.4rem);
    font-weight: 600;
    background: var(--color-ink-dark);
    color: var(--color-white);
    box-shadow: 0 12px 20px rgba(15, 10, 30, 0.25);
    z-index: 2;
    opacity: 0.95;
    pointer-events: none;
    font-family: var(--font-secondary-family, 'Inter', sans-serif);
    white-space: nowrap;
  }

  .sk-led-technology__pagination {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .sk-led-technology__dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(var(--color-foreground), 0.35);
    transition: background 0.2s ease, transform 0.2s ease;
  }

  .sk-led-technology__dot--active {
    background: var(--color-brand);
    transform: scale(1.25);
  }

  .sk-led-technology__callout {
    margin: 0 auto var(--sk-led-area-gap);
    padding: 1.25rem;
    border-radius: var(--popup-corner-radius);
    border: 1px solid var(--color-border-light);
    background: var(--color-ghost);
    text-align: left;
    font-size: 0.95rem;
