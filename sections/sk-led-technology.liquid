<script>
  (function () {
    const sections = document.querySelectorAll('.sk-led-technology');
    sections.forEach((section) => {
      const track = section.querySelector('.sk-led-technology__card-track');
      const cards = section.querySelectorAll('.sk-led-technology__card');
      const dots = section.querySelectorAll('.sk-led-technology__dot');
      if (!track || cards.length === 0 || dots.length === 0) return;

      const updateActiveDot = () => {
        const trackRect = track.getBoundingClientRect();
        const center = trackRect.left + trackRect.width / 2;
        let closestIndex = 0;
        let smallestDelta = Infinity;

        cards.forEach((card, index) => {
          const cardRect = card.getBoundingClientRect();
          const cardCenter = cardRect.left + cardRect.width / 2;
          const delta = Math.abs(cardCenter - center);
          if (delta < smallestDelta) {
            smallestDelta = delta;
            closestIndex = index;
          }
        });

        dots.forEach((dot, index) => {
          const isActive = index === closestIndex;
          dot.classList.toggle('sk-led-technology__dot--active', isActive);
          dot.setAttribute('aria-selected', isActive);
        });
      };

      const handleScroll = () => {
        requestAnimationFrame(updateActiveDot);
      };

      track.addEventListener('scroll', handleScroll, { passive: true });
      window.addEventListener('resize', () => requestAnimationFrame(updateActiveDot));
      updateActiveDot();
    });
  })();
</script>

