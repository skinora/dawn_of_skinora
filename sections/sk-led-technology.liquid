<style>
  .sk-led-technology {
    background-color: var(--color-white);
    color: var(--color-neutral-4);
    padding: clamp(4rem, 6vw, 6rem) 0;
  }

  .sk-led-technology__content {
    max-width: 920px;
    margin: 0 auto 3rem;
    text-align: center;
    padding: 0 1.25rem;
  }

  .sk-led-technology__benefits {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin: 3rem auto;
    max-width: 520px;
  }

  .sk-led-technology__benefit {
    display: flex;
    gap: 1.75rem;
    align-items: center;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.12);
    padding: 1rem 0;
  }

  .sk-led-technology__benefit-icon {
    width: 56px;
    height: 56px;
    flex-shrink: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--color-neutral-4);
    padding: 0.5rem;
  }

  .sk-led-technology__benefit-icon img,
  .sk-led-technology__benefit-icon svg {
    width: 52px;
    height: 52px;
    stroke: currentColor;
    stroke-width: 1.5;
    fill: none;
  }

  .sk-led-technology__benefit-text {
    font-size: 1.6rem;
    line-height: 1.9;
    margin: 0;
    color: var(--color-neutral-3);
    font-weight: 500;
    font-family: var(--font-body-family, 'Inter', 'system-ui', sans-serif);
  }

  .sk-led-technology__cards {
    margin: 0 auto;
    width: 100%;
  }

  .sk-led-technology__card-track {
    display: flex;
    overflow-x: auto;
    gap: 1rem;
    padding-bottom: 0.5rem;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
  }

  .sk-led-technology__card {
    min-width: min(calc(100vw - 2rem), 360px);
    width: min(calc(100vw - 2rem), 360px);
    scroll-snap-align: start;
    border-radius: var(--popup-corner-radius);
    background-color: var(--color-white);
    border: 1px solid rgba(var(--color-foreground), 0.15);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
    box-shadow: 0 12px 30px rgba(var(--color-shadow), 0.08);
  }

  .sk-led-technology__card-title {
    font-size: 1.35rem;
    color: var(--color-neutral-4);
    margin: 0;
  }

  .sk-led-technology__card-body {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-neutral-5);
  }

  .sk-led-technology__card-link {
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-neutral-5);
    text-decoration: none;
  }

  .sk-led-technology__pagination {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .sk-led-technology__dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(var(--color-foreground), 0.35);
  }

  .sk-led-technology__callout {
    margin: 1.5rem auto 0;
    padding: 1.25rem;
    border-radius: var(--popup-corner-radius);
    border: 1px solid var(--color-border-light);
    background: var(--color-ghost);
    text-align: left;
    font-size: 0.95rem;
    color: var(--color-neutral-4);
  }

  .sk-led-technology__callout-title {
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-neutral-5);
    margin-bottom: 0.35rem;
  }

  .sk-led-technology__callout-link {
    font-size: 0.85rem;
    color: var(--color-brand);
    text-transform: none;
    text-decoration: none;
  }

  .sk-led-technology__cta {
    margin: 2.5rem auto 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    align-items: center;
    text-align: center;
  }

  .sk-led-technology__cta-text {
    font-size: 1rem;
    color: var(--color-neutral-4);
  }

  .sk-led-technology__cta-button {
    padding: 0.75rem 1.5rem;
    border-radius: 999px;
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 0.08em;
    background: var(--color-neutral-4);
    color: var(--color-white);
    border: none;
    cursor: pointer;
  }

  @media (min-width: 900px) {
    .sk-led-technology__benefits {
      flex-direction: row;
      align-items: stretch;
      gap: 1.75rem;
    }

    .sk-led-technology__benefit {
      flex-direction: column;
      border: none;
      align-items: flex-start;
      padding-bottom: 0;
    }

    .sk-led-technology__card-track {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      overflow: visible;
      scroll-snap-type: none;
    }

    .sk-led-technology__pagination {
      display: none;
    }

    .sk-led-technology__card {
      min-width: auto;
      width: auto;
    }

    .sk-led-technology__callout {
      max-width: 640px;
    }

    .sk-led-technology__cta-button {
      width: auto;
    }
  }

  @media (max-width: 640px) {
    .sk-led-technology__card {
      padding: 1.25rem;
    }

    .sk-led-technology__grid {
      grid-template-columns: 1fr;
    }

    .sk-led-technology__icons {
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    }
  }
</style>

<section class="sk-led-technology">
  <div class="page-width">
    <div class="sk-led-technology__content">
      <div class="sk-section-header sk-section-header--center">
