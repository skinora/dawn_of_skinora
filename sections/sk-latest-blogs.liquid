{{ 'section-sk-latest-blogs.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<div class="sk-latest-blogs section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="container">
    <div class="sk-latest-blogs__header">
      {%- if section.settings.heading != blank -%}
        <h2 class="sk-latest-blogs__heading{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{ section.settings.heading | escape }}
        </h2>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <p class="sk-latest-blogs__description{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{ section.settings.description | escape }}
        </p>
      {%- endif -%}
    </div>

    {%- if section.blocks.size > 0 -%}
      <div class="sk-latest-blogs__grid">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'blog_post' -%}
              <article
                class="sk-latest-blogs__post{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
              >
                <a
                  href="{{ block.settings.post_link | default: '#' }}"
                  class="sk-latest-blogs__post-link"
                >
                  <div class="sk-latest-blogs__post-image-wrapper">
                    {%- if block.settings.post_image != blank -%}
                      <img
                        srcset="
                          {%- if block.settings.post_image.width >= 300 -%}{{ block.settings.post_image | image_url: width: 300 }} 300w,{%- endif -%}
                          {%- if block.settings.post_image.width >= 400 -%}{{ block.settings.post_image | image_url: width: 400 }} 400w,{%- endif -%}
                          {%- if block.settings.post_image.width >= 500 -%}{{ block.settings.post_image | image_url: width: 500 }} 500w,{%- endif -%}
                          {{ block.settings.post_image | image_url }} {{ block.settings.post_image.width }}w
                        "
                        src="{{ block.settings.post_image | image_url: width: 400 }}"
                        sizes="400px"
                        alt="{{ block.settings.post_image.alt | escape }}"
                        class="sk-latest-blogs__post-image"
                        width="{{ block.settings.post_image.width }}"
                        height="{{ block.settings.post_image.height }}"
                        loading="lazy"
                      >
                    {%- endif -%}
                  </div>

                  <div class="sk-latest-blogs__post-content">
                    {%- if block.settings.post_title != blank -%}
                      <h3 class="sk-latest-blogs__post-title">
                        {{ block.settings.post_title | escape }}
                      </h3>
                    {%- endif -%}

                    {%- if block.settings.post_excerpt != blank -%}
                      <p class="sk-latest-blogs__post-excerpt">
                        {{ block.settings.post_excerpt | escape }}
                      </p>
                    {%- endif -%}
                  </div>
                </a>
              </article>

            {%- when 'featured_post' -%}
              <article
                class="sk-latest-blogs__featured-post{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
              >
                <a
                  href="{{ block.settings.post_link | default: '#' }}"
                  class="sk-latest-blogs__featured-link"
                >
                  <div class="sk-latest-blogs__featured-image-wrapper">
                    {%- if block.settings.post_image != blank -%}
                      <img
                        srcset="
                          {%- if block.settings.post_image.width >= 400 -%}{{ block.settings.post_image | image_url: width: 400 }} 400w,{%- endif -%}
                          {%- if block.settings.post_image.width >= 600 -%}{{ block.settings.post_image | image_url: width: 600 }} 600w,{%- endif -%}
                          {%- if block.settings.post_image.width >= 800 -%}{{ block.settings.post_image | image_url: width: 800 }} 800w,{%- endif -%}
                          {{ block.settings.post_image | image_url }} {{ block.settings.post_image.width }}w
                        "
                        src="{{ block.settings.post_image | image_url: width: 600 }}"
                        sizes="600px"
                        alt="{{ block.settings.post_image.alt | escape }}"
                        class="sk-latest-blogs__featured-image"
                        width="{{ block.settings.post_image.width }}"
                        height="{{ block.settings.post_image.height }}"
                        loading="lazy"
                      >
                    {%- endif -%}
                    <div class="sk-latest-blogs__featured-overlay">
                      <div class="sk-latest-blogs__featured-content">
                        {%- if block.settings.post_title != blank -%}
                          <h3 class="sk-latest-blogs__featured-title">
                            {{ block.settings.post_title | escape }}
                          </h3>
                        {%- endif -%}
                        {%- if block.settings.post_excerpt != blank -%}
                          <p class="sk-latest-blogs__featured-excerpt">
                            {{ block.settings.post_excerpt | escape }}
                          </p>
                        {%- endif -%}
                        {%- if block.settings.button_text != blank -%}
                          <span class="sk-latest-blogs__featured-button">
                            {{ block.settings.button_text | escape }}
                          </span>
                        {%- endif -%}
                      </div>
                    </div>
                  </div>
                </a>
              </article>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

