{% comment %}
  SK Before/After Section
  Single-image before/after look (visual split only)
{% endcomment %}

<style>
  .sk-before-after {
    padding: 5rem 0;
    background-color: var(--color-white);
    position: relative;
    overflow: hidden;
  }

  .sk-before-after__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .sk-before-after__title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin-bottom: 15px;
    line-height: 1.15;
  }

  .sk-before-after__subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    font-weight: {{ section.settings.subtitle_weight }};
    line-height: 1.4;
  }

  .swiper-slide {
    display: flex;
    justify-content: center;
  }

  .sk-testimonial-card {
    width: 100%;
    background: #fff;
    border-radius: 0;
    overflow: hidden;
  }

  .sk-testimonial-card__images {
    position: relative;
    height: clamp(260px, 30vw, 360px);
    overflow: hidden;
  }

  .sk-testimonial-card__images img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .sk-testimonial-card__images::after {
    content: "";
    position: absolute;
    top: 6%;
    bottom: 6%;
    left: 50%;
    width: 1px;
    background: rgba(255,255,255,0.65);
    transform: translateX(-50%);
    z-index: 2;
    pointer-events: none;
  }

  .sk-ba-pill {
    position: absolute;
    top: 12px;
    padding: 6px 14px;
    font-size: 13px;
    background: rgba(245,245,245,0.95);
    border-radius: 0;
    font-weight: 500;
    color: #333;
    z-index: 3;
  }

  .sk-ba-pill--before { left: 12px; }
  .sk-ba-pill--after { right: 12px; }

  .sk-testimonial-card__content {
    padding: 18px 20px 22px;
    text-align: left;
  }

  .sk-testimonial-card__title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 6px;
    color: #000;
  }

  .sk-testimonial-card__meta {
    font-size: 14px;
    color: #666;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .sk-testimonial-card__text {
    font-size: 15px;
    line-height: 1.5;
    color: #333;
  }

  @media (max-width: 899px) {
    .sk-before-after .sk-before-after-prev,
    .sk-before-after .sk-before-after-next {
      display: none;
    }
  }

  @media (min-width: 900px) {
    .sk-before-after .sk-before-after-prev,
    .sk-before-after .sk-before-after-next {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: 44px;
      height: 44px;
      border-radius: 999px;
      border: 1px solid rgba(48, 39, 62, 0.16);
      background: #fff;
      justify-content: center;
      align-items: center;
      box-shadow: 0 16px 40px rgba(0, 0, 0, 0.08);
      z-index: 4;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.25s ease;
    }

    .sk-before-after .sk-before-after-prev.sk-arrow-visible,
    .sk-before-after .sk-before-after-next.sk-arrow-visible {
      opacity: 1;
      pointer-events: auto;
      display: flex;
    }

    .sk-before-after-prev { left: -40px; }
    .sk-before-after-next { right: -20px; }
  }
</style>

<section class="sk-before-after" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="swiper sk-before-after-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="sk-testimonial-card">
              <div class="sk-testimonial-card__images">
                <img
                  src="{{ block.settings.before_image | image_url: width: 800 }}"
                  alt="{{ block.settings.before_image.alt | escape }}"
                  width="{{ block.settings.before_image.width | default: 800 }}"
                  height="{{ block.settings.before_image.height | default: 360 }}"
                  loading="lazy"
                >
                <span class="sk-ba-pill sk-ba-pill--before">FØR</span>
                <span class="sk-ba-pill sk-ba-pill--after">…OG ETTER</span>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="swiper-button-prev sk-before-after-prev"></div>
      <div class="swiper-button-next sk-before-after-next"></div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    if (typeof Swiper === 'undefined') return;

    const wrapper = document.querySelector('.sk-before-after[data-section-id="{{ section.id }}"]');
    if (!wrapper) return;

    const swiper = new Swiper(wrapper.querySelector('.sk-before-after-swiper'), {
      slidesPerView: 1,
      spaceBetween: 20,
      navigation: {
        nextEl: wrapper.querySelector('.sk-before-after-next'),
        prevEl: wrapper.querySelector('.sk-before-after-prev'),
      },
      watchOverflow: true,
      breakpoints: {
        700: { slidesPerView: 2 },
        1024: { slidesPerView: 3 },
      },
    });

    const prevArrow = wrapper.querySelector('.sk-before-after-prev');
    const nextArrow = wrapper.querySelector('.sk-before-after-next');

    const updateArrows = () => {
      const isDesktop = window.matchMedia('(min-width: 900px)').matches;
      if (!isDesktop) return;

      prevArrow.classList.toggle('sk-arrow-visible', !swiper.isBeginning);
      nextArrow.classList.toggle('sk-arrow-visible', !swiper.isEnd);
    };

    swiper.on('init', updateArrows);
    swiper.on('slideChangeTransitionEnd', updateArrows);
    swiper.on('breakpoint', updateArrows);

    updateArrows();
    window.addEventListener('resize', updateArrows);
  });
</script>

{% schema %}
{
  "name": "SK Before / After",
  "settings": [],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Before / After Card",
      "settings": [{ "type": "image_picker", "id": "before_image", "label": "Image" }]
    }
  ],
  "presets": [{ "name": "SK Before / After" }]
}
{% endschema %}
