{% comment %}
  SK Before/After Section
  Single-image before/after look (visual split only)
{% endcomment %}

<style>
  .sk-before-after {
    padding: 5rem 0;
    background-color: var(--color-white);
    position: relative;
    overflow: hidden;
  }

  .sk-before-after__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .sk-before-after__title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin-bottom: 15px;
    line-height: 1.15;
  }

  .sk-before-after__subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    font-weight: {{ section.settings.subtitle_weight }};
    line-height: 1.4;
  }

  .swiper-slide {
    display: flex;
    justify-content: center;
  }

  .sk-testimonial-card {
    width: 100%;
    background: #fff;
    border-radius: 0;
    overflow: hidden;
  }

  /* === SINGLE IMAGE WITH FAKE BEFORE / AFTER SPLIT === */

  .sk-testimonial-card__images {
    position: relative;
    height: clamp(260px, 30vw, 360px);
    overflow: hidden;
  }

  .sk-testimonial-card__images img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* vertical divider */
  .sk-testimonial-card__images::after {
    content: "";
    position: absolute;
    top: 6%;
    bottom: 6%;
    left: 50%;
    width: 1px;
    background: rgba(255,255,255,0.65);
    transform: translateX(-50%);
    z-index: 2;
    pointer-events: none;
  }

  /* pills */
  .sk-ba-pill {
    position: absolute;
    top: 12px;
    padding: 6px 14px;
    font-size: 13px;
    background: rgba(245,245,245,0.95);
    border-radius: 0;
    font-weight: 500;
    color: #333;
    z-index: 3;
  }

  .sk-ba-pill--before { left: 12px; }
  .sk-ba-pill--after { right: 12px; }

  /* === CONTENT === */

  .sk-testimonial-card__content {
    padding: 18px 20px 22px;
    text-align: left;
  }

  .sk-testimonial-card__title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 6px;
    color: #000;
  }

  .sk-testimonial-card__meta {
    font-size: 14px;
    color: #666;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .sk-testimonial-card__text {
    font-size: 15px;
    line-height: 1.5;
    color: #333;
  }

  /* Swiper arrows & pagination untouched */
</style>

<section class="sk-before-after">
  <div class="page-width">
    {% if section.settings.section_title != blank %}
      <div class="sk-before-after__header">
        <h2 class="sk-before-after__title">
          {{ section.settings.section_title }}
        </h2>
        {% if section.settings.section_subtitle != blank %}
          <p class="sk-before-after__subtitle">
            {{ section.settings.section_subtitle }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <div class="swiper sk-before-after-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="sk-testimonial-card">
              <div class="sk-testimonial-card__images">
                <img
                  src="{{ block.settings.before_image | image_url: width: 800 }}"
                  alt="{{ block.settings.before_image.alt | escape }}"
                  width="{{ block.settings.before_image.width | default: 800 }}"
                  height="{{ block.settings.before_image.height | default: 360 }}"
                  loading="lazy"
                >

                <span class="sk-ba-pill sk-ba-pill--before">FØR</span>
                <span class="sk-ba-pill sk-ba-pill--after">...OG ETTER</span>
              </div>

              <div class="sk-testimonial-card__content">
                {% if block.settings.testimonial_title != blank %}
                  <h3 class="sk-testimonial-card__title">
                    {{ block.settings.testimonial_title }}
                  </h3>
                {% endif %}

                {% if block.settings.author_name != blank %}
                  <div class="sk-testimonial-card__meta">
                    {{ block.settings.author_name }}
                    {% if block.settings.show_verified %}
                      <span>✔</span>
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.testimonial_text != blank %}
                  <p class="sk-testimonial-card__text">“{{ block.settings.testimonial_text }}”</p>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    if (typeof Swiper === 'undefined') return;

    new Swiper('.sk-before-after-swiper', {
      slidesPerView: 1,
      spaceBetween: 20,
      pagination: { el: '.swiper-pagination', clickable: true },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        700: { slidesPerView: 2 },
        1024: { slidesPerView: 3 },
      },
    });
  });
</script>

{% schema %}
{
  "name": "SK Before / After",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Title",
      "default": "Real results"
    },
    {
      "type": "textarea",
      "id": "section_subtitle",
      "label": "Subtitle",
      "default": "See the amazing transformations our customers have achieved"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Before / After Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "before_image",
          "label": "Image (single)"
        },
        {
          "type": "text",
          "id": "testimonial_title",
          "label": "Title",
          "default": "Even out skin tone"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Meta line",
          "default": "Kate, 5× a week for 8 weeks | Verified Buyer"
        },
        {
          "type": "checkbox",
          "id": "show_verified",
          "label": "Show verified",
          "default": true
        },
        {
          "type": "textarea",
          "id": "testimonial_text",
          "label": "Quote",
          "default": "I’ve seen a real improvement in my sun spots and pigmentation."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SK Before / After"
    }
  ]
}
{% endschema %}
