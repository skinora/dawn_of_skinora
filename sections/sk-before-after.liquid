{% comment %}
  SK Before/After Section
  Displays a slider of before/after testimonial cards using SwiperJS
{% endcomment %}

<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<style>
    .sk-before-after {
      padding: 7rem 0;
      background-color: {{ section.settings.background_color | default: '#f1eff4' }};
      position: relative;
    }

    .sk-before-after__header {
      text-align: center;
      margin-bottom: 60px;
    }

    .sk-before-after__title {
      font-size: {{ section.settings.title_size }}px;
      font-weight: {{ section.settings.title_weight }};
      color: {{ section.settings.title_color }};
      margin-bottom: 15px;
      line-height: 1.2;
    }

    .sk-before-after__subtitle {
      font-size: {{ section.settings.subtitle_size }}px;
      color: {{ section.settings.subtitle_color }};
      font-weight: {{ section.settings.subtitle_weight }};
      max-width: 600px;
      margin: 0 auto;
    }

    .sk-testimonial-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      width: 395px;
    }

    /* .sk-testimonial-card:hover {
      transform: translateY(-5px);
    } */

    .sk-testimonial-card__images {
        position: relative;
    border-radius: 20px;
    overflow: hidden;

    }

    .sk-testimonial-card__image {
      width: 50%;
      height: 100%;
      object-fit: cover;
      position: absolute;
      top: 0;
    }

    .sk-testimonial-card__image--before {
      left: 0;
      border-radius: 16px 0 0 0;
    }

    .sk-testimonial-card__image--after {
      right: 0;
      border-radius: 0 16px 0 0;
    }

    .sk-testimonial-card__divider {
      position: absolute;
      left: 50%;
      top: 0;
      bottom: 0;
      width: 2px;
      background: white;
      transform: translateX(-50%);
      z-index: 2;
    }

    .sk-testimonial-card__content {
        text-align: center;
        background: {{ section.settings.card_bg_color | default: '#fff' }};
        color: #000000;
        padding: 22px 45px 25px 45px;
        margin-top: 30px;
        border-bottom-left-radius: 20px;
        border-bottom-right-radius: 20px;
    }

    .sk-testimonial-card__author {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 14px;
        font-weight: 600;
        background: #30273E;
        color: #fff;
        font-style: italic;
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        border-bottom-left-radius: 20px;
        border-bottom-right-radius: 20px;
        padding: 13px;
    }

    .sk-testimonial-card__verified {
      width: 16px;
      height: 16px;
      fill: currentColor;
    }

    .sk-testimonial-card__title {
        font-size: 20px;
    font-weight: 700;
    margin-bottom: 12px;
    color: #000;
    font-family: "DM Sans", sans-serif !important;
    }

    .sk-testimonial-card__text {
        font-size: 14px;
    line-height: 1.5;
    color: #000;
    font-weight: 500;
    }

    /* Navigation Arrows */
    .sk-before-after-prev,
    .sk-before-after-next {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: 50px;
      height: 50px;
      background: none;
      border: none;
      border-radius: 50%;
      box-shadow: none;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 2;
      transition: all 0.3s ease;
    }

    .sk-before-after-prev:hover,
    .sk-before-after-next:hover {
      background: #f5f5f5;
      transform: translateY(-50%) scale(1.1);
    }

    .sk-before-after-prev {
      left: 10px;
    }

    .sk-before-after-next {
      right: 10px;
    }

    .sk-before-after-prev svg,
    .sk-before-after-next svg {
      width: 24px;
      height: 24px;
      fill: #333;
    }

    /* Pagination */
    .swiper-pagination {
      position: relative !important;
      margin-top: 40px;
    }

    .swiper-pagination-bullet {
      width: 12px;
      height: 12px;
      background: #ddd;
      opacity: 1;
      transition: all 0.3s ease;
    }

    .swiper-pagination-bullet-active {
      background: #4a4458;
      transform: scale(1.2);
    }

    @media screen and (max-width: 768px) {
      .sk-before-after {
        padding: 40px 0;
      }

      .sk-before-after__title {
        font-size: 28px;
      }

      .sk-before-after-prev,
      .sk-before-after-next {
        width: 40px;
        height: 40px;
      }

      .sk-before-after-prev {
        left: 5px;
      }

      .sk-before-after-next {
        right: 5px;
      }

      .sk-testimonial-card__content {
        padding: 20px;
      }
    }

    .sk-before-after .swiper-pagination{
      display: none;
    }

    .sk_before_img{
      width: 100%;
      height: auto;
    }

    .sk-before-after .swiper-wrapper{
      position: unset;
    }
    .sk-before-after .swiper{
      position: unset;
    }

    .sk-before-after-prev {
      left: 40px;
  }
  .sk-before-after-next {
      right: 65px;
  }
</style>

<section class="sk-before-after">
  <div class="container">
    {% if section.settings.section_title != blank or section.settings.section_subtitle != blank %}
      <div class="sk-before-after__header">
        {% if section.settings.section_title != blank %}
          <h2 class="sk-before-after__title">{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.section_subtitle != blank %}
          <p class="sk-before-after__subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
