<section style="padding:40px;border:4px solid red;background:#111;color:#0f0;">
  <h2>DEBUG: WHY CHOOSE</h2>

  <h3>Product handle</h3>
  <pre>{{ product.handle }}</pre>

  <h3>Product template</h3>
  <pre>{{ product.template_suffix }}</pre>

  <h3>All product metafields</h3>
  <pre>{{ product.metafields | json }}</pre>

  <h3>Custom namespace</h3>
  <pre>{{ product.metafields.custom | json }}</pre>

  <h3>why_choose_reference (raw)</h3>
  <pre>{{ product.metafields.custom.why_choose_reference | json }}</pre>

  <h3>why_choose_reference.value</h3>
  <pre>{{ product.metafields.custom.why_choose_reference.value | json }}</pre>
</section>

{% schema %}
{
  "name": "DEBUG – Why Choose",
  "presets": [{ "name": "DEBUG – Why Choose" }]
}
{% endschema %}
