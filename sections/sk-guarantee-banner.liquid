{{ 'section-sk-guarantee-banner.css' | asset_url | stylesheet_tag }}

<div class="sk-guarantee-banner sk-guarantee-banner--{{ section.settings.color_scheme }} sk-guarantee-banner--{{ section.settings.layout }}">
  <div class="sk-guarantee-banner__container page-width">
    <div class="sk-guarantee-banner__content">
      <div class="sk-guarantee-banner__text">
        <h2 class="sk-guarantee-banner__heading">
          {{
            section.settings.heading
            | default: 'Prøv hjemme i 30 dager. Ser du ingen resultater, får du pengene tilbake'
          }}
        </h2>
        <p class="sk-guarantee-banner__description">
          {{
            section.settings.description
            | default: 'Vår teknologi er klinisk dokumentert. Derfor tilbyr vi 30 dagers fornøydgaranti: ser du ikke resultater, får du pengene tilbake.'
          }}
        </p>
      </div>

      {%- if section.settings.read_more_text != blank -%}
        <div class="sk-guarantee-banner__action">
          <a
            href="{{ section.settings.read_more_link | default: '#guarantee-details' }}"
            class="sk-guarantee-banner__link"
          >
            <span class="sk-guarantee-banner__link-text">
              {{- section.settings.read_more_text | default: 'LES MER →' -}}
            </span>
            <span class="sk-guarantee-banner__link-icon">
              {{- 'icon-arrow-right.svg' | inline_asset_content -}}
            </span>
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{%- style -%}
  .sk-guarantee-banner {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .sk-guarantee-banner {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% schema %}
{
  "name": "SK Guarantee Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Prøv hjemme i 30 dager. Ser du ingen resultater, får du pengene tilbake",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "default": "Vår teknologi er klinisk dokumentert. Derfor tilbyr vi 30 dagers fornøydgaranti: ser du ikke resultater, får du pengene tilbake.",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "read_more_text",
      "default": "LES MER →",
      "label": "Read More Text"
    },
    {
      "type": "url",
      "id": "read_more_link",
      "label": "Read More Link"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "scheme-1",
          "label": "Scheme 1"
        },
        {
          "value": "scheme-2",
          "label": "Scheme 2"
        },
        {
          "value": "scheme-3",
          "label": "Scheme 3"
        }
      ],
      "default": "scheme-2",
      "label": "Color Scheme"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "centered",
          "label": "Centered"
        },
        {
          "value": "left",
          "label": "Left Aligned"
        },
        {
          "value": "right",
          "label": "Right Aligned"
        }
      ],
      "default": "centered",
      "label": "Layout"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "SK Guarantee Banner"
    }
  ]
}
{% endschema %}
