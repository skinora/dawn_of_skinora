{{ 'section-sk-radiance-product.css' | asset_url | stylesheet_tag }}

<style>
  /* =============================
   BASE LAYOUT
============================= */

  .sk-product-hero {
    padding: 2rem 0 3rem;
  }

  .sk-hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 990px) {
    .sk-hero-grid {
      grid-template-columns: minmax(0, 45%) minmax(0, 55%);
      align-items: start;
      gap: 6rem;
    }
  }

  /* =============================
   MEDIA
============================= */

  .sk-hero-media {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .sk-hero-media-main {
    width: min(clamp(280px, 60vw, 750px), 100%);
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: 0;
  }

  .sk-hero-media-swiper {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .sk-hero-media-swiper .swiper,
  .sk-hero-media-swiper .swiper-slide {
    width: 100%;
    height: 100%;
  }

  .sk-hero-media-main img,
  .sk-hero-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .sk-hero-gallery-wrapper {
    width: min(clamp(240px, 65vw, 750px), 100%);
    margin-top: 0.75rem;
    overflow: hidden;
  }

  .sk-hero-gallery {
    display: grid;
    grid-template-columns: repeat(5, minmax(0, 1fr));
    gap: clamp(0.5rem, 1vw, 0.75rem);
  }

  .sk-hero-thumb {
    width: 100%;
    aspect-ratio: 1 / 1;
  }

  .sk-hero-thumb img {
    border-radius: 10px;
    cursor: pointer;
    opacity: 0.85;
  }

  .sk-hero-thumb img.is-active {
    opacity: 1;
  }

  .sk-hero-thumb img:hover {
    opacity: 1;
  }

  .sk-hero-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    background: rgba(0, 0, 0, 0.45);
    color: #fff;
    font-size: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
  }

  .sk-hero-arrow--prev {
    left: 1rem;
  }

  .sk-hero-arrow--next {
    right: 1rem;
  }

  /* =============================
   CONTENT (unchanged)
============================= */

  .sk-eyebrow {
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #6b6b76;
    margin-bottom: 0.5rem;
  }

  .sk-product-title {
    font-size: 2rem;
    line-height: 1.15;
    margin-bottom: 0.75rem;
  }

  @media (min-width: 990px) {
    .sk-product-title {
      font-size: 2.5rem;
    }
  }

  .sk-product-subtitle {
    font-size: 1.25rem;
    color: #3a3a42;
    margin-bottom: 1.25rem;
    max-width: 42ch;
  }

  /* =============================
   PILLS
============================= */

  .sk-radiance-pills {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-bottom: 1.75rem;
  }

  .sk-pill {
    border: 1.5px solid #d4d4dc;
    border-radius: 999px;
    padding: 0.5rem 1.25rem;
    font-size: 1rem;
    font-weight: 500;
    background: #fff;
  }

  /* =============================
   PURCHASE / TRUST
============================= */

  .sk-purchase {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .sk-trust-inline {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.75rem;
    color: #5b5b66;
  }

  .sk-trust-icons {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    flex-wrap: wrap;
    opacity: 0.7;
  }

  .sk-trust-icon img {
    height: 22px;
    width: auto;
    display: block;
  }

  /* =============================
   INFO
============================= */

  .sk-hero-info {
    margin-top: 2.5rem;
    padding-top: 2rem;
    border-top: 1px solid #ececf2;
  }

  @media (max-width: 768px) {
    .sk-hero-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .sk-hero-media-main,
    .sk-hero-gallery-wrapper {
      width: min(750px, calc(100vw - 2rem));
    }

    .sk-hero-media-main {
      margin: 0 auto;
    }

    .sk-hero-thumb {
      width: min(750px, calc(100vw - 2rem));
      height: min(750px, calc(100vw - 2rem));
    }

    .sk-hero-gallery {
      gap: 0.75rem;
      padding-bottom: 0.75rem;
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    .sk-hero-gallery-wrapper {
      display: none;
    }
  }

  @media (max-width: 1200px) {
    .sk-hero-gallery {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
  }

  @media (max-width: 992px) {
    .sk-hero-gallery {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }
</style>

{%- assign product_info_reference = product.metafields.custom.product_info
  | default: product.metafields.product_info
-%}
{%- assign product_info = product_info_reference.value -%}
{%- assign product_form_id = 'product-form-' | append: section.id -%}
{%- assign media_images = product.media | where: 'media_type', 'image' -%}

<product-info
  id="MainProduct-{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-url="{{ product.url }}"
>
  <div class="page-width">
    <section class="sk-product-hero" id="sk-radiance-product-hero-{{ section.id }}">
      <div class="sk-hero-grid">
        <!-- ================= LEFT: CANONICAL MEDIA ================= -->
        <div class="sk-hero-media">
          {% if media_images.size > 0 %}
            <div class="sk-hero-media-main">
              <div class="sk-hero-media-swiper swiper">
                <div class="swiper-wrapper">
                  {% for image in media_images %}
                    <div class="swiper-slide">
                      <img
                        src="{{ image | image_url: width: 900 }}"
                        alt="{{ image.alt | default: product.title | append: ' LED light therapy device' }}"
                        width="900"
                        height="900"
                        loading="lazy"
                      >
                    </div>
                  {% endfor %}
                </div>
                {% if media_images.size > 1 %}
                  <button class="sk-hero-arrow sk-hero-arrow--prev" type="button" aria-label="Previous hero image">
                    ‹
                  </button>
                  <button class="sk-hero-arrow sk-hero-arrow--next" type="button" aria-label="Next hero image">
                    ›
                  </button>
                {% endif %}
              </div>
            </div>

            <div class="sk-hero-gallery-wrapper">
              <div class="sk-hero-gallery">
                {% for image in media_images %}
                  <div class="sk-hero-thumb">
                    <img
                      src="{{ image | image_url: width: 120 }}"
                      alt="{{ image.alt | default: product.title }}"
                      width="120"
                      height="120"
                      loading="lazy"
                    >
                  </div>
                {% endfor %}
              </div>
            </div>
          {% endif %}
        </div>

        <!-- ================= RIGHT: METAOBJECT CONTENT ================= -->

        <div class="sk-hero-content">
          {% if product_info.radiance_eyebrow.value != blank %}
            <p class="sk-eyebrow">{{ product_info.radiance_eyebrow.value }}</p>
          {% endif %}

          <h1 class="sk-product-title">
            {{ product_info.radiance_heading.value | default: product.title }}
          </h1>

          {% if product_info.radiance_subheading.value != blank %}
            <p class="sk-product-subtitle">
              {{ product_info.radiance_subheading.value }}
            </p>
          {% endif %}

          <!-- REVIEWS -->
          <div class="sk-product-reviews">
            {% for block in section.blocks %}
              {% if block.type == '@app' %}
                {% render block %}
              {% endif %}
            {% endfor %}
          </div>

          <!-- PILLS -->
          {% if product_info.radiance_pills.value != blank %}
            <div class="sk-radiance-pills">
              {% for pill in product_info.radiance_pills.value %}
                <span class="sk-pill">{{ pill }}</span>
              {% endfor %}
            </div>
          {% endif %}

          <!-- PURCHASE -->
          <div class="sk-purchase">
            {% render 'sk-radiance-product-variant-picker', product: product, product_form_id: product_form_id %}

            {% render 'sk-radiance-quantity', product: product, product_form_id: product_form_id, section: section %}

            <div class="sk-trust-inline">
              <span>Free shipping</span>
              <span>30-day returns</span>
              <span>Secure checkout</span>
              <span>2-year warranty</span>
            </div>

            {% assign trust_badges_source = product_info.trust_badges | default: blank %}
            {% assign trust_badges_value = trust_badges_source.value | default: trust_badges_source %}
            {% if trust_badges_value != blank %}
              <div class="sk-payment sk-trust-icons">
                {% for badge in trust_badges_value %}
                  {% assign badge_img = badge.url | default: badge.image | default: badge.src | default: badge %}
                  {% assign badge_alt = badge.alt | default: badge.alt_text | default: 'Trust badge' %}
                  {% if badge_img != blank %}
                    <span class="sk-trust-icon">
                      <img
                        src="{{ badge_img | image_url: width: 60 }}"
                        alt="{{ badge_alt }}"
                        width="60"
                        height="22"
                        loading="lazy"
                      >
                    </span>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}

            {% if product_info.radiance_content.value != blank %}
              <div class="sk-hero-info">
                {{ product_info.radiance_content | metafield_tag }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </section>
  </div>

  <script type="application/ld+json">
    {{ product | structured_data }}
  </script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (typeof Swiper === 'undefined') return;

      const sectionEl = document.getElementById('sk-radiance-product-hero-{{ section.id }}');
      if (!sectionEl) return;

      const swiperRoot = sectionEl.querySelector('.sk-hero-media-swiper');
      if (!swiperRoot) return;

      const swiperElement = swiperRoot.querySelector('.swiper') || swiperRoot;
      if (!swiperElement) return;

      const prevButton = swiperRoot.querySelector('.sk-hero-arrow--prev');
      const nextButton = swiperRoot.querySelector('.sk-hero-arrow--next');
      const thumbnails = sectionEl.querySelectorAll('.sk-hero-thumb img');
      const heroMediaMain = sectionEl.querySelector('.sk-hero-media-main');

      const swiperOptions = {
        slidesPerView: 1,
        loop: false,
        allowTouchMove: true,
        speed: 400,
      };

      if (prevButton && nextButton) {
        swiperOptions.navigation = {
          prevEl: prevButton,
          nextEl: nextButton,
        };
      }

      const heroSwiper = new Swiper(swiperElement, swiperOptions);

      function updateActiveThumb(index) {
        thumbnails.forEach((thumb, thumbIndex) => {
          thumb.classList.toggle('is-active', thumbIndex === index);
        });
      }

      function scrollHeroIntoView() {
        if (!heroMediaMain) return;
        heroMediaMain.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }

      updateActiveThumb(heroSwiper.activeIndex || 0);

      heroSwiper.on('slideChange', function () {
        updateActiveThumb(heroSwiper.activeIndex);
        scrollHeroIntoView();
      });

      thumbnails.forEach((thumb, index) => {
        thumb.addEventListener('click', function () {
          heroSwiper.slideTo(index);
          scrollHeroIntoView();
        });
      });
    });
  </script>
</product-info>

