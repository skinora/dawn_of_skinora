{%- comment -%}
  Bundle wiring (IMPORTANT):
  Create a Product reference metafield on the BASE product:
  - custom.bundle_product (type: Product)
  Select your "Bundler standalone bundle product" there.
{%- endcomment -%}

{%- assign bundle_product_ref = product.metafields.custom.bundle_product.value -%}
{%- assign bundle_handle = '' -%}
{%- assign bundle_title = '' -%}
{%- if bundle_product_ref != blank -%}
  {%- assign bundle_handle = bundle_product_ref.handle -%}
  {%- assign bundle_title = bundle_product_ref.title -%}
{%- endif -%}
{%- assign base_variant = product.selected_or_first_available_variant -%}
{%- assign single_image_url = product.featured_image | image_url: width: 640 -%}
{%- assign single_image_alt = product.featured_image.alt | default: product.title -%}
{%- assign bundle_image_obj = bundle_product_ref.featured_image -%}
{%- if bundle_image_obj == blank -%}
  {%- assign bundle_image_obj = product.featured_image -%}
{%- endif -%}
{%- assign bundle_image_url = bundle_image_obj | image_url: width: 640 -%}
{%- if bundle_image_obj != blank -%}
  {%- assign bundle_image_alt = bundle_image_obj.alt | default: bundle_title | default: product.title -%}
{%- else -%}
  {%- assign bundle_image_alt = bundle_title | default: product.title -%}
{%- endif -%}

{%- comment -%}
  Pills: robust detection using JSON output.
  - Array -> json starts with [
  - String -> json starts with "
{%- endcomment -%}
{%- assign pills_raw = product_info.radiance_pills.value | default: blank -%}
{%- assign pills_list = blank -%}
{%- if pills_raw != blank -%}
  {%- assign pills_json = pills_raw | json -%}
  {%- assign pills_json_first = pills_json | slice: 0, 1 -%}
  {%- if pills_json_first == '[' -%}
    {%- assign pills_list = pills_raw -%}
  {%- else -%}
    {%- assign pills_clean = pills_raw | strip -%}
    {%- if pills_clean contains '[' and pills_clean contains ']' -%}
      {%- assign pills_clean = pills_clean | remove: '[' | remove: ']' -%}
      {%- assign pills_clean = pills_clean
        | replace: '","', '|||'
        | replace: '", "', '|||'
        | replace: '",', '|||'
        | replace: ',"', '|||'
      -%}
      {%- assign pills_clean = pills_clean | replace: '"', '' -%}
      {%- assign pills_list = pills_clean | split: '|||' -%}
    {%- elsif pills_clean contains '\n' -%}
      {%- assign pills_list = pills_clean | split: '\n' -%}
    {%- else -%}
      {%- assign pills_list = pills_clean | split: '|||' -%}
    {%- endif -%}
  {%- endif -%}
{%- endif -%}

<product-info
  id="MainProduct-{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-url="{{ product.url }}"
>
  <div class="page-width">
    <section
      class="sk-product-hero"
      id="sk-radiance-product-hero-{{ section.id }}"
      data-base-handle="{{ product.handle }}"
      data-base-product-id="{{ product.id }}"
      data-base-variant-id="{{ product.selected_or_first_available_variant.id }}"
      data-base-available="{% if product.selected_or_first_available_variant.available %}true{% else %}false{% endif %}"
      data-bundle-handle="{{ bundle_handle }}"
      data-bundle-title="{{ bundle_title | escape }}"
      data-money-format="{{ shop.money_format | escape }}"
      data-product-form-id="{{ product_form_id }}"
    >
      <div class="sk-hero-grid">
        <!-- ================= LEFT: CANONICAL MEDIA ================= -->
        <div class="sk-hero-media">
          {% if media_images.size > 0 %}
            <div class="sk-hero-media-main">
              <div class="sk-hero-media-swiper swiper">
                <div class="swiper-wrapper">
                  {% for image in media_images %}
                    <div class="swiper-slide">
                      <img
                        src="{{ image | image_url: width: 900 }}"
                        alt="{{ image.alt | default: product.title | append: ' LED light therapy device' }}"
                        width="900"
                        height="900"
                        loading="lazy"
                      >
                    </div>
                  {% endfor %}
                </div>
                {% if media_images.size > 1 %}
                  <button class="sk-hero-arrow sk-hero-arrow--prev" type="button" aria-label="Previous hero image">
                    ‹
                  </button>
                  <button class="sk-hero-arrow sk-hero-arrow--next" type="button" aria-label="Next hero image">
                    ›
                  </button>
                {% endif %}
              </div>
            </div>

            <div class="sk-hero-gallery-wrapper">
              <div class="sk-hero-gallery">
                {% for image in media_images %}
                  <div class="sk-hero-thumb">
                    <img
                      src="{{ image | image_url: width: 120 }}"
                      alt="{{ image.alt | default: product.title }}"
                      width="120"
                      height="120"
                      loading="lazy"
                    >
                  </div>
                {% endfor %}
              </div>
              {% if media_images.size > 1 %}
                <div class="sk-hero-gallery-controls" aria-hidden="true">
                  <button class="sk-hero-arrow sk-hero-arrow--prev" type="button" aria-label="Scroll gallery left">
                    ‹
                  </button>
                  <button class="sk-hero-arrow sk-hero-arrow--next" type="button" aria-label="Scroll gallery right">
                    ›
                  </button>
                </div>
              {% endif %}
            </div>

            {% if media_images.size > 1 %}
              <div class="sk-hero-progress" role="tablist" aria-label="Hero swipe progress">
                {% for image in media_images %}
                  <button
                    type="button"
                    class="sk-hero-progress-dot{% if forloop.first %} is-active{% endif %}"
                    data-media-index="{{ forloop.index0 }}"
                    aria-label="View media {{ forloop.index }}"
                    aria-pressed="{% if forloop.first %}true{% else %}false{% endif %}"
                  ></button>
                {% endfor %}
              </div>
            {% endif %}
          {% endif %}
        </div>

        <!-- ================= RIGHT: METAOBJECT CONTENT ================= -->
        <div class="sk-hero-content">
          {% if product_info.radiance_eyebrow.value != blank %}
            <p class="sk-eyebrow">{{ product_info.radiance_eyebrow.value }}</p>
          {% endif %}

          <h1 class="sk-product-title">
            {{ product_info.radiance_heading.value | default: product.title }}
          </h1>

          {% if product_info.radiance_subheading.value != blank %}
            <p class="sk-product-subtitle">{{ product_info.radiance_subheading.value }}</p>
          {% endif %}

          <!-- REVIEWS -->
          <div class="sk-product-reviews">
            {% for block in section.blocks %}
              {% if block.type == '@app' %}
                {% render block %}
              {% endif %}
            {% endfor %}
          </div>

          <!-- PILLS -->
          {% if pills_list != blank %}
            <div class="sk-radiance-pills">
              {% for pill in pills_list %}
                {% assign pill_text = pill | strip %}
                {% if pill_text != blank %}
                  <span class="sk-pill">{{ pill_text }}</span>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}

          <!-- OFFER SELECTOR (Single vs Bundle) -->
          <div class="sk-offer-cards" data-sk-offer-cards>
            <!-- SINGLE -->
            <label class="sk-offer-card" data-sk-offer-card="single">
              <input type="radio" name="sk-offer" value="single" checked>
              <div class="sk-offer-card__inner">
                <div class="sk-offer-card__image-wrapper">
                  <img
                    src="{{ single_image_url }}"
                    alt="{{ single_image_alt | escape }}"
                    class="sk-offer-card__image"
                    width="640"
                    height="640"
                    loading="lazy"
                  >
                </div>
                <div class="sk-offer-card__content">
                  <div>
                    <div class="sk-offer-card__title">{{ product.title }}</div>
                    <div class="sk-offer-card__subtitle">Single device</div>
                  </div>
                  <div class="sk-offer-card__price" data-sk-card-price="single">
                    <div class="sk-price">
                      {% if base_variant.compare_at_price and base_variant.compare_at_price > base_variant.price %}
                        <span class="sk-price__value">
                          Verdi {{ base_variant.compare_at_price | money_without_trailing_zeros }}
                        </span>
                      {% endif %}
                      <span class="sk-price__current">
                        {{ base_variant.price | money_without_trailing_zeros }}
                      </span>
                    </div>
                  </div>
                </div>
                <div class="sk-offer-card__footer" aria-hidden="true"></div>
                <span class="sk-offer-card__check" aria-hidden="true"></span>
                <a
                  href="#"
                  class="sk-offer-card__notify"
                  data-sk-card-notify-button
                  data-klaviyo-backinstock
                  data-variant-id="{{ base_variant.id }}"
                  aria-label="Gi beskjed når tilgjengelig"
                >
                  Gi beskjed når tilgjengelig
                </a>
              </div>
            </label>

            <!-- BUNDLE -->
            <label
              class="sk-offer-card"
              data-sk-offer-card="bundle"
              data-sk-bundle-card
              {% if bundle_handle == blank %}
                style="display:none"
              {% endif %}
            >
              <input type="radio" name="sk-offer" value="bundle">
              <div class="sk-offer-card__inner">
                <span class="sk-offer-card__badge">Best verdi</span>
                <div class="sk-offer-card__image-wrapper">
                  <img
                    src="{{ bundle_image_url }}"
                    alt="{{ bundle_image_alt | escape }}"
                    class="sk-offer-card__image"
                    width="640"
                    height="640"
                    loading="lazy"
                  >
                </div>
                <div class="sk-offer-card__content">
                  <div>
                    <div class="sk-offer-card__title">{{ bundle_title | default: 'Face + Neck Kit' }}</div>
                    <div class="sk-offer-card__subtitle">Includes Face + Neck</div>
                  </div>
                  <div class="sk-offer-card__price" data-sk-card-price="bundle">
                    <div class="sk-price">
                      <span class="sk-price__value"></span>
                      <span class="sk-price__current">—</span>
                    </div>
                  </div>
                </div>
                <div class="sk-offer-card__footer" aria-hidden="true"></div>
                <span class="sk-offer-card__check" aria-hidden="true"></span>
                <a
                  href="#"
                  class="sk-offer-card__notify"
                  data-sk-card-notify-button
                  data-klaviyo-backinstock
                  data-variant-id=""
                  aria-label="Gi beskjed når tilgjengelig"
                >
                  Gi beskjed når tilgjengelig
                </a>
              </div>
            </label>
          </div>

          <!-- SHARED PRICE SLOT (changes with offer) -->
          <div class="sk-shared-price" data-sk-shared-price>
            {% render 'sk-radiance-price', product: product, section: section, show_badges: false %}
          </div>

          <!-- IMPORTANT: keep "id" in sync for the shared CTA -->
          <input
            type="hidden"
            name="id"
            value="{{ product.selected_or_first_available_variant.id }}"
            form="{{ product_form_id }}"
            data-sk-selected-variant-id
          >

          <!-- PURCHASE -->
          <div class="sk-purchase">
            <!-- Buy buttons wrapper (we toggle this) -->
            <div data-sk-buy-wrapper>
              {% render 'sk-radiance-buy-buttons', product: product, product_form_id: product_form_id %}
            </div>

            <div class="sk-trust-inline">
              <span>Gratis frakt i Norge</span>
              <span>Prøv hjemme i 30 dager</span>
              <span>Trygg betaling</span>
            </div>

            {% assign trust_badges_source = product_info.trust_badges | default: blank %}
            {% assign trust_badges_value = trust_badges_source.value | default: trust_badges_source %}
            {% assign trust_badges_size = trust_badges_value | size %}
            {% if trust_badges_value != blank and trust_badges_size > 0 %}
              <div class="sk-payment sk-trust-icons">
                {% for badge in trust_badges_value %}
                  {% assign badge_img = badge.url | default: badge.image | default: badge.src | default: badge %}
                  {% assign badge_alt = badge.alt | default: badge.alt_text | default: 'Trust badge' %}
                  {% if badge_img != blank %}
                    <span class="sk-trust-icon">
                      <img
                        src="{{ badge_img | image_url: width: 60 }}"
                        alt="{{ badge_alt }}"
                        width="60"
                        height="22"
                        loading="lazy"
                      >
                    </span>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}

            {% if product_info.radiance_content.value != blank %}
              <div class="sk-hero-info">
                {{ product_info.radiance_content | metafield_tag }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </section>
  </div>

  {% render 'sk-radiance-sticky-bar', section: section, product: product, product_form_id: product_form_id %}

  <script type="application/ld+json">
    {{ product | structured_data }}
  </script>

  <script>
    document.addEventListener('DOMContentLoaded', async function () {
      // =========================
      // HERO SWIPER
      // =========================
      (function initHeroSwiper() {
        if (typeof Swiper === 'undefined') return;

        const sectionEl = document.getElementById('sk-radiance-product-hero-{{ section.id }}');
        if (!sectionEl) return;

        const swiperRoot = sectionEl.querySelector('.sk-hero-media-swiper');
        if (!swiperRoot) return;

        const swiperElement = swiperRoot.querySelector('.swiper') || swiperRoot;
        if (!swiperElement) return;

        const prevButton = swiperRoot.querySelector('.sk-hero-arrow--prev');
        const nextButton = swiperRoot.querySelector('.sk-hero-arrow--next');
        const thumbnails = sectionEl.querySelectorAll('.sk-hero-thumb img');
        const progressDots = sectionEl.querySelectorAll('.sk-hero-progress-dot');
        const galleryPrevButton = sectionEl.querySelector('.sk-hero-gallery-controls .sk-hero-arrow--prev');
        const galleryNextButton = sectionEl.querySelector('.sk-hero-gallery-controls .sk-hero-arrow--next');
        const galleryRow = sectionEl.querySelector('.sk-hero-gallery');

        const swiperOptions = { slidesPerView: 1, loop: false, allowTouchMove: true, speed: 400 };
        if (prevButton && nextButton) swiperOptions.navigation = { prevEl: prevButton, nextEl: nextButton };

        const heroSwiper = new Swiper(swiperElement, swiperOptions);

        function updateProgressDots(index) {
          if (!progressDots.length) return;
          progressDots.forEach((dot, dotIndex) => {
            const isActive = dotIndex === index;
            dot.classList.toggle('is-active', isActive);
            dot.setAttribute('aria-pressed', isActive ? 'true' : 'false');
          });
        }

        function updateActiveThumb(index) {
          thumbnails.forEach((thumb, thumbIndex) => {
            thumb.classList.toggle('is-active', thumbIndex === index);
          });
          updateProgressDots(index);
        }

        updateActiveThumb(heroSwiper.activeIndex || 0);

        heroSwiper.on('slideChange', function () {
          updateActiveThumb(heroSwiper.activeIndex);
        });

        thumbnails.forEach((thumb, index) => {
          thumb.addEventListener('click', function () {
            heroSwiper.slideTo(index);
          });
        });

        progressDots.forEach((dot, index) => {
          dot.addEventListener('click', function () {
            heroSwiper.slideTo(index);
          });
        });

        function scrollGallery(direction) {
          if (!galleryRow) return;
          const step = Math.max(150, galleryRow.clientWidth * 0.6);
          galleryRow.scrollBy({ left: direction === 'next' ? step : -step, behavior: 'smooth' });
        }

        if (galleryPrevButton) galleryPrevButton.addEventListener('click', () => scrollGallery('prev'));
        if (galleryNextButton) galleryNextButton.addEventListener('click', () => scrollGallery('next'));
      })();

      // =========================
      // OFFER SWITCHING (Single vs Bundle)
      // - Updates: hidden variant id, shared price, buy/notify, card prices, sold-out state
      // =========================
      const root = document.getElementById('sk-radiance-product-hero-{{ section.id }}');
      if (!root) return;

      const baseHandle = root.dataset.baseHandle;
      const bundleHandleFromMeta = root.dataset.bundleHandle;
      const moneyFormat = root.dataset.moneyFormat || '{{ shop.money_format | escape }}';
      const productFormId = root.dataset.productFormId;
      const baseTitle = {{ product.title | json }};
      const bundleTitleFallback = {{ bundle_title | default: product.title | json }};

      // If you do NOT use metafield custom.bundle_product, put your bundle handle here:
      const fallbackBundleHandle = '';
      const bundleHandle = bundleHandleFromMeta || fallbackBundleHandle;

      const baseVariant = {
        id: {{ product.selected_or_first_available_variant.id | json }},
        price: {{ product.selected_or_first_available_variant.price | json }},
        compare_at_price: {{ product.selected_or_first_available_variant.compare_at_price | json }},
        available: {{ product.selected_or_first_available_variant.available | json }}
      };

      const offerRadios = root.querySelectorAll('input[name="sk-offer"]');
      const bundleCard = root.querySelector('[data-sk-bundle-card]');
      const singleCard = root.querySelector('[data-sk-offer-card="single"]');
      const bundleCardWrap = root.querySelector('[data-sk-offer-card="bundle"]');

      const hiddenVariantInput = root.querySelector('[data-sk-selected-variant-id]');
      const sharedPriceEl = root.querySelector('[data-sk-shared-price]');
      const buyWrapper = root.querySelector('[data-sk-buy-wrapper]');
      const notifyWrapper = root.querySelector('[data-sk-notify-wrapper]');
      const notifyBtn = root.querySelector('[data-sk-notify-button]');

      const cardPriceBundle = root.querySelector('[data-sk-card-price="bundle"]');
      const productForm = document.getElementById(productFormId);
      const variantFieldSelector = [
        productFormId ? `form#${productFormId} [name="id"]` : null,
        productFormId ? `[name="id"][form="${productFormId}"]` : null,
        `[name="id"][form^="product-form-"]`,
        productFormId ? `form#${productFormId} .product-variant-id` : null,
        `.product-variant-id`,
      ]
        .filter(Boolean)
        .join(',');
      const isDebugMode = new URLSearchParams(window.location.search).get('skdebug') === '1';
      const debugLog = (message, payload) => {
        if (!isDebugMode) return;
        console.debug('[sk-radiance-product]', message, payload);
      };
      window.__SK_ACTIVE_VARIANT_ID = window.__SK_ACTIVE_VARIANT_ID || baseVariant.id;
      window.__SK_ACTIVE_OFFER = window.__SK_ACTIVE_OFFER || 'single';

      const setActiveVariantId = (variantId, offer = 'single') => {
        if (!variantId) return [];

        window.__SK_ACTIVE_VARIANT_ID = variantId;
        window.__SK_ACTIVE_OFFER = offer;

        if (hiddenVariantInput) {
          hiddenVariantInput.value = variantId;
        }

        const inputs = variantFieldSelector
          ? Array.from(document.querySelectorAll(variantFieldSelector))
          : [];

        inputs.forEach((input) => {
          input.value = variantId;
          input.dispatchEvent(new Event('change', { bubbles: true }));
        });

        debugLog('setActiveVariantId', {
          variantId,
          offer,
          inputsUpdated: inputs.length,
        });

        return inputs;
      };

      const formatMoney = (cents) => {
        try {
          if (window.Shopify && typeof window.Shopify.formatMoney === 'function') {
            return window.Shopify.formatMoney(cents, moneyFormat);
          }
        } catch (e) {}
        return (cents / 100).toFixed(2);
      };

      const fetchProductJson = async (handle) => {
        const res = await fetch(`/products/${handle}.js`, { credentials: 'same-origin' });
        if (!res.ok) throw new Error(`Failed to load product JSON: ${handle}`);
        return await res.json();
      };

      const pickDefaultVariant = (productJson) => {
        if (!productJson || !productJson.variants) return null;
        return productJson.variants.find((v) => v.available) || productJson.variants[0] || null;
      };

      const replaceSharedPrice = (variant) => {
        if (!sharedPriceEl || !variant) return;

        const valueEl = sharedPriceEl.querySelector('.sk-price__value');
        const currentEl = sharedPriceEl.querySelector('.sk-price__current');
        if (!currentEl) return;

        const compareAt = variant.compare_at_price;
        const price = variant.price;

        const shouldShowCompare = compareAt && compareAt > price;
        if (valueEl) {
          valueEl.textContent = shouldShowCompare ? `Verdi ${formatMoney(compareAt)}` : '';
          valueEl.hidden = !shouldShowCompare;
        }

        currentEl.textContent = formatMoney(price);
      };

      const setAvailabilityUI = (available) => {
        // Toggle buy vs notify
        if (buyWrapper) buyWrapper.style.display = available ? '' : 'none';
        if (notifyWrapper) notifyWrapper.style.display = available ? 'none' : 'block';
      };

      const setCardUnavailable = (cardEl, isUnavailable, variantId) => {
        if (!cardEl) return;
        cardEl.classList.toggle('is-unavailable', !!isUnavailable);
        cardEl.setAttribute('aria-disabled', isUnavailable ? 'true' : 'false');
        const cardNotifyBtn = cardEl.querySelector('[data-sk-card-notify-button]');
        if (cardNotifyBtn) {
          if (variantId) {
            cardNotifyBtn.setAttribute('data-variant-id', variantId);
          }
          cardNotifyBtn.classList.toggle('is-visible', !!isUnavailable);
        }
        const radioInput = cardEl.querySelector('input[type="radio"]');
        if (radioInput) {
          radioInput.disabled = !!isUnavailable;
        }
      };

      const setNotifyVariant = (variantId) => {
        if (!notifyBtn) return;
        notifyBtn.setAttribute('data-variant-id', variantId);
      };

      const openNotifyFlow = (variantId) => {
        if (!notifyWrapper) return;
        if (variantId) setNotifyVariant(variantId);
        notifyWrapper.style.display = 'block';
        notifyWrapper.scrollIntoView({ behavior: 'smooth', block: 'center' });
        if (notifyBtn) notifyBtn.click();
      };

      const cardNotifyButtons = root.querySelectorAll('[data-sk-card-notify-button]');
      cardNotifyButtons.forEach((btn) => {
        btn.addEventListener('click', (event) => {
          event.preventDefault();
          event.stopPropagation();
          openNotifyFlow(btn.dataset.variantId || root.dataset.baseVariantId);
        });
      });

      const setBundleCardPrice = (variant) => {
        if (!cardPriceBundle || !variant) return;
        const valueEl = cardPriceBundle.querySelector('.sk-price__value');
        const currentEl = cardPriceBundle.querySelector('.sk-price__current');
        if (valueEl) {
          if (variant.compare_at_price && variant.compare_at_price > variant.price) {
            valueEl.textContent = `Verdi ${formatMoney(variant.compare_at_price)}`;
          } else {
            valueEl.textContent = '';
          }
        }
        if (currentEl) {
          currentEl.textContent = formatMoney(variant.price);
        }
      };

      const hydrateBundleCard = async () => {
        if (!bundleHandle) {
          if (bundleCard) bundleCard.style.display = 'none';
          return null;
        }

        try {
          const bundleJson = await fetchProductJson(bundleHandle);
          const bundleVariant = pickDefaultVariant(bundleJson);
          if (!bundleVariant) return null;

          setBundleCardPrice(bundleVariant);
          setCardUnavailable(bundleCardWrap, !bundleVariant.available, bundleVariant.id);

          return { product: bundleJson, variant: bundleVariant };
        } catch (e) {
          if (bundleCard) bundleCard.style.display = 'none';
          return null;
        }
      };

      const applyOffer = async (offerType, bundleData) => {
        let activeVariant = null;

        if (offerType === 'single') {
          activeVariant = baseVariant;
        }

        if (offerType === 'bundle') {
          if (!bundleData || !bundleData.variant) return;
          activeVariant = bundleData.variant;
        }

        if (!activeVariant) return;

        setActiveVariantId(activeVariant.id, offerType);
        setNotifyVariant(activeVariant.id);
        replaceSharedPrice(activeVariant);
        setAvailabilityUI(!!activeVariant.available);

        setCardUnavailable(singleCard, offerType === 'single' && !activeVariant.available, activeVariant.id);
        setCardUnavailable(bundleCardWrap, offerType === 'bundle' && !activeVariant.available, activeVariant.id);

        const offerTitle = offerType === 'bundle'
          ? (bundleData && bundleData.product && bundleData.product.title) || bundleTitleFallback || baseTitle
          : baseTitle;
        document.dispatchEvent(new CustomEvent('sk:offerchange', {
          detail: {
            offer: offerType,
            variantId: activeVariant.id,
            price: activeVariant.price,
            compare_at_price: activeVariant.compare_at_price,
            available: activeVariant.available,
            handle: offerType === 'single' ? baseHandle : bundleHandle,
            title: offerTitle
          }
        }));
      };

      const handleOfferChangeEvent = (event) => {
        const detail = event && event.detail;
        if (!detail || !detail.variantId) return;
        setActiveVariantId(detail.variantId, detail.offer || 'single');
      };

      document.addEventListener('sk:offerchange', handleOfferChangeEvent);

      if (productForm) {
        productForm.addEventListener('submit', () => {
          setActiveVariantId(
            window.__SK_ACTIVE_VARIANT_ID || baseVariant.id,
            window.__SK_ACTIVE_OFFER || 'single'
          );
        });
      }

      if (productForm && window.MutationObserver) {
        const observer = new MutationObserver((mutations) => {
          const shouldSync = mutations.some((mutation) =>
            Array.from(mutation.addedNodes).some((node) => {
              if (node.nodeType !== Node.ELEMENT_NODE) return false;
              if (node.matches('[name="id"]')) return true;
              if (typeof node.querySelector === 'function') {
                return !!node.querySelector('[name="id"]');
              }
              return false;
            })
          );
          if (shouldSync) {
            setActiveVariantId(
              window.__SK_ACTIVE_VARIANT_ID || baseVariant.id,
              window.__SK_ACTIVE_OFFER || 'single'
            );
          }
        });
        observer.observe(productForm, { childList: true, subtree: true });
      }

      window.SKDebug = () => ({
        activeVariantId: window.__SK_ACTIVE_VARIANT_ID,
        activeOffer: window.__SK_ACTIVE_OFFER,
        inputs: [...document.querySelectorAll('input[name="id"]')].map((input) => ({
          value: input.value,
          form: input.getAttribute('form'),
          inForm: !!input.closest('form'),
        })),
      });

      // 1) Hydrate bundle card + store data
      const bundleData = await hydrateBundleCard();

      // 2) Listen to offer changes
      offerRadios.forEach((radio) => {
        radio.addEventListener('change', async function () {
          if (!this.checked) return;

          try {
            if (this.value === 'bundle') {
              await applyOffer('bundle', bundleData);
            } else {
              await applyOffer('single', bundleData);
            }
          } catch (e) {
            // fail safe: revert to single
            offerRadios.forEach((r) => {
              if (r.value === 'single') r.checked = true;
            });
            await applyOffer('single', bundleData);
          }
        });
      });

      // 3) Ensure initial offer is applied AND sticky bar is hydrated
      await applyOffer('single', bundleData);
    });
