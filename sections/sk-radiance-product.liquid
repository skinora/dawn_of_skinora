<style>
  /* =============================
   BASE LAYOUT
============================= */

  .sk-product-hero {
    padding: 2rem 0 3rem;
  }

  .sk-hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 990px) {
    .sk-hero-grid {
      grid-template-columns: minmax(0, 45%) minmax(0, 55%);
      align-items: start;
      gap: 6rem;
    }
  }

  /* =============================
   MEDIA
============================= */

  .sk-hero-media {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .sk-hero-media-main {
    width: min(clamp(280px, 60vw, 750px), 100%);
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: 0;
  }

  .sk-hero-media-swiper {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .sk-hero-media-swiper .swiper,
  .sk-hero-media-swiper .swiper-slide {
    width: 100%;
    height: 100%;
  }

  .sk-hero-media-main img,
  .sk-hero-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .sk-hero-gallery-wrapper {
    width: min(clamp(240px, 65vw, 750px), 100%);
    margin-top: 0.75rem;
    overflow: hidden;
    position: relative;
  }

  .sk-hero-gallery {
    display: grid;
    grid-template-columns: repeat(6, minmax(120px, 1fr));
    gap: clamp(0.5rem, 1vw, 0.75rem);
    grid-auto-flow: column;
    grid-auto-columns: minmax(120px, 1fr);
    overflow-x: hidden;
  }

  .sk-hero-gallery-controls {
    position: absolute;
    inset: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    pointer-events: none;
    padding: 0 0.5rem;
  }

  .sk-hero-gallery-controls .sk-hero-arrow {
    pointer-events: auto;
  }

  .sk-hero-progress {
    display: none;
    gap: 0.65rem;
    justify-content: center;
    margin-top: 1rem;
  }

  .sk-hero-progress-dot {
    width: clamp(12px, 2vw, 16px);
    height: clamp(12px, 2vw, 16px);
    border: 1px solid var(--color-neutral-4, #49494a);
    background: transparent;
    border-radius: 0;
    padding: 0;
    cursor: pointer;
    transition: background 0.2s ease, border-color 0.2s ease;
  }

  .sk-hero-progress-dot.is-active,
  .sk-hero-progress-dot:focus-visible {
    background: var(--color-brand, #30273e);
    border-color: var(--color-brand, #30273e);
  }

  .sk-hero-thumb {
    width: 100%;
    aspect-ratio: 1 / 1;
  }

  .sk-hero-thumb img {
    border-radius: 10px;
    cursor: pointer;
    opacity: 0.85;
  }

  .sk-hero-thumb img.is-active {
    opacity: 1;
  }

  .sk-hero-thumb img:hover {
    opacity: 1;
  }

  .sk-hero-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    background: rgba(0, 0, 0, 0.45);
    color: #fff;
    font-size: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
  }

  .sk-hero-arrow--prev {
    left: 1rem;
  }

  .sk-hero-arrow--next {
    right: 1rem;
  }

  /* =============================
   CONTENT (unchanged)
============================= */

  .sk-eyebrow {
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #6b6b76;
    margin-bottom: 0.5rem;
  }

  .sk-product-title {
    font-size: 2rem;
    line-height: 1.15;
    margin-bottom: 0.75rem;
  }

  @media (min-width: 990px) {
    .sk-product-title {
      font-size: 2.5rem;
    }
  }

  .sk-product-subtitle {
    font-size: 1.25rem;
    color: #3a3a42;
    margin-bottom: 1.25rem;
    max-width: 42ch;
  }

  /* =============================
   PILLS
============================= */

  .sk-radiance-pills {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-bottom: 1.75rem;
  }

  .sk-pill {
    border: 1.5px solid #d4d4dc;
    border-radius: 999px;
    padding: 0.5rem 1.25rem;
    font-size: 1rem;
    font-weight: 500;
    background: #fff;
  }

  /* =============================
   PURCHASE / TRUST
============================= */

  .sk-purchase {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .sk-trust-inline {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.75rem;
    color: #5b5b66;
  }

  .sk-trust-icons {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    flex-wrap: wrap;
    opacity: 0.7;
  }

  .sk-trust-icon img {
    height: 22px;
    width: auto;
    display: block;
  }

  /* =============================
   INFO
============================= */

  .sk-hero-info {
    margin-top: 2.5rem;
    padding-top: 2rem;
    border-top: 1px solid #ececf2;
  }

  @media (max-width: 768px) {
    .sk-hero-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .sk-hero-progress {
      display: flex;
    }

    .sk-hero-media-main,
    .sk-hero-gallery-wrapper {
      width: min(750px, calc(100vw - 2rem));
    }

    .sk-hero-media-main {
      margin: 0 auto;
    }

    .sk-hero-thumb {
      width: min(750px, calc(100vw - 2rem));
      height: min(750px, calc(100vw - 2rem));
    }

    .sk-hero-gallery {
      gap: 0.75rem;
      padding-bottom: 0.75rem;
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    .sk-hero-gallery-wrapper {
      display: none;
    }
  }

  @media (max-width: 1200px) {
    .sk-hero-gallery {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
  }

  @media (max-width: 992px) {
    .sk-hero-gallery {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  /* =============================
     STICKY BOTTOM BAR
  ============================= */

  .sk-radiance-sticky-bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    background: linear-gradient(to left, var(--color-brand, #30273e), var(--color-white, #ffffff)) !important;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
    z-index: 999;
    transform: translateY(100%);
    transition: transform 0.3s ease-in-out;
    padding: 1.35rem 0;
  }

  .sk-radiance-sticky-bottom-bar.visible {
    transform: translateY(0);
  }

  .sk-radiance-sticky-bottom-bar__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
  }

  .sk-radiance-sticky-bottom-bar__info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
    justify-content: center;
  }

  .sk-radiance-sticky-bottom-bar__product-name {
    font-size: 28px;
    font-weight: 600;
    color: var(--color-brand, #30273e);
    margin: 0;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-top: 1rem;
  }

  .sk-radiance-sticky-bottom-bar__button {
    min-width: clamp(10rem, 24vw, 15rem);
    white-space: nowrap;
    justify-content: center;
  }

  @media screen and (max-width: 749px) {
    .sk-radiance-sticky-bottom-bar {
      padding: 1rem 0;
    }

    .sk-radiance-sticky-bottom-bar__content {
      flex-direction: column;
      gap: 0.75rem;
    }

    .sk-radiance-sticky-bottom-bar__info {
      width: 100%;
      text-align: center;
    }

    .sk-radiance-sticky-bottom-bar__product-name {
      font-size: var(--sk-font-size-medium);
      white-space: normal;
      line-height: 1.4;
      max-height: 2.8em;
      overflow: hidden;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      line-clamp: 2;
    }

    .sk-radiance-sticky-bottom-bar__price {
      justify-content: center;
    }

    .sk-radiance-sticky-bottom-bar__button {
      width: 100%;
      min-width: auto;
    }
  }

  body.cart-drawer-open .sk-radiance-sticky-bottom-bar,
  body.cart-drawer-open .sk-radiance-sticky-bottom-bar--portal {
    opacity: 0 !important;
    visibility: hidden !important;
    pointer-events: none !important;
    transform: translateY(100%) !important;
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .sk-radiance-sticky-bottom-bar__product-name {
      font-size: var(--sk-font-size-medium);
    }

    .sk-radiance-sticky-bottom-bar__button {
      min-width: 180px;
      padding: 0.875rem 1.5rem;
    }
  }

  .sk-radiance-sticky-bottom-bar--portal {
    position: fixed !important;
    bottom: 0 !important;
    left: 0 !important;
    right: 0 !important;
    z-index: 2147483000 !important;
    pointer-events: auto !important;
    transform: translateY(100%);
    transition: transform 0.3s ease-in-out;
  }

  .sk-radiance-sticky-bottom-bar--portal.visible {
    transform: translateY(0) !important;
  }

  body.sk-sticky-bar-visible {
    padding-bottom: 72px;
  }

  @media (max-width: 989px) {
    body.sk-sticky-bar-visible {
      padding-bottom: 100px;
    }
  }
</style>

{%- assign product_info_reference = product.metafields.custom.product_info
  | default: product.metafields.product_info
-%}
{%- assign product_info = product_info_reference.value -%}
{%- assign product_form_id = 'product-form-' | append: section.id -%}
{%- assign media_images = product.media | where: 'media_type', 'image' -%}

<product-info
  id="MainProduct-{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-url="{{ product.url }}"
>
  <div class="page-width">
    <section class="sk-product-hero" id="sk-radiance-product-hero-{{ section.id }}">
      <div class="sk-hero-grid">
        <!-- ================= LEFT: CANONICAL MEDIA ================= -->
        <div class="sk-hero-media">
          {% if media_images.size > 0 %}
            <div class="sk-hero-media-main">
              <div class="sk-hero-media-swiper swiper">
                <div class="swiper-wrapper">
                  {% for image in media_images %}
                    <div class="swiper-slide">
                      <img
                        src="{{ image | image_url: width: 900 }}"
                        alt="{{ image.alt | default: product.title | append: ' LED light therapy device' }}"
                        width="900"
                        height="900"
                        loading="lazy"
                      >
                    </div>
                  {% endfor %}
                </div>
                {% if media_images.size > 1 %}
                  <button class="sk-hero-arrow sk-hero-arrow--prev" type="button" aria-label="Previous hero image">
                    ‹
                  </button>
                  <button class="sk-hero-arrow sk-hero-arrow--next" type="button" aria-label="Next hero image">
                    ›
                  </button>
                {% endif %}
              </div>
            </div>

            <div class="sk-hero-gallery-wrapper">
              <div class="sk-hero-gallery">
                {% for image in media_images %}
                  <div class="sk-hero-thumb">
                    <img
                      src="{{ image | image_url: width: 120 }}"
                      alt="{{ image.alt | default: product.title }}"
                      width="120"
                      height="120"
                      loading="lazy"
                    >
                  </div>
                {% endfor %}
              </div>
              {% if media_images.size > 1 %}
                <div class="sk-hero-gallery-controls">
                  <button class="sk-hero-arrow sk-hero-arrow--prev" type="button" aria-label="Scroll gallery left">
                    ‹
                  </button>
                  <button class="sk-hero-arrow sk-hero-arrow--next" type="button" aria-label="Scroll gallery right">
                    ›
                  </button>
                </div>
              {% endif %}
            </div>
            {% if media_images.size > 1 %}
              <div class="sk-hero-progress" role="tablist" aria-label="Hero swipe progress">
                {% for image in media_images %}
                  <button
                    type="button"
                    class="sk-hero-progress-dot{% if forloop.first %} is-active{% endif %}"
                    data-media-index="{{ forloop.index0 }}"
                    aria-label="View media {{ forloop.index }}"
                    aria-pressed="{% if forloop.first %}true{% else %}false{% endif %}"
                  ></button>
                {% endfor %}
              </div>
            {% endif %}
          {% endif %}
        </div>

        <!-- ================= RIGHT: METAOBJECT CONTENT ================= -->

        <div class="sk-hero-content">
          {% if product_info.radiance_eyebrow.value != blank %}
            <p class="sk-eyebrow">{{ product_info.radiance_eyebrow.value }}</p>
          {% endif %}

          <h1 class="sk-product-title">
            {{ product_info.radiance_heading.value | default: product.title }}
          </h1>

          {% if product_info.radiance_subheading.value != blank %}
            <p class="sk-product-subtitle">
              {{ product_info.radiance_subheading.value }}
            </p>
          {% endif %}

          <!-- REVIEWS -->
          <div class="sk-product-reviews">
            {% for block in section.blocks %}
              {% if block.type == '@app' %}
                {% render block %}
              {% endif %}
            {% endfor %}
          </div>

          <!-- PILLS -->
          {% if product_info.radiance_pills.value != blank %}
            <div class="sk-radiance-pills">
              {% for pill in product_info.radiance_pills.value %}
                <span class="sk-pill">{{ pill }}</span>
              {% endfor %}
            </div>
          {% endif %}

          <!-- PURCHASE -->
          <div class="sk-purchase">
            {% render 'sk-radiance-product-variant-picker', product: product, product_form_id: product_form_id %}

            {% render 'sk-radiance-quantity', product: product, product_form_id: product_form_id, section: section %}

            <div class="sk-trust-inline">
              <span>Free shipping</span>
              <span>30-day returns</span>
              <span>Secure checkout</span>
              <span>2-year warranty</span>
            </div>

            {% assign trust_badges_source = product_info.trust_badges | default: blank %}
            {% assign trust_badges_value = trust_badges_source.value | default: trust_badges_source %}
            {% if trust_badges_value != blank %}
              <div class="sk-payment sk-trust-icons">
                {% for badge in trust_badges_value %}
                  {% assign badge_img = badge.url | default: badge.image | default: badge.src | default: badge %}
                  {% assign badge_alt = badge.alt | default: badge.alt_text | default: 'Trust badge' %}
                  {% if badge_img != blank %}
                    <span class="sk-trust-icon">
                      <img
                        src="{{ badge_img | image_url: width: 60 }}"
                        alt="{{ badge_alt }}"
                        width="60"
                        height="22"
                        loading="lazy"
                      >
                    </span>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}

            {% if product_info.radiance_content.value != blank %}
              <div class="sk-hero-info">
                {{ product_info.radiance_content | metafield_tag }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </section>
  </div>

  {% render 'sk-radiance-sticky-bar', section: section, product: product, product_form_id: product_form_id %}

  <script type="application/ld+json">
    {{ product | structured_data }}
  </script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (typeof Swiper === 'undefined') return;

      const sectionEl = document.getElementById('sk-radiance-product-hero-{{ section.id }}');
      if (!sectionEl) return;

      const swiperRoot = sectionEl.querySelector('.sk-hero-media-swiper');
      if (!swiperRoot) return;

      const swiperElement = swiperRoot.querySelector('.swiper') || swiperRoot;
      if (!swiperElement) return;

      const prevButton = swiperRoot.querySelector('.sk-hero-arrow--prev');
      const nextButton = swiperRoot.querySelector('.sk-hero-arrow--next');
      const thumbnails = sectionEl.querySelectorAll('.sk-hero-thumb img');
      const progressDots = sectionEl.querySelectorAll('.sk-hero-progress-dot');
      const galleryPrevButton = sectionEl.querySelector('.sk-hero-gallery-controls .sk-hero-arrow--prev');
      const galleryNextButton = sectionEl.querySelector('.sk-hero-gallery-controls .sk-hero-arrow--next');
      const galleryRow = sectionEl.querySelector('.sk-hero-gallery');
      const heroMediaMain = sectionEl.querySelector('.sk-hero-media-main');

      const swiperOptions = {
        slidesPerView: 1,
        loop: false,
        allowTouchMove: true,
        speed: 400,
      };

      if (prevButton && nextButton) {
        swiperOptions.navigation = {
          prevEl: prevButton,
          nextEl: nextButton,
        };
      }

      const heroSwiper = new Swiper(swiperElement, swiperOptions);

      function updateActiveThumb(index) {
        thumbnails.forEach((thumb, thumbIndex) => {
          thumb.classList.toggle('is-active', thumbIndex === index);
        });

        updateProgressDots(index);
      }

      function updateProgressDots(index) {
        if (!progressDots.length) return;
        progressDots.forEach((dot, dotIndex) => {
          const isActive = dotIndex === index;
          dot.classList.toggle('is-active', isActive);
          dot.setAttribute('aria-pressed', isActive ? 'true' : 'false');
        });
      }

      function scrollHeroIntoView() {
        if (!heroMediaMain) return;
        heroMediaMain.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }

      updateActiveThumb(heroSwiper.activeIndex || 0);

      heroSwiper.on('slideChange', function () {
        updateActiveThumb(heroSwiper.activeIndex);
        scrollHeroIntoView();
      });

      thumbnails.forEach((thumb, index) => {
        thumb.addEventListener('click', function () {
          heroSwiper.slideTo(index);
          scrollHeroIntoView();
        });
      });

      progressDots.forEach((dot, index) => {
        dot.addEventListener('click', function () {
          heroSwiper.slideTo(index);
          scrollHeroIntoView();
        });
      });

      function scrollGallery(direction) {
        if (!galleryRow) return;
        const step = galleryRow.clientWidth / 2 || 150;
        galleryRow.scrollBy({
          left: direction === 'next' ? step : -step,
          behavior: 'smooth',
        });
      }

      if (galleryPrevButton) {
        galleryPrevButton.addEventListener('click', function () {
          scrollGallery('prev');
        });
      }

      if (galleryNextButton) {
        galleryNextButton.addEventListener('click', function () {
          scrollGallery('next');
        });
      }
    });
  </script>
</product-info>

