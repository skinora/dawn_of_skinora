{{ 'section-sk-radiance-product.css' | asset_url | stylesheet_tag }}

<style>
/* =============================
   BASE LAYOUT
============================= */

.sk-product-hero {
  padding: 2rem 0 3rem;
}

.sk-hero-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
}

/* Desktop */
@media (min-width: 990px) {
  .sk-hero-grid {
    grid-template-columns: 1.1fr 0.9fr;
    align-items: start;
    gap: 3rem;
  }
}

/* =============================
   MEDIA
============================= */

.sk-hero-media img {
  width: 100%;
  height: auto;
  border-radius: 16px;
  display: block;
}

/* =============================
   CONTENT
============================= */

.sk-eyebrow {
  font-size: 0.75rem;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: #6b6b76;
  margin-bottom: 0.5rem;
}

.sk-product-title {
  font-size: 2rem;
  line-height: 1.15;
  margin-bottom: 0.75rem;
}

@media (min-width: 990px) {
  .sk-product-title {
    font-size: 2.4rem;
  }
}

.sk-product-subtitle {
  font-size: 1.05rem;
  color: #3a3a42;
  margin-bottom: 1.25rem;
  max-width: 42ch;
}

/* =============================
   PILLS
============================= */

.sk-radiance-pills {
  display: flex;
  gap: 0.6rem;
  flex-wrap: wrap;
  margin-bottom: 1.75rem;
}

.sk-pill {
  border: 1.5px solid #d4d4dc;
  border-radius: 999px;
  padding: 0.5rem 1.1rem;
  font-size: 0.9rem;
  font-weight: 500;
  background: #fff;
}

/* =============================
   PURCHASE
============================= */

.sk-purchase {
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
}

.sk-option-group {
  border: 1px solid #e2e2ea;
  border-radius: 14px;
  padding: 1rem;
}

.sk-option-group--highlight {
  border-color: #487ab7;
  background: #f4f7fb;
}

.sk-option {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.sk-option label {
  font-weight: 500;
}

.sk-price {
  font-size: 1.4rem;
  font-weight: 600;
}

/* =============================
   WHAT YOU SHOULD KNOW
============================= */

.sk-hero-info {
  margin-top: 2.5rem;
  padding-top: 2rem;
  border-top: 1px solid #ececf2;
}

.sk-hero-info h3 {
  font-size: 1.1rem;
  margin-bottom: 0.75rem;
}

.sk-hero-info ul {
  padding-left: 1.2rem;
  color: #3f3f46;
}

.sk-hero-info li {
  margin-bottom: 0.5rem;
}

/* =============================
   TRUST
============================= */

.sk-trust-inline {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  font-size: 0.85rem;
  color: #5b5b66;
}

.sk-payment {
  margin-top: 0.75rem;
  opacity: 0.7;
}

/* =============================
   MOBILE STICKY CTA (OPTIONAL)
============================= */

@media (max-width: 989px) {
  .sk-sticky-cta {
    position: sticky;
    bottom: 0;
    background: #fff;
    padding: 1rem;
    border-top: 1px solid #e5e5ef;
    z-index: 10;
  }
}
</style>

{%- assign product_info_reference = product.metafields.custom.product_info | default: product.metafields.product_info -%}
{%- assign product_info = product_info_reference.value -%}

<product-info
  id="MainProduct-{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-url="{{ product.url }}"
>
  <div class="page-width">

    <!-- ================= HERO ================= -->
    <section class="sk-product-hero">
      <div class="sk-hero-grid">

        <!-- MEDIA -->
        <div class="sk-hero-media">
          {% if product_info.radiance_image.value != blank %}
            <img
              src="{{ product_info.radiance_image.value | image_url: width: 900 }}"
              alt="{{ product.title | escape }}"
              width="900"
              height="900"
              loading="lazy"
            >
          {% endif %}
        </div>

        <!-- CONTENT -->
        <div class="sk-hero-content">

          {% if product_info.radiance_eyebrow.value != blank %}
            <p class="sk-eyebrow">{{ product_info.radiance_eyebrow.value }}</p>
          {% endif %}

          <h1 class="sk-product-title">
            {{ product_info.radiance_heading.value | default: product.title }}
          </h1>

          {% if product_info.radiance_subheading.value != blank %}
            <p class="sk-product-subtitle">
              {{ product_info.radiance_subheading.value }}
            </p>
          {% endif %}

          <!-- REVIEWS -->
          <div class="sk-product-reviews">
            {% for block in section.blocks %}
              {% if block.type == '@app' %}
                {% render block %}
              {% endif %}
            {% endfor %}
          </div>

          <!-- PILLS -->
          {% if product_info.radiance_pills.value != blank %}
            <div class="sk-radiance-pills">
              {% assign pills = product_info.radiance_pills.value | split: '\n' %}
              {% for pill in pills %}
                {% if pill != blank %}
                  <span class="sk-pill">{{ pill | strip }}</span>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}

          <!-- PURCHASE -->
          <div class="sk-purchase">

            {% render 'sk-radiance-product-variant-picker',
              product: product,
              product_form_id: product_form_id
            %}

            {% render 'sk-radiance-quantity',
              product: product,
              product_form_id: product_form_id,
              section: section
            %}

            {% render 'sk-radiance-buy-buttons',
              product: product,
              product_form_id: product_form_id
            %}

            <div class="sk-trust-inline">
              <span>Free shipping</span>
              <span>30-day returns</span>
              <span>Secure checkout</span>
              <span>2-year warranty</span>
            </div>

            <div class="sk-payment">
              {{ product_info.trust_badges | metafield_tag }}
            </div>
          </div>

          <!-- WHAT YOU SHOULD KNOW -->
          {% if product_info.radiance_content.value != blank %}
            <div class="sk-hero-info">
              {{ product_info.radiance_content | metafield_tag }}
            </div>
          {% endif %}

        </div>
      </div>
    </section>

  </div>

  <!-- JSON-LD -->
  <script type="application/ld+json">
    {{ product | structured_data }}
  </script>
</product-info>

{% schema %}
{
  "name": "SK Radiance Product Hero",
  "tag": "section",
  "class": "section",
  "blocks": [{ "type": "@app" }],
  "settings": []
}
{% endschema %}
