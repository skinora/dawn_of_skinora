<style>
  /* =============================
     BASE LAYOUT
  ============================= */

  .sk-product-hero {
    --sk-brand: var(--color-brand, #30273e);
    --sk-border: var(--color-border, #e7e7ed);
    --sk-pill-border: var(--color-border-light, #d4d4dc);
    --sk-neutral-contrast: var(--color-neutral-2, #7a7a85);
    --sk-hero-muted: rgba(var(--color-brand-rgb), 0.06);
    --sk-info-divider: var(--color-bg-light, #f1eff4);
    --sk-info-muted: var(--color-neutral-4, #8c8c95);
    padding: 2rem 0 3rem;
    max-width: 100vw;
    margin: 0 auto;
  }

  .sk-hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .sk-product-hero,
  .sk-hero-grid,
  .sk-hero-media,
  .sk-hero-content {
    width: 100%;
    box-sizing: border-box;
    min-width: 0;
    max-inline-size: 100%;
  }

  @media (min-width: 990px) {
    .sk-hero-grid {
      grid-template-columns: minmax(0, 45%) minmax(0, 55%);
      align-items: start;
      gap: 6rem;
    }
  }

  /* =============================
     MEDIA
  ============================ */

  .sk-hero-media {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .sk-hero-media-main {
    width: min(clamp(280px, 60vw, 750px), 100%);
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: 0;
  }

  .sk-hero-media-swiper {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .sk-hero-media-swiper .swiper,
  .sk-hero-media-swiper .swiper-slide {
    width: 100%;
    height: 100%;
  }

  .sk-hero-media-main img,
  .sk-hero-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .sk-hero-gallery-wrapper {
    width: min(clamp(240px, 65vw, 750px), 100%);
    margin-top: 0.75rem;
    position: relative;
  }

  /* IMPORTANT: allow horizontal scroll */
  .sk-hero-gallery {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: minmax(110px, 1fr);
    gap: clamp(0.5rem, 1vw, 0.75rem);
    overflow-x: auto;
    overflow-y: hidden;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding: 0.25rem 0;
    scrollbar-width: thin;
    scrollbar-color: rgba(var(--color-foreground), 0.4) transparent;
  }

  .sk-hero-gallery::-webkit-scrollbar {
    height: 8px;
  }

  .sk-hero-gallery::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.15);
    border-radius: 999px;
  }

  .sk-hero-thumb {
    width: 100%;
    aspect-ratio: 1 / 1;
    scroll-snap-align: start;
  }

  .sk-hero-thumb img {
    border-radius: 10px;
    cursor: pointer;
    opacity: 0.85;
    transition: opacity 0.15s ease;
  }

  .sk-hero-thumb img.is-active,
  .sk-hero-thumb img:hover {
    opacity: 1;
  }

  .sk-hero-progress {
    display: none;
    gap: 0.75rem;
    justify-content: center;
    margin-top: 1rem;
  }

  .sk-hero-progress-dot {
    width: clamp(12px, 2vw, 16px);
    height: clamp(12px, 2vw, 16px);
    border: 1px solid var(--color-neutral-4, #49494a);
    background: transparent;
    border-radius: 0;
    padding: 0;
    cursor: pointer;
    transition: background 0.2s ease, border-color 0.2s ease;
  }

  .sk-hero-progress-dot.is-active,
  .sk-hero-progress-dot:focus-visible {
    background: var(--sk-brand);
    border-color: var(--sk-brand);
  }

  .sk-hero-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    background: rgba(0, 0, 0, 0.45);
    color: var(--color-white);
    font-size: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
  }

  .sk-hero-arrow:focus-visible {
    outline: 2px solid var(--sk-brand);
    outline-offset: 2px;
    box-shadow: 0 0 0 4px rgba(var(--color-brand-rgb), 0.2);
  }

  .sk-hero-arrow--prev {
    left: 1rem;
  }

  .sk-hero-arrow--next {
    right: 1rem;
  }

  /* gallery arrows sit over gallery */
  .sk-hero-gallery-controls {
    position: absolute;
    inset: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    pointer-events: none;
    padding: 0 0.5rem;
  }

  .sk-hero-gallery-controls .sk-hero-arrow {
    pointer-events: auto;
    background: rgba(0, 0, 0, 0.35);
    width: 34px;
    height: 34px;
  }

  /* =============================
     CONTENT
  ============================= */

  .sk-hero-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .sk-eyebrow {
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-neutral-2, #6b6b76);
    margin: 0;
  }

  .sk-product-title {
    font-size: 1rem;
    line-height: 1.15;
    margin: 0;
  }

  @media (min-width: 990px) {
    .sk-product-title {
      font-size: 1.25rem;
    }

    .sk-product-hero {
      padding: 3rem 0 4rem;
    }

    .sk-hero-content {
      gap: 2rem;
    }

    .sk-eyebrow {
      font-size: 1.35rem;
      letter-spacing: 0.12em;
      margin-bottom: 0.75rem;
      text-transform: uppercase;
      font-weight: 500;
      color: var(--color-neutral-2, #6b6b76);
    }

    .sk-product-title {
      font-size: clamp(2.8rem, 3vw, 3.8rem);
      line-height: 0.45;
      margin-bottom: 0.75rem;
      font-weight: 550;
    }

    .sk-product-subtitle {
      font-size: 1.9rem;
      line-height: 1.6;
      margin-bottom: 1rem;
    }

    .sk-pill {
      font-size: 1.4rem;
    }
  }

  /* =============================
     PILLS
  ============================= */

  .sk-radiance-pills {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin: 0;
  }

  .sk-pill {
    border: 1.5px solid var(--color-border-light, #d4d4dc);
    border-radius: 999px;
    padding: 0.5rem 1.25rem;
    font-size: 1.15rem;
    font-weight: 500;
    background: var(--color-white);
  }

  /* =============================
     OFFER CARDS (Single vs Bundle)
  ============================= */

  .sk-offer-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, max-content));
    column-gap: var(--sk-gap-sm, 1rem);
    row-gap: var(--sk-gap-sm, 1rem);
    margin: 0;
    grid-auto-rows: auto;
    align-items: stretch;
    justify-content: flex-start;
    justify-items: start;
    max-width: 100%;
  }

  .sk-offer-card {
    cursor: pointer;
    display: flex;
    align-items: stretch;
    position: relative;
    width: 100%;
    height: 100%;
  }

  .sk-offer-card input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .sk-offer-card__inner {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1.25rem 0.75rem 0.75rem;
    border-radius: 0;
    border: 1px solid var(--sk-border);
    background: var(--color-white);
    transition: border 0.2s ease, transform 0.08s ease;
    min-height: 330px;
    flex: 1;
  }

  @media (prefers-reduced-motion: reduce) {
    .sk-offer-card__inner {
      transition: none;
      transform: none;
    }
  }

  .sk-offer-card input:checked + .sk-offer-card__inner {
    border-color: var(--sk-brand);
  }

  .sk-offer-card input:focus-visible + .sk-offer-card__inner {
    outline: 2px solid var(--sk-brand);
    outline-offset: 4px;
    box-shadow: 0 0 0 1px rgba(var(--color-brand-rgb), 0.35);
  }

  .sk-offer-card:active .sk-offer-card__inner {
    transform: none;
  }

  .sk-offer-card__badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--sk-brand);
    color: var(--color-white);
    font-size: 0.65rem;
    padding: 0.25rem 0.5rem;
    border-radius: 999px;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .sk-offer-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .sk-offer-card__notify {
    display: none;
    min-width: 0;
    text-decoration: none;
  }

  .sk-offer-card__notify.is-visible {
    display: inline-flex;
    align-self: flex-start;
    margin-top: 0.5rem;
    gap: 0.5rem;
    padding: 0;
    background: none;
    border: none;
    color: var(--sk-brand);
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-decoration: underline;
    cursor: pointer;
  }

  .sk-offer-card__notify.is-visible:hover,
  .sk-offer-card__notify.is-visible:focus-visible {
    text-decoration: none;
    opacity: 0.85;
  }

  .sk-offer-card__title {
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 2;
    margin: 0;
  }

  .sk-offer-card__subtitle {
    font-size: 0.85rem;
    color: var(--sk-neutral-contrast, #7a7a85);
    margin: 0;
  }

  .sk-offer-card__price {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    line-height: 1;
  }

  .sk-price {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .sk-price__value {
    font-size: 0.85rem;
    font-weight: 400;
    color: var(--color-neutral-2, #6b6b76);
    text-transform: none;
    letter-spacing: 0;
  }

  .sk-price__value:empty {
    display: none;
  }

  .sk-price__current {
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--sk-brand);
  }

  .sk-offer-card__check {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    width: 11px;
    height: 11px;
    border-radius: 50%;
    border: 1px solid var(--color-border-light, #cfcfd6);
    background: var(--color-white);
    transition: border 0.2s ease, background 0.2s ease;
  }

  .sk-offer-card input:checked + .sk-offer-card__inner .sk-offer-card__check {
    background: var(--sk-brand);
    border-color: var(--sk-brand);
  }

  .sk-offer-card__footer {
    height: 1px;
  }

  .sk-offer-card.is-unavailable {
  }

  .sk-offer-card.is-unavailable::after {
    content: 'Utsolgt';
    position: absolute;
    top: 14px;
    left: 14px;
    font-size: 0.8rem;
    color: var(--sk-info-muted, #8c8c95);
  }
  .sk-offer-card.is-unavailable .sk-offer-card__badge,
  .sk-offer-card.is-unavailable .sk-offer-card__image-wrapper,
  .sk-offer-card.is-unavailable .sk-offer-card__content,
  .sk-offer-card.is-unavailable .sk-offer-card__check {
    opacity: 0.45;
  }

  .sk-offer-card__image-wrapper {
    width: 100%;
    height: 140px;
    border-radius: 0;
    background: transparent;
    overflow: hidden;
  }

  .sk-offer-card__content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 0.5rem;
  }

  .sk-offer-card {
    max-width: 260px;
    width: 260px;
  }

  @media (max-width: 768px) {
    .sk-trust-icons {
      gap: 0.25rem;
    }

    .sk-trust-icon {
      flex: 1 1 80px;
      max-width: 120px;
    }

    .sk-trust-inline span + span::before {
      display: inline-flex;
      align-self: center;
      margin: 0 0.35rem;
    }

    .sk-pill {
      font-size: 1.2rem;
    }
  }

  @media (max-width: 989px) {
    .sk-offer-card__inner {
      padding: 1rem;
    }
  }

  /* =============================
     SHARED PRICE SLOT WRAPPER
  ============================= */

  .sk-shared-price {
    margin: 0;
  }

  /* =============================
     PURCHASE / TRUST
  ============================= */

  .sk-purchase {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .sk-trust-inline {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
    font-size: 1.75rem;
    font-weight: 500;
    line-height: 1.5;
    color: var(--color-neutral-3, #57575f);
    letter-spacing: 0.02em;
    text-transform: none;
    margin: 0;
    padding: 1rem 0;
    border-top: 1px solid var(--color-neutral-5, #d5d5d9);
    border-bottom: 1px solid var(--color-neutral-5, #d5d5d9);
    text-align: center;
  }

  .sk-trust-inline span {
    white-space: normal;
  }

  .sk-trust-inline span + span::before {
    content: '';
    display: inline-block;
    width: 4px;
    height: 4px;
    margin: 0 8px;
    border-radius: 50%;
    background: var(--color-neutral-4, #9a9aa0);
    vertical-align: middle;
  }

  @media (max-width: 768px) {
    .sk-trust-inline span + span::before {
      display: inline-block;
    }

    .sk-trust-icons {
      gap: 0.15rem;
    }

    .sk-trust-icon {
      flex: 1 1 0;
      max-width: 120px;
    }
  }
  .sk-trust-icons {
    display: flex;
    gap: 0.15rem;
    align-items: center;
    flex-wrap: wrap;
    justify-content: center;
    opacity: 0.7;
    overflow-x: hidden;
  }

  .sk-trust-icon {
    flex: 1 1 0px;
    max-width: 120px;
    min-width: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .sk-trust-icon img {
    width: auto;
    max-width: 100%;
    max-height: clamp(64px, 9vw, 90px);
    height: auto;
    display: block;
  }

  /* =============================
     NOTIFY BUTTON (Klaviyo trigger)
  ============================= */

  .sk-notify {
    display: none;
  }

  .sk-notify__button {
    width: 100%;
    border-radius: 12px;
    padding: 1rem 1rem;
    font-weight: 650;
    border: 1px solid var(--sk-brand);
    background: var(--color-white);
    color: var(--sk-brand);
    cursor: pointer;
  }

  .sk-notify__hint {
    margin-top: 0.5rem;
    font-size: 0.85rem;
    color: var(--color-neutral-2, #6b6b76);
  }

  /* =============================
     INFO
  ============================= */

  .sk-hero-info {
    margin-top: 2.5rem;
    padding-top: 2rem;
    border-top: 1px solid var(--sk-info-divider);
  }

  @media (max-width: 768px) {
    .sk-eyebrow {
      margin: 0 0 0.5rem;
      letter-spacing: 0.1em;
      font-weight: 500;
      line-height: 1;
      opacity: 0.85;
      font-size: 1.2rem;
    }

    .sk-product-title {
      font-size: 2.6rem;
      font-weight: 600;
      margin: 0 0 0.5rem;
      line-height: 1.25;
    }

    .sk-product-subtitle {
      margin: 0 0 1rem;
      font-size: 1.4rem;
      line-height: 1.5;
      color: var(--color-neutral-4, #8c8c95);
      opacity: 0.9;
      letter-spacing: 0.02em;
    }

    .sk-product-hero {
      padding: 2rem 1rem 2.5rem;
    }

    .sk-hero-content {
      gap: 1rem;
    }

    .sk-hero-info {
      margin-top: 1.5rem;
      padding-top: 1.5rem;
    }

    .sk-hero-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .sk-hero-progress {
      display: flex;
    }

    .sk-hero-media {
      width: 100%;
      align-items: center;
      padding: 0;
    }

    .sk-hero-media-main {
      width: calc(100% - 2rem);
      max-width: 100%;
      margin: 0;
      border-radius: 0;
      max-height: min(95vw, 80vh);
    }

    .sk-hero-media-swiper {
      width: 100%;
      aspect-ratio: 1 / 1;
      max-width: 100%;
      min-width: 0;
      max-height: inherit;
    }

    .sk-hero-gallery-wrapper,
    .sk-hero-gallery,
    .sk-hero-thumb,
    .sk-hero-gallery-controls {
      display: none;
    }

    .sk-offer-cards {
      width: 100%;
      margin: 0;
      justify-items: stretch;
    }

    .sk-offer-card {
      width: 100%;
      max-width: none;
    }

    .sk-offer-card__inner {
      display: grid;
      grid-template-columns: minmax(72px, 88px) 1fr;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      min-height: auto;
      border-radius: 16px;
    }

    .sk-offer-card input:checked + .sk-offer-card__inner {
      border-color: var(--sk-brand);
      background: var(--sk-hero-muted);
    }

    .sk-offer-card__image-wrapper {
      width: 88px;
      height: 88px;
      flex: 0 0 auto;
      border-radius: 14px;
      overflow: hidden;
    }

    .sk-offer-card__image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    .sk-offer-card__content {
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 0.5rem;
    }

    .sk-offer-card__title {
      font-size: 1rem;
      line-height: 1.25;
      font-weight: 600;
    }

    .sk-offer-card__subtitle {
      font-size: 0.9rem;
      color: var(--sk-neutral-contrast);
      margin: 0;
    }

    .sk-offer-card__price {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .sk-price__value {
      font-size: 0.75rem;
    }

    .sk-price__current {
      font-size: 1.1rem;
    }

    .sk-offer-card__footer {
      display: none;
    }

    .sk-offer-card__badge {
      position: absolute;
      top: 0.75rem;
      right: 0.75rem;
      background: var(--sk-brand);
      color: var(--color-white);
      font-size: 0.65rem;
      padding: 0.25rem 0.5rem;
    }

    .sk-offer-cards,
    .sk-offer-card,
    .sk-hero-info,
    .sk-hero-content {
      min-width: 0;
    }

    .sk-hero-info h2,
    .sk-hero-info h3 {
      font-size: clamp(1.9rem, 3vw, 2.3rem);
    }

    .sk-hero-info h4 {
      font-size: clamp(1.5rem, 3.2vw, 2rem);
    }

    .sk-hero-info li {
      font-size: clamp(1.5rem, 3vw, 2.2rem);
      padding-left: 40px;
    }
  }

  /* =============================
       RADIANCE CONTENT (Rich text)
    ============================= */

  .sk-hero-info h2,
  .sk-hero-info h3,
  .sk-hero-info h4 {
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--sk-brand);
    letter-spacing: -0.01em;
  }

  .sk-hero-info h2,
  .sk-hero-info h3 {
    font-size: clamp(2.1rem, 2.6vw, 2.7rem);
  }

  .sk-hero-info h4 {
    font-size: clamp(1.8rem, 2.2vw, 2.35rem);
  }

  .sk-hero-info ul {
    list-style: none;
    padding-left: 0;
    margin: 0;
  }

  .sk-hero-info li {
    position: relative;
    padding-left: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.55;
    color: var(--color-dark, #3a3939);
    font-size: clamp(1.2rem, 1.6vw, 1.9rem);
  }

  .sk-hero-info strong,
  .sk-hero-info b {
    color: var(--sk-brand);
    text-decoration: underline;
    text-decoration-color: var(--sk-brand);
  }

  .sk-hero-info h2 strong,
  .sk-hero-info h3 strong,
  .sk-hero-info h4 strong,
  .sk-hero-info h2 b,
  .sk-hero-info h3 b,
  .sk-hero-info h4 b {
    text-decoration: none;
  }

  .sk-hero-info a {
    font-weight: 600;
    color: var(--sk-brand);
    text-decoration: underline;
    text-decoration-color: var(--sk-brand);
    text-decoration-thickness: 2px;
  }

  .sk-hero-info a:hover,
  .sk-hero-info a:focus-visible,
  .sk-hero-info a:active {
    color: var(--sk-brand);
    text-decoration-color: var(--sk-brand);
    opacity: 0.9;
  }

  .sk-hero-info li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: clamp(1.1rem, 1.05em, 1.5rem);
    height: clamp(1.1rem, 1.05em, 1.5rem);
    border-radius: 50%;
    border: 1.5px solid var(--sk-brand);
    box-sizing: border-box;
  }

  .sk-hero-info li::after {
    content: '';
    position: absolute;
    left: clamp(0.6rem, 0.8vw, 0.9rem);
    top: 50%;
    width: 0.55rem;
    height: 0.55rem;
    border-right: 2px solid var(--sk-brand);
    border-top: 2px solid var(--sk-brand);
    transform: translate(-50%, -50%) rotate(45deg);
    border-radius: 0;
