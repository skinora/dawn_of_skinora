<style>
  .sk-results {
    --sk-results-brand: #30273e;
    --sk-results-accent: #9c8ab4;
    --sk-results-muted: #5f5f5f;
    --sk-results-padding: clamp(48px, 7vw, 96px);
    --sk-results-gap: clamp(32px, 5vw, 64px);
    --sk-results-list-size: 18px;
    --sk-results-list-gap: 16px;
    --sk-results-note-size: 14px;
    --sk-results-card-radius: 18px;
    --sk-results-shadow: 0 20px 60px rgba(48, 39, 62, 0.12);
    --sk-results-media-max: clamp(280px, 32vw, 520px);
    --sk-results-media-ratio: 3 / 4;
    padding: var(--sk-results-padding) 0;
  }

  .sk-results__inner {
    display: grid;
    grid-template-columns: minmax(0, 0.6fr) minmax(240px, 0.4fr);
    gap: var(--sk-results-gap);
    align-items: center;
  }

  .sk-results__copy {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .sk-results__intro {
    font-size: var(--sk-results-list-size);
    line-height: 1.6;
    color: var(--sk-results-brand);
    max-width: 42ch;
  }

  .sk-results__list,
  .sk-results__list--rich ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--sk-results-list-gap);
  }

  .sk-results__list--rich li {
    display: flex;
    gap: 12px;
    font-size: var(--sk-results-list-size);
    color: var(--sk-results-brand);
  }

  .sk-results__list--rich li::before {
    content: '';
    width: 10px;
    height: 10px;
    margin-top: 0.45em;
    border-radius: 999px;
    background: linear-gradient(145deg, var(--sk-results-brand), var(--sk-results-accent));
    flex-shrink: 0;
  }

  .sk-results__note {
    font-size: var(--sk-results-note-size);
    color: var(--sk-results-muted);
  }

  .sk-results__media {
    display: flex;
    justify-content: center;
  }

  .sk-results__visual {
    width: 100%;
    max-width: var(--sk-results-media-max);
    aspect-ratio: var(--sk-results-media-ratio);
    border-radius: var(--sk-results-card-radius);
    overflow: hidden;
    box-shadow: var(--sk-results-shadow);
    position: relative;
  }

  /* ===== BEFORE / AFTER ===== */

  .sk-ba__after {
    position: absolute;
    inset: 0;
    width: 50%;
    overflow: hidden;
  }

  .sk-ba__range {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: ew-resize;
  }

  .sk-ba__handle {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 2px;
    background: white;
    transform: translateX(-1px);
  }

  .sk-ba__handle::before {
    content: '↔';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 36px;
    height: 36px;
    border-radius: 999px;
    background: white;
    color: #30273e;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    font-size: 14px;
  }

  @media (max-width: 820px) {
    .sk-results__inner {
      grid-template-columns: 1fr;
    }
  }
</style>

{% liquid
  assign sk_result_entry = null
  if product and product.metafields.custom.result_section_reference != blank
    assign sk_result_entry = product.metafields.custom.result_section_reference.value
  endif

  assign result_eyebrow = section.settings.eyebrow
  if sk_result_entry and sk_result_entry.eyebrow != blank
    assign result_eyebrow = sk_result_entry.eyebrow
  endif

  assign result_heading = section.settings.heading
  if sk_result_entry and sk_result_entry.heading != blank
    assign result_heading = sk_result_entry.heading
  endif

  assign result_subheading = section.settings.subheading
  if sk_result_entry and sk_result_entry.subheading != blank
    assign result_subheading = sk_result_entry.subheading
  endif

  assign result_intro = section.settings.bullet_intro_text
  if sk_result_entry and sk_result_entry.bullet_intro != blank
    assign result_intro = sk_result_entry.bullet_intro
  endif

  assign result_intro_markup = ''
  if result_intro != blank
    if result_intro.value != blank
      assign result_intro_markup = result_intro | metafield_tag
    else
      assign result_intro_markup = result_intro
    endif
  endif

  assign result_bullets = section.settings.rich_bullet_content
  if sk_result_entry and sk_result_entry.bullet_points != blank
    assign result_bullets = sk_result_entry.bullet_points
  endif

  assign result_bullets_markup = ''
  if result_bullets != blank
    if result_bullets.value != blank
      assign result_bullets_markup = result_bullets | metafield_tag
    else
      assign result_bullets_markup = result_bullets
    endif
  endif

  assign result_note = section.settings.note_text
  if sk_result_entry and sk_result_entry.note != blank
    assign result_note = sk_result_entry.note
  endif

  assign result_image = section.settings.result_image
  if sk_result_entry and sk_result_entry.hero_image != blank
    assign result_image = sk_result_entry.hero_image
  endif

  assign result_image_alt = section.settings.result_image_alt
  if result_image and result_image.alt != blank
    assign result_image_alt = result_image.alt
  endif
  if sk_result_entry and sk_result_entry.hero_image_alt != blank
    assign result_image_alt = sk_result_entry.hero_image_alt
  endif

  assign result_before_image = null
  if sk_result_entry and sk_result_entry.before_image != blank
    assign result_before_image = sk_result_entry.before_image
  endif

  assign result_after_image = null
  if sk_result_entry and sk_result_entry.after_image != blank
    assign result_after_image = sk_result_entry.after_image
  endif
%}

<section id="sk-results-{{ section.id }}" class="sk-results section">
  <div class="page-width">
    {% assign sk_results_has_header = false %}
    {% if result_eyebrow != blank %}
      {% assign sk_results_has_header = true %}
    {% endif %}
    {% if result_heading != blank %}
      {% assign sk_results_has_header = true %}
    {% endif %}
    {% if result_subheading != blank %}
      {% assign sk_results_has_header = true %}
    {% endif %}

    {% if sk_results_has_header %}
      <div class="sk-section-header sk-section-header--center">
        {% if result_eyebrow != blank %}
          <p class="sk-section-header__eyebrow">{{ result_eyebrow }}</p>
        {% endif %}
        {% if result_heading != blank %}
          <h2 class="sk-section-header__title">{{ result_heading }}</h2>
        {% endif %}
        {% if result_subheading != blank %}
          <p class="sk-section-header__subtitle">{{ result_subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="sk-results__inner">
      <div class="sk-results__copy">
        {% if result_intro_markup != blank %}
          <div class="sk-results__intro">{{ result_intro_markup }}</div>
        {% endif %}

        {% if result_bullets_markup != blank %}
          <div class="sk-results__list sk-results__list--rich">
            {{ result_bullets_markup }}
          </div>
        {% endif %}

        {% if result_note != blank %}
          <p class="sk-results__note">{{ result_note }}</p>
        {% endif %}
      </div>

      <div class="sk-results__media">
        <div class="sk-results__visual">
          {% if result_before_image != blank and result_after_image != blank %}
            <img
              src="{{ result_before_image | image_url: width: 1200 }}"
              alt="{{ result_before_image.alt | escape | default: 'Før' }}"
              loading="lazy"
              width="{{ result_before_image.width | default: 1200 }}"
              height="{{ result_before_image.height | default: 1600 }}"
            >
            <div class="sk-ba__after" data-after>
              <img
                src="{{ result_after_image | image_url: width: 1200 }}"
                alt="{{ result_after_image.alt | escape | default: 'Etter' }}"
                loading="lazy"
                width="{{ result_after_image.width | default: 1200 }}"
                height="{{ result_after_image.height | default: 1600 }}"
              >
            </div>
            <div class="sk-ba__handle" data-handle></div>
            <input type="range" min="0" max="100" value="50" class="sk-ba__range" data-range>
          {% elsif result_image != blank %}
            <img
              src="{{ result_image | image_url: width: 1200 }}"
              alt="{{ result_image_alt | escape }}"
              loading="lazy"
              width="{{ result_image.width | default: 1200 }}"
              height="{{ result_image.height | default: 1600 }}"
            >
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  (function () {
    const section = document.getElementById('sk-results-{{ section.id }}');
    if (!section) return;
    const range = section.querySelector('[data-range]');
    const after = section.querySelector('[data-after]');
    const handle = section.querySelector('[data-handle]');
    if (!range || !after || !handle) return;
    const set = (value) => {
      after.style.width = value + '%';
      handle.style.left = value + '%';
    };
    set(range.value);
    range.addEventListener('input', (event) => set(event.target.value));
  })();
</script>

{% schema %}
{
  "name": "SK Result Section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "RESULTATER"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Hva kan jeg forvente?"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Fire klare forbedringer du merker gradvis."
    },
    {
      "type": "richtext",
      "id": "bullet_intro_text",
      "label": "Intro text before list",
      "default": "<p>Del en kort introduksjon her.</p>"
    },
    {
      "type": "richtext",
      "id": "rich_bullet_content",
      "label": "Tilpasset punktliste",
      "default": "<ul><li>Jevnere hudtone</li><li>Fastere hud</li><li>Mer glød</li><li>Mindre sliten hud</li></ul>"
    },
    {
      "type": "textarea",
      "id": "note_text",
      "label": "Diskret note",
      "default": "Resultater bygges gradvis og påvirkes av hudtype og kontinuitet."
    },
    {
      "type": "image_picker",
      "id": "result_image",
      "label": "Støttebilde"
    },
    {
      "type": "text",
      "id": "result_image_alt",
      "label": "Alternativ tekst",
      "default": "Rolig portrett"
    }
  ],
  "presets": [
    {
      "name": "SK Resultater",
      "category": "Custom"
    }
  ]
}
{% endschema %}
