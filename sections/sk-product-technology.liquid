<style>
  .sk-tech-{{ section.id }} {
    padding: {{ section.settings.pad_y_mobile }}px 0;
  }
  @media (min-width: 701px) {
    .sk-tech-{{ section.id }} {
      padding: {{ section.settings.pad_y_desktop }}px 0;
    }
  }

  /* Heading */
  .sk-tech-{{ section.id }} .sk-tech__heading {
    font-size: var(--section-heading-h2);
    font-weight: 700;
    line-height: var(--section-heading-h2-line);
    color: #30273E;
    text-align: center;
    max-width: 820px;
    margin: 0 auto 16px;
  }

  /* Subheader */
  .sk-tech-{{ section.id }} .sk-tech__subheader {
    font-size: calc(var(--sk-font-size-large) * 1.0);
    line-height: 1.35;
    text-align: center;
    color: #30273E;
    font-weight: 600;
    margin: 0 auto 60px; /* spacing before images */
    max-width: 620px;
  }

  /* TWO BLOCK DESKTOP LAYOUT */
  .sk-tech-{{ section.id }} .sk-tech__row {
    display: flex;
    justify-content: center;
    gap: 80px;
    align-items: flex-start;
  }

  .sk-tech-{{ section.id }} .sk-tech__block {
    flex: 1 1 40%;
    max-width: 480px;
    text-align: left;
  }

  .sk-tech-{{ section.id }} .sk-tech__img img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Bullet styling */
  .sk-tech__bullets {
    list-style: none;
    padding: 0;
    margin: 24px 0 0 0;
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .sk-tech__bullets li {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .sk-tech__icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    display: block;
  }

  .sk-tech__text {
    font-size: var(--sk-font-size-medium);
    line-height: 1.55;
    color: #30273E;
  }

  /* MOBILE */
  .sk-tech-{{ section.id }} .sk-tech__slider {
    display: none;
  }

  @media (max-width: 700px) {
    .sk-tech-{{ section.id }} .sk-tech__row {
      display: none;
    }

    .sk-tech-{{ section.id }} .sk-tech__slider {
      display: block;
    }

    /* Fix scaling */
    .sk-tech-{{ section.id }} .swiper-slide .sk-tech__img img {
      width: 100% !important;
      height: auto !important;
      max-height: 65vh !important;
      object-fit: contain !important;
      display: block;
    }

    .sk-tech-{{ section.id }} .swiper-slide {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 10px 20px;
    }

    .sk-tech__bullets {
      margin-top: 16px;
    }
  }
</style>

<section class="sk-tech-{{ section.id }}">
  <div class="page-width">
    {% if section.settings.heading %}
      <h2 class="sk-tech__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheader %}
      <h3 class="sk-tech__subheader">{{ section.settings.subheader }}</h3>
    {% endif %}

    <!-- DESKTOP TWO BLOCKS -->
    <div class="sk-tech__row">
      <!-- LEFT BLOCK -->
      <div class="sk-tech__block">
        {% if section.settings.left_image %}
          <div class="sk-tech__img">
            <img
              src="{{ section.settings.left_image | image_url: width: 1200 }}"
              loading="lazy"
              alt="{{ section.settings.heading | default: 'Skinora' | escape }}"
              width="{{ section.settings.left_image.width }}"
              height="{{ section.settings.left_image.height }}"
            >
          </div>
        {% endif %}

        {% if section.settings.left_bullets %}
          <ul class="sk-tech__bullets">
            {% assign items = section.settings.left_bullets | split: '||' %}
            {% for i in items %}
              {% assign t = i | strip %}
              {% if t != '' %}
                <li>
                  <span class="sk-tech__icon">
                    {{ 'icon-arrow-right.svg' | inline_asset_content }}
                  </span>
                  <span class="sk-tech__text">{{ t }}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- RIGHT BLOCK -->
      <div class="sk-tech__block">
        {% if section.settings.right_image %}
          <div class="sk-tech__img">
            <img
              src="{{ section.settings.right_image | image_url: width: 1200 }}"
              loading="lazy"
              alt="{{ section.settings.heading | default: 'Skinora' | escape }}"
              width="{{ section.settings.right_image.width }}"
              height="{{ section.settings.right_image.height }}"
            >
          </div>
        {% endif %}

        {% if section.settings.right_bullets %}
          <ul class="sk-tech__bullets">
            {% assign items = section.settings.right_bullets | split: '||' %}
            {% for i in items %}
              {% assign t = i | strip %}
              {% if t != '' %}
                <li>
                  <span class="sk-tech__icon">
                    {{ 'icon-arrow-right.svg' | inline_asset_content }}
                  </span>
                  <span class="sk-tech__text">{{ t }}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>

    <!-- MOBILE SWIPER -->
    <div class="sk-tech__slider">
      <div class="swiper sk-tech-swiper-{{ section.id }}">
        <div class="swiper-wrapper">
          <!-- SLIDE 1: Header + Subheader -->
          <div class="swiper-slide">
            <h2 class="sk-tech__heading">{{ section.settings.heading }}</h2>
            <h3 class="sk-tech__subheader">{{ section.settings.subheader }}</h3>
          </div>

          <!-- SLIDE 2 LEFT -->
          <div class="swiper-slide">
            {% if section.settings.left_image %}
              <div class="sk-tech__img">
                <img
                  src="{{ section.settings.left_image | image_url: width: 1200 }}"
                  loading="lazy"
                  alt="{{ section.settings.heading | default: 'Skinora' | escape }}"
                  width="{{ section.settings.left_image.width }}"
                  height="{{ section.settings.left_image.height }}"
                >
              </div>
            {% endif %}

            {% if section.settings.left_bullets %}
              <ul class="sk-tech__bullets">
                {% assign items = section.settings.left_bullets | split: '||' %}
                {% for i in items %}
                  {% assign t = i | strip %}
                  {% if t != '' %}
                    <li>
                      <span class="sk-tech__icon">
                        {{ 'icon-arrow-right.svg' | inline_asset_content }}
                      </span>
                      <span class="sk-tech__text">{{ t }}</span>
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            {% endif %}
          </div>

          <!-- SLIDE 3 RIGHT -->
          <div class="swiper-slide">
            {% if section.settings.right_image %}
              <div class="sk-tech__img">
                <img
                  src="{{ section.settings.right_image | image_url: width: 1200 }}"
                  loading="lazy"
                  alt="{{ section.settings.heading | default: 'Skinora' | escape }}"
                  width="{{ section.settings.right_image.width }}"
                  height="{{ section.settings.right_image.height }}"
                >
              </div>
            {% endif %}

            {% if section.settings.right_bullets %}
              <ul class="sk-tech__bullets">
                {% assign items = section.settings.right_bullets | split: '||' %}
                {% for i in items %}
                  {% assign t = i | strip %}
                  {% if t != '' %}
                    <li>
                      <span class="sk-tech__icon">
                        {{ 'icon-arrow-right.svg' | inline_asset_content }}
                      </span>
                      <span class="sk-tech__text">{{ t }}</span>
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        </div>

        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var swiper = new Swiper('.sk-tech-swiper-{{ section.id }}', {
      slidesPerView: 1,
      spaceBetween: 22,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
    });
  });
</script>

{% schema %}
{
  "name": "SK Technology Blocks",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Teknologien bak Skinora®" },
    { "type": "text", "id": "subheader", "label": "Subheader", "default": "Hva gjør Skinora-teknologien?" },

    { "type": "image_picker", "id": "left_image", "label": "Left image" },
    {
      "type": "textarea",
      "id": "left_bullets",
      "label": "Left bullets (use ||)",
      "default": "Øker kollagen || Reduserer inflammasjon"
    },

    { "type": "image_picker", "id": "right_image", "label": "Right image" },
    {
      "type": "textarea",
      "id": "right_bullets",
      "label": "Right bullets (use ||)",
      "default": "Forbedrer hudens klarhet"
    },

    {
      "type": "range",
      "id": "pad_y_desktop",
      "label": "Padding Y (desktop)",
      "min": 20,
      "max": 160,
      "step": 4,
      "default": 112
    },
    {
      "type": "range",
      "id": "pad_y_mobile",
      "label": "Padding Y (mobile)",
      "min": 10,
      "max": 120,
      "step": 4,
      "default": 60
    }
  ],
  "presets": [{ "name": "SK Technology Blocks" }]
}
{% endschema %}
