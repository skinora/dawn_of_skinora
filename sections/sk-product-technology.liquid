<style>
  .sk-tech-{{ section.id }} {
    background: {{ section.settings.bg_color }};
    padding: {{ section.settings.pad_y_mobile }}px 0;
  }
  @media (min-width: 701px) {
    .sk-tech-{{ section.id }} {
      padding: {{ section.settings.pad_y_desktop }}px 0;
    }
  }

  .sk-tech-{{ section.id }} .sk-tech__heading {
    font-size: 42px;
    line-height: 60px;
    font-weight: 700;
    color: #30273E;
    text-align: center;
    max-width: 800px;
    margin: 0 auto 40px;
  }

  @media (max-width: 435px) {
    .sk-tech-{{ section.id }} .sk-tech__heading {
      font-size: 32px;
      line-height: 38px;
      margin-bottom: 16px;
    }
  }

  /* Layout */
  .sk-tech-{{ section.id }} .sk-tech__row {
    display: flex;
    gap: 48px;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Bigger image blocks */
  .sk-tech-{{ section.id }} .sk-tech__img {
    flex: 1 1 560px;
    max-width: 640px;
  }

  .sk-tech-{{ section.id }} .sk-tech__img img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 12px;
  }

  /* Center content */
  .sk-tech-{{ section.id }} .sk-tech__content {
    flex: 0 1 {{ section.settings.content_max_width }}px;
    min-width: 320px;
    max-width: {{ section.settings.content_max_width }}px;
  }

  .sk-tech-{{ section.id }} .sk-tech__content :where(p) {
    font-size: 16px;
    line-height: 1.6;
    color: #30273E;
    margin: 0 0 16px 0;
  }

  .sk-tech-{{ section.id }} .sk-tech__content :where(h3, h4) {
    font-size: 18px;
    font-weight: 600;
    color: #30273E;
    margin: 0 0 12px 0;
  }

  /* Arrow (hidden on mobile) */
  .sk-tech-{{ section.id }} .sk-tech__arrow {
    display: flex;
    justify-content: center;
    margin-top: 12px;
  }

  @media (max-width: 700px) {
    .sk-tech-{{ section.id }} .sk-tech__arrow { display: none; }

    .sk-tech-{{ section.id }} .sk-tech__row { gap: 20px; }

    .sk-tech-{{ section.id }} .sk-tech__img {
      max-width: 95vw;
      flex: 1 1 95vw;
    }

    .sk-tech-{{ section.id }} .sk-tech__content :where(p) {
      font-size: 14px;
      line-height: 22px;
      margin-bottom: 12px;
    }

    {% if section.settings.mobile_stack_order == 'image-first' %}
      .sk-tech-{{ section.id }} .sk-tech__left { order: 1; }
      .sk-tech-{{ section.id }} .sk-tech__center { order: 2; }
      .sk-tech-{{ section.id }} .sk-tech__right { order: 3; }
    {% elsif section.settings.mobile_stack_order == 'content-first' %}
      .sk-tech-{{ section.id }} .sk-tech__center { order: 1; }
      .sk-tech-{{ section.id }} .sk-tech__left { order: 2; }
      .sk-tech-{{ section.id }} .sk-tech__right { order: 3; }
    {% else %}
      .sk-tech-{{ section.id }} .sk-tech__right { order: 1; }
      .sk-tech-{{ section.id }} .sk-tech__center { order: 2; }
      .sk-tech-{{ section.id }} .sk-tech__left { order: 3; }
    {% endif %}
  }
</style>

<section class="sk-tech-{{ section.id }}">
  <div class="page-width"><!-- ðŸ”¥ Wider parent container -->
    {% if section.settings.heading != blank %}
      <h2 class="sk-tech__heading">{{ section.settings.heading | escape }}</h2>
    {% endif %}

    <div class="sk-tech__row">
      {% if section.settings.left_image != blank %}
        <div class="sk-tech__img sk-tech__left">
          {%- assign li = section.settings.left_image -%}
          <img
            srcset="
              {{ li | image_url: width: 700 }} 700w,
              {{ li | image_url: width: 900 }} 900w,
              {{ li | image_url: width: 1200 }} 1200w
            "
            sizes="(min-width: 1200px) 600px, (min-width: 701px) 45vw, 95vw"
            src="{{ li | image_url: width: 900 }}"
            alt="{{ li.alt | default: section.settings.heading | escape }}"
            loading="lazy">
        </div>
      {% endif %}

      <div class="sk-tech__content sk-tech__center">
        {% if section.settings.content_html != blank %}
          {{ section.settings.content_html }}
        {% endif %}
        {% if section.settings.show_arrow %}
          <div class="sk-tech__arrow">
            {{ 'technology-arrow.svg' | inline_asset_content }}
          </div>
        {% endif %}
      </div>

      {% if section.settings.right_image != blank %}
        <div class="sk-tech__img sk-tech__right">
          {%- assign ri = section.settings.right_image -%}
          <img
            srcset="
              {{ ri | image_url: width: 700 }} 700w,
              {{ ri | image_url: width: 900 }} 900w,
              {{ ri | image_url: width: 1200 }} 1200w
            "
            sizes="(min-width: 1200px) 600px, (min-width: 701px) 45vw, 95vw"
            src="{{ ri | image_url: width: 900 }}"
            alt="{{ ri.alt | default: section.settings.heading | escape }}"
            loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SK Technology (Generic)",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Teknologien bak Skinora" },
    { "type": "image_picker", "id": "left_image", "label": "Left image" },
    { "type": "html", "id": "content_html", "label": "Center content", "default": "<p>Klinisk LED-teknologi som aktiverer hudens egen fornyelse â€“ for fastere, klarere og sterkere hud.</p>" },
    { "type": "image_picker", "id": "right_image", "label": "Right image" },
    { "type": "checkbox", "id": "show_arrow", "label": "Show center arrow (hidden on mobile)", "default": true },

    { "type": "header", "content": "Layout & Style" },
    { "type": "color", "id": "bg_color", "label": "Background", "default": "#FFF9F5" },
    { "type": "range", "id": "content_max_width", "label": "Center content max width", "min": 360, "max": 720, "step": 20, "default": 520 },
    { "type": "select", "id": "mobile_stack_order", "label": "Mobile stack order", "default": "image-first",
      "options": [
        { "value": "image-first", "label": "Left image â†’ Content â†’ Right image" },
        { "value": "content-first", "label": "Content â†’ Left image â†’ Right image" },
        { "value": "right-first", "label": "Right image â†’ Content â†’ Left image" }
      ]
    },
    { "type": "range", "id": "pad_y_desktop", "label": "Padding Y (desktop)", "min": 20, "max": 160, "step": 4, "default": 112 },
    { "type": "range", "id": "pad_y_mobile", "label": "Padding Y (mobile)", "min": 16, "max": 120, "step": 4, "default": 60 }
  ],
  "presets": [
    { "name": "SK Technology (Generic)" }
  ]
}
{% endschema %}
