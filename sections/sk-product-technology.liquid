<style>
  .sk-results {
    --sk-results-brand: #30273e;
    --sk-results-accent: #9c8ab4;
    --sk-results-muted: #5f5f5f;
    --sk-results-padding: clamp(48px, 7vw, 96px);
    --sk-results-gap: clamp(32px, 5vw, 64px);
    --sk-results-list-size: 18px;
    --sk-results-list-gap: 16px;
    --sk-results-note-size: 14px;
    --sk-results-card-radius: 18px;
    --sk-results-shadow: 0 20px 60px rgba(48, 39, 62, 0.12);
    --sk-results-media-max: clamp(280px, 32vw, 520px);
    --sk-results-media-ratio: 3 / 4;
    padding: var(--sk-results-padding) 0;
    color: inherit;
  }

  .sk-results__inner {
    display: grid;
    grid-template-columns: minmax(0, 0.6fr) minmax(240px, 0.4fr);
    gap: var(--sk-results-gap);
    align-items: center;
  }

  .sk-results__copy {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .sk-results__copy .sk-section-header__subtitle,
  .sk-results__copy .sk-section-header__eyebrow {
    color: var(--sk-results-muted);
  }

  .sk-results__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--sk-results-list-gap);
  }

  .sk-results__list li {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: var(--sk-results-list-size);
    line-height: 1.4;
    color: var(--sk-results-brand);
  }

  .sk-results__bullet {
    width: 10px;
    height: 10px;
    border-radius: 999px;
    background: linear-gradient(145deg, var(--sk-results-brand), var(--sk-results-accent));
    flex-shrink: 0;
  }

  .sk-results__note {
    font-size: var(--sk-results-note-size);
    color: var(--sk-results-muted);
    margin: 0;
  }

  .sk-results__media {
    position: relative;
    display: flex;
    justify-content: center;
  }

  .sk-results__visual {
    width: 100%;
    max-width: var(--sk-results-media-max);
    aspect-ratio: var(--sk-results-media-ratio);
    border-radius: var(--sk-results-card-radius);
    overflow: hidden;
    box-shadow: var(--sk-results-shadow);
    background: linear-gradient(145deg, rgba(48, 39, 62, 0.04), rgba(48, 39, 62, 0.08));
  }

  .sk-results__visual img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 1024px) {
    .sk-results__inner {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    .sk-results__copy {
      gap: 20px;
    }
    .sk-results {
      --sk-results-gap: clamp(28px, 6vw, 48px);
    }
  }

  @media (max-width: 820px) {
    .sk-results__inner {
      grid-template-columns: minmax(0, 1fr);
    }
    .sk-results {
      --sk-results-gap: 32px;
      --sk-results-list-gap: 14px;
      --sk-results-list-size: 17px;
      --sk-results-media-max: clamp(280px, 64vw, 560px);
    }
    .sk-results__media {
      order: 3;
    }
    .sk-results__note {
      order: 4;
    }
    .sk-results__copy {
      order: 1;
    }
  }

  @media (max-width: 540px) {
    .sk-results {
      --sk-results-padding: 48px;
      --sk-results-list-size: 16px;
    }
  }
</style>

<section id="sk-results-{{ section.id }}" class="sk-results section">
  <div class="page-width">
    {% assign sk_results_has_header = false %}
    {% if section.settings.eyebrow != blank %}
      {% assign sk_results_has_header = true %}
    {% endif %}
    {% if section.settings.heading != blank %}
      {% assign sk_results_has_header = true %}
    {% endif %}
    {% if section.settings.subheading != blank %}
      {% assign sk_results_has_header = true %}
    {% endif %}

    {% if sk_results_has_header %}
      <div class="sk-section-header sk-section-header--center">
        {% if section.settings.eyebrow != blank %}
          <p class="sk-section-header__eyebrow">{{ section.settings.eyebrow }}</p>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h1 class="sk-section-header__title sk-heading-size--large sk-heading-text--strong">
            {{ section.settings.heading }}
          </h1>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="sk-section-header__subtitle sk-heading-text--soft">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="sk-results__inner">
      <div class="sk-results__copy">
        {% if section.blocks.size > 0 %}
          <ul class="sk-results__list" role="list">
            {% for block in section.blocks %}
              {% if block.settings.result_text != blank %}
                <li {{ block.shopify_attributes }}>
                  <span class="sk-results__bullet" aria-hidden="true"></span>
                  <span>{{ block.settings.result_text }}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}

        {% if section.settings.note_text != blank %}
          <p class="sk-results__note">{{ section.settings.note_text }}</p>
        {% endif %}
      </div>

      {% if section.settings.result_image != blank %}
        <div class="sk-results__media">
          <div class="sk-results__visual">
            <img
              src="{{ section.settings.result_image | image_url: width: 1200 }}"
              alt="{{ section.settings.result_image_alt | escape }}"
              loading="lazy"
              width="{{ section.settings.result_image.width | default: 1200 }}"
              height="{{ section.settings.result_image.height | default: 1600 }}"
            >
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SK Result Section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "RESULTATER"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Hva kan jeg forvente?"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Fire klare forbedringer du merker gradvis."
    },
    {
      "type": "textarea",
      "id": "note_text",
      "label": "Diskret note",
      "default": "Resultater bygges gradvis og påvirkes av hudtype og kontinuitet."
    },
    {
      "type": "image_picker",
      "id": "result_image",
      "label": "Støttebilde"
    },
    {
      "type": "text",
      "id": "result_image_alt",
      "label": "Alternativ tekst",
      "default": "Rolig portrett"
    }
  ],
  "blocks": [
    {
      "type": "result",
      "name": "Resultat",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "result_text",
          "label": "Punkt",
          "default": "Jevnere hudtone"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SK Resultater",
      "category": "Custom"
    }
  ]
}
{% endschema %}
