<style>
  .sk-results {
    --sk-results-brand: #30273e;
    --sk-results-accent: #9c8ab4;
    --sk-results-muted: #5f5f5f;
    --sk-results-padding: clamp(48px, 7vw, 96px);
    --sk-results-gap: clamp(32px, 5vw, 64px);
    --sk-results-list-size: 18px;
    --sk-results-list-gap: 16px;
    --sk-results-note-size: 14px;
    --sk-results-card-radius: 18px;
    --sk-results-shadow: 0 20px 60px rgba(48, 39, 62, 0.12);
    --sk-results-media-max: clamp(280px, 32vw, 520px);
    --sk-results-media-ratio: 3 / 4;
    padding: var(--sk-results-padding) 0;
  }

  .sk-results__inner {
    display: grid;
    grid-template-columns: minmax(0, 0.6fr) minmax(240px, 0.4fr);
    gap: var(--sk-results-gap);
    align-items: center;
  }

  .sk-results__copy {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .sk-results__intro {
    font-size: var(--sk-results-list-size);
    line-height: 1.6;
    color: var(--sk-results-brand);
    max-width: 42ch;
  }

  .sk-results__list,
  .sk-results__list--rich ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--sk-results-list-gap);
  }

  .sk-results__list--rich li {
    display: flex;
    gap: 12px;
    font-size: var(--sk-results-list-size);
    color: var(--sk-results-brand);
  }

  .sk-results__list--rich li::before {
    content: '';
    width: 10px;
    height: 10px;
    margin-top: 0.45em;
    border-radius: 999px;
    background: linear-gradient(145deg, var(--sk-results-brand), var(--sk-results-accent));
    flex-shrink: 0;
  }

  .sk-results__note {
    font-size: var(--sk-results-note-size);
    color: var(--sk-results-muted);
  }

  .sk-results__media {
    display: flex;
    justify-content: center;
  }

  .sk-results__visual {
    width: 100%;
    max-width: var(--sk-results-media-max);
    aspect-ratio: var(--sk-results-media-ratio);
    border-radius: var(--sk-results-card-radius);
    overflow: hidden;
    box-shadow: var(--sk-results-shadow);
    position: relative;
  }

  /* ===== BEFORE / AFTER ===== */

  .sk-ba__after {
    position: absolute;
    inset: 0;
    width: 50%;
    overflow: hidden;
  }

  .sk-ba__range {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: ew-resize;
  }

  .sk-ba__handle {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 2px;
    background: white;
    transform: translateX(-1px);
  }

  .sk-ba__handle::before {
    content: '↔';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 36px;
    height: 36px;
    border-radius: 999px;
    background: white;
    color: #30273e;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    font-size: 14px;
  }

  @media (max-width: 820px) {
    .sk-results__inner {
      grid-template-columns: 1fr;
    }
  }
</style>

{% liquid
  assign ref = product.metafields.custom.result_section_reference.value

  assign eyebrow = ref.eyebrow | default: section.settings.eyebrow
  assign heading = ref.heading | default: section.settings.heading
  assign subheading = ref.subheading | default: section.settings.subheading
  assign intro = ref.bullet_intro
  assign bullets = ref.bullet_points
  assign note = ref.note | default: section.settings.note_text

  assign image = ref.hero_image | default: section.settings.result_image
  assign image_alt = ref.hero_image_alt | default: section.settings.result_image_alt

  assign before = ref.before_image
  assign after = ref.after_image
%}

<section class="sk-results section">
  <div class="page-width">
    <div class="sk-section-header sk-section-header--center">
      <p class="sk-section-header__eyebrow">{{ eyebrow }}</p>
      <h2 class="sk-section-header__title">{{ heading }}</h2>
      <p class="sk-section-header__subtitle">{{ subheading }}</p>
    </div>

    <div class="sk-results__inner">
      <div class="sk-results__copy">
        {% if intro != blank %}
          <div class="sk-results__intro">{{ intro | metafield_tag }}</div>
        {% endif %}

        {% if bullets != blank %}
          <div class="sk-results__list sk-results__list--rich">
            {{ bullets | metafield_tag }}
          </div>
        {% endif %}

        {% if note != blank %}
          <p class="sk-results__note">{{ note }}</p>
        {% endif %}
      </div>

      <div class="sk-results__media">
        <div class="sk-results__visual">
          {% if before != blank and after != blank %}
            <img src="{{ before | image_url: width: 1200 }}" alt="Før">
            <div class="sk-ba__after" data-after>
              <img src="{{ after | image_url: width: 1200 }}" alt="Etter">
            </div>
            <div class="sk-ba__handle" data-handle></div>
            <input type="range" min="0" max="100" value="50" class="sk-ba__range" data-range>
          {% elsif image != blank %}
            <img src="{{ image | image_url: width: 1200 }}" alt="{{ image_alt }}">
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  (function () {
    const range = document.querySelector('[data-range]');
    if (!range) return;
    const after = document.querySelector('[data-after]');
    const handle = document.querySelector('[data-handle]');
    const set = (v) => {
      after.style.width = v + '%';
      handle.style.left = v + '%';
    };
    set(range.value);
    range.addEventListener('input', (e) => set(e.target.value));
  })();
</script>

{% schema %}
{
  "name": "SK Resultater",
  "settings": [
    { "type": "text", "id": "eyebrow", "default": "RESULTATER" },
    { "type": "text", "id": "heading", "default": "Hva kan jeg forvente?" },
    { "type": "textarea", "id": "subheading" },
    { "type": "textarea", "id": "note_text" },
    { "type": "image_picker", "id": "result_image" },
    { "type": "text", "id": "result_image_alt" }
  ],
  "presets": [{ "name": "SK Resultater" }]
}
{% endschema %}
