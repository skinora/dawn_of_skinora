<style>
  .sk-tech-{{ section.id }} {
    padding: {{ section.settings.pad_y_mobile }}px 0;
  }
  @media (min-width: 701px) {
    .sk-tech-{{ section.id }} {
      padding: {{ section.settings.pad_y_desktop }}px 0;
    }
  }

  /* Heading */
  .sk-tech-{{ section.id }} .sk-tech__heading {
    font-size: var(--section-heading-h2);
    font-weight: 700;
    line-height: var(--section-heading-h2-line);
    color: #30273E;
    text-align: center;
    max-width: 820px;
    margin: 0 auto 48px;
  }

  /* Desktop 3-column */
  .sk-tech-{{ section.id }} .sk-tech__row {
    display: flex;
    gap: 40px;
    justify-content: center;
    align-items: flex-start;
  }

  .sk-tech-{{ section.id }} .sk-tech__img {
    flex: 1 1 33%;
    max-width: 33%;
  }

  .sk-tech-{{ section.id }} .sk-tech__img img {
    width: 100%;
    height: auto;
    display: block;
  }

  .sk-tech-{{ section.id }} .sk-tech__content {
    flex: 1 1 33%;
    max-width: 33%;
  }

  /* Subheader */
  .sk-tech__subheader {
    font-size: calc(var(--sk-font-size-large) * 1.0);
    font-weight: 600;
    color: #30273E;
    line-height: 1.35;
    margin: 0 0 20px 0;
  }

  /* Bullets */
  .sk-tech__bullets {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .sk-tech__bullets li {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .sk-tech__icon {
    width: 18px;
    height: 18px;
    display: block;
    flex-shrink: 0;
  }

  .sk-tech__text {
    color: #30273E;
    font-size: var(--sk-font-size-medium);
    line-height: 1.55;
  }

  /* Mobile mode */
  .sk-tech-{{ section.id }} .sk-tech__slider {
    display: none;
  }

  @media (max-width: 700px) {
    .sk-tech-{{ section.id }} .sk-tech__row {
      display: none;
    }
    .sk-tech-{{ section.id }} .sk-tech__slider {
      display: block;
    }

    /* Force image scaling inside swiper */
    .sk-tech-{{ section.id }} .swiper-slide .sk-tech__img {
      width: 100% !important;
      max-width: 100% !important;
      display: flex;
      justify-content: center;
    }

    .sk-tech-{{ section.id }} .swiper-slide .sk-tech__img img {
      width: 100% !important;
      max-width: 100% !important;
      height: auto !important;
      max-height: 65vh !important;
      object-fit: contain !important;
      object-position: center !important;
      display: block;
    }

    .sk-tech-{{ section.id }} .swiper-slide {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .sk-tech__subheader {
      margin-bottom: 16px;
    }
  }
</style>

<section class="sk-tech-{{ section.id }}">
  <div class="page-width">
    {% if section.settings.heading %}
      <h2 class="sk-tech__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <!-- DESKTOP LAYOUT -->
    <div class="sk-tech__row">
      {% if section.settings.left_image %}
        <div class="sk-tech__img">
          <img
            src="{{ section.settings.left_image | image_url: width: 1200 }}"
            loading="lazy"
            alt="Skinora Left"
            width="{{ section.settings.left_image.width }}"
            height="{{ section.settings.left_image.height }}"
          >
        </div>
      {% endif %}

      <div class="sk-tech__content">
        {% if section.settings.subheader %}
          <h3 class="sk-tech__subheader">{{ section.settings.subheader }}</h3>
        {% endif %}

        {% if section.settings.bullet_points %}
          <ul class="sk-tech__bullets">
            {% assign items = section.settings.bullet_points | split: '||' %}
            {% for i in items %}
              {% assign t = i | strip %}
              {% if t != '' %}
                <li>
                  <span class="sk-tech__icon">
                    {{ 'icon-arrow-right.svg' | inline_asset_content }}
                  </span>
                  <span class="sk-tech__text">{{ t }}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      {% if section.settings.right_image %}
        <div class="sk-tech__img">
          <img
            src="{{ section.settings.right_image | image_url: width: 1200 }}"
            loading="lazy"
            alt="Skinora Right"
            width="{{ section.settings.right_image.width }}"
            height="{{ section.settings.right_image.height }}"
          >
        </div>
      {% endif %}
    </div>

    <!-- MOBILE SWIPER -->
    <div class="sk-tech__slider sk-tech-slider-{{ section.id }}">
      <div class="swiper sk-tech-swiper-{{ section.id }}">
        <div class="swiper-wrapper">
          {% if section.settings.left_image %}
            <div class="swiper-slide">
              <div class="sk-tech__img">
                <img
                  src="{{ section.settings.left_image | image_url: width: 1200 }}"
                  loading="lazy"
                  alt="Skinora Left"
                  width="{{ section.settings.left_image.width }}"
                  height="{{ section.settings.left_image.height }}"
                >
              </div>
            </div>
          {% endif %}

          <div class="swiper-slide">
            <div class="sk-tech__content">
              {% if section.settings.subheader %}
                <h3 class="sk-tech__subheader">{{ section.settings.subheader }}</h3>
              {% endif %}

              {% if section.settings.bullet_points %}
                <ul class="sk-tech__bullets">
                  {% assign items = section.settings.bullet_points | split: '||' %}
                  {% for i in items %}
                    {% assign t = i | strip %}
                    {% if t != '' %}
                      <li>
                        <span class="sk-tech__icon">
                          {{ 'icon-arrow-right.svg' | inline_asset_content }}
                        </span>
                        <span class="sk-tech__text">{{ t }}</span>
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          </div>

          {% if section.settings.right_image %}
            <div class="swiper-slide">
              <div class="sk-tech__img">
                <img
                  src="{{ section.settings.right_image | image_url: width: 1200 }}"
                  loading="lazy"
                  alt="Skinora Right"
                  width="{{ section.settings.right_image.width }}"
                  height="{{ section.settings.right_image.height }}"
                >
              </div>
            </div>
          {% endif %}
        </div>

        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var mql = window.matchMedia('(max-width: 700px)');
    var swiperInstance = null;

    function initSwiper() {
      var container = document.querySelector('.sk-tech-swiper-{{ section.id }}');
      if (!container) return;

      if (mql.matches && !swiperInstance) {
        swiperInstance = new Swiper(container, {
          slidesPerView: 1,
          spaceBetween: 22,
          pagination: {
            el: container.querySelector('.swiper-pagination'),
            clickable: true,
          },
        });
      } else if (!mql.matches && swiperInstance) {
        swiperInstance.destroy(true, true);
        swiperInstance = null;
      }
    }

    initSwiper();
    mql.addEventListener('change', initSwiper);
  });
</script>

{% schema %}
{
  "name": "SK Technology Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Teknologien bak Skinora"
    },
    {
      "type": "text",
      "id": "subheader",
      "label": "Subheader",
      "default": "Hva gjør Skinora-teknologien?"
    },
    {
      "type": "textarea",
      "id": "bullet_points",
      "label": "Bullet points (use || as delimiter)",
      "default": "Øker kollagen || Reduserer inflammasjon || Forbedrer hudens klarhet"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right image"
    },
    {
      "type": "range",
      "id": "pad_y_desktop",
      "label": "Padding Y (desktop)",
      "min": 20,
      "max": 160,
      "step": 4,
      "default": 112
    },
    {
      "type": "range",
      "id": "pad_y_mobile",
      "label": "Padding Y (mobile)",
      "min": 16,
      "max": 120,
      "step": 4,
      "default": 60
    }
  ],
  "presets": [{ "name": "SK Technology Section" }]
}
{% endschema %}
