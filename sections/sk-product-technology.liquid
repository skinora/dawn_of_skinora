<style>
  .sk-results {
    --brand: #30273e;
    --accent: #9c8ab4;
    --muted: #5f5f5f;
    --slider-line: rgba(255, 255, 255, 0.98);
    --slider-line-outline: rgba(0, 0, 0, 0.55);
    --padding: clamp(48px, 7vw, 96px);
    --gap: clamp(32px, 5vw, 64px);
    padding: var(--padding) 0;
  }

  .sk-results__inner {
    display: grid;
    grid-template-columns: minmax(0, 0.6fr) minmax(280px, 0.4fr);
    gap: var(--gap);
    align-items: center;
  }

  .sk-results__copy {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .sk-results__intro {
    font-size: 18px;
    line-height: 1.6;
    color: var(--brand);
    max-width: 42ch;
  }

  .sk-results__list ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .sk-results__list li {
    display: flex;
    gap: 12px;
    font-size: 18px;
    color: var(--brand);
  }

  .sk-results__list li::before {
    content: '';
    width: 10px;
    height: 10px;
    margin-top: 0.45em;
    border-radius: 999px;
    background: linear-gradient(145deg, var(--brand), var(--accent));
    flex-shrink: 0;
  }

  .sk-results__note {
    font-size: 14px;
    color: var(--muted);
  }

  .sk-results__media {
    display: flex;
    justify-content: center;
  }

  /* ===== IMAGE / BEFORE-AFTER ===== */

  .sk-results__visual {
    position: relative;
    width: 100%;
    max-width: 520px;
    aspect-ratio: 1 / 1;
    border-radius: 18px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(48, 39, 62, 0.12);
  }

  .sk-results__visual img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .sk-ba__after {
    position: absolute;
    inset: 0;
    width: 50%;
    overflow: hidden;
    z-index: 2;
    pointer-events: none;
    transition: width 0.25s ease;
  }

  .sk-ba__handle {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 72px;
    transform: translateX(-50%);
    z-index: 6;
    cursor: grab;
    touch-action: none;
    background: transparent;
    transition: left 0.25s ease;
  }

  .sk-results--sliding .sk-ba__after,
  .sk-results--sliding .sk-ba__handle,
  .sk-results--sliding .sk-ba__handle::before,
  .sk-results--sliding .sk-ba__handle::after {
    transition: none;
  }

  .sk-results--sliding .sk-ba__handle {
    cursor: grabbing;
  }

  .sk-ba__handle::before {
    content: '';
    pointer-events: none;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 8px;
    transform: translateX(-50%);
    background: var(--slider-line);
    border-left: 2px solid var(--slider-line-outline);
    border-right: 2px solid var(--slider-line-outline);
    box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.75), 0 0 30px rgba(0, 0, 0, 0.65);
    mix-blend-mode: screen;
    transition: inherit;
  }

  .sk-ba__handle::after {
    content: '\2194';
    pointer-events: none;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 58px;
    height: 58px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.95);
    border: 3px solid var(--brand);
    box-shadow: 0 20px 45px rgba(0, 0, 0, 0.35), inset 0 0 0 2px rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(6px);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    color: var(--brand);
    font-weight: 700;
    transition: inherit;
  }

  @media (max-width: 820px) {
    .sk-results__inner {
      grid-template-columns: 1fr;
    }
  }
</style>

{% liquid
  assign sk_result_entry = null
  if product and product.metafields.custom.result_section_reference != blank
    assign sk_result_entry = product.metafields.custom.result_section_reference.value
  endif

  assign result_eyebrow = section.settings.eyebrow
  if sk_result_entry and sk_result_entry.eyebrow != blank
    assign result_eyebrow = sk_result_entry.eyebrow
  endif

  assign result_heading = section.settings.heading
  if sk_result_entry and sk_result_entry.heading != blank
    assign result_heading = sk_result_entry.heading
  endif

  assign result_subheading = section.settings.subheading
  if sk_result_entry and sk_result_entry.subheading != blank
    assign result_subheading = sk_result_entry.subheading
  endif

  assign result_intro = section.settings.bullet_intro_text
  if sk_result_entry and sk_result_entry.bullet_intro != blank
    assign result_intro = sk_result_entry.bullet_intro
  endif

  assign result_intro_markup = ''
  if result_intro != blank
    if result_intro.value != blank
      assign result_intro_markup = result_intro | metafield_tag
    else
      assign result_intro_markup = result_intro
    endif
  endif

  assign result_bullets = section.settings.rich_bullet_content
  if sk_result_entry and sk_result_entry.bullet_points != blank
    assign result_bullets = sk_result_entry.bullet_points
  endif

  assign result_bullets_markup = ''
  if result_bullets != blank
    if result_bullets.value != blank
      assign result_bullets_markup = result_bullets | metafield_tag
    else
      assign result_bullets_markup = result_bullets
    endif
  endif

  assign result_note = section.settings.note_text
  if sk_result_entry and sk_result_entry.note != blank
    assign result_note = sk_result_entry.note
  endif

  assign result_image = section.settings.result_image
  if sk_result_entry and sk_result_entry.hero_image != blank
    assign result_image = sk_result_entry.hero_image
  endif

  assign result_image_alt = section.settings.result_image_alt
  if result_image and result_image.alt != blank
    assign result_image_alt = result_image.alt
  endif
  if sk_result_entry and sk_result_entry.hero_image_alt != blank
    assign result_image_alt = sk_result_entry.hero_image_alt
  endif

  assign result_before_image = null
  if sk_result_entry and sk_result_entry.before_image != blank
    assign result_before_image = sk_result_entry.before_image
  endif

  assign result_after_image = null
  if sk_result_entry and sk_result_entry.after_image != blank
    assign result_after_image = sk_result_entry.after_image
  endif
%}

<section class="sk-results section" id="sk-results-{{ section.id }}">
  <div class="page-width">
    {% assign has_header = false %}
    {% if result_eyebrow != blank %}
      {% assign has_header = true %}
    {% endif %}
    {% if result_heading != blank %}
      {% assign has_header = true %}
    {% endif %}
    {% if result_subheading != blank %}
      {% assign has_header = true %}
    {% endif %}

    {% if has_header %}
      <div class="sk-section-header sk-section-header--center">
        {% if result_eyebrow != blank %}
          <p class="sk-section-header__eyebrow">{{ result_eyebrow }}</p>
        {% endif %}
        {% if result_heading != blank %}
          <h2 class="sk-section-header__title">{{ result_heading }}</h2>
        {% endif %}
        {% if result_subheading != blank %}
          <p class="sk-section-header__subtitle">{{ result_subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="sk-results__inner">
      <div class="sk-results__copy">
        {% if result_intro_markup != blank %}
          <div class="sk-results__intro">{{ result_intro_markup }}</div>
        {% endif %}
        {% if result_bullets_markup != blank %}
          <div class="sk-results__list" role="list">
            {{ result_bullets_markup }}
          </div>
        {% endif %}
        {% if result_note != blank %}
          <p class="sk-results__note">{{ result_note }}</p>
        {% endif %}
      </div>

      <div class="sk-results__media">
        <div class="sk-results__visual">
          {% if result_before_image != blank and result_after_image != blank %}
            <img
              src="{{ result_before_image | image_url: width: 1200 }}"
              alt="{{ result_before_image.alt | escape | default: 'F√∏r' }}"
              loading="lazy"
              width="{{ result_before_image.width | default: 1200 }}"
              height="{{ result_before_image.height | default: 1600 }}"
            >
            <div class="sk-ba__after" data-after>
              <img
                src="{{ result_after_image | image_url: width: 1200 }}"
                alt="{{ result_after_image.alt | escape | default: 'Etter' }}"
                loading="lazy"
                width="{{ result_after_image.width | default: 1200 }}"
                height="{{ result_after_image.height | default: 1600 }}"
              >
            </div>
            <div
              class="sk-ba__handle"
              data-handle
              role="slider"
              aria-label="Dra for √• se f√∏r og etter"
              aria-valuemin="0"
              aria-valuemax="100"
              aria-valuenow="50"
              tabindex="0"
            ></div>
          {% elsif result_image != blank %}
            <img
              src="{{ result_image | image_url: width: 1200 }}"
              alt="{{ result_image_alt | escape }}"
              loading="lazy"
              width="{{ result_image.width | default: 1200 }}"
              height="{{ result_image.height | default: 1600 }}"
            >
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  (function () {
    const section = document.getElementById('sk-results-{{ section.id }}');
    if (!section) return;

    const visual = section.querySelector('.sk-results__visual');
    const after = section.querySelector('[data-after]');
    const handle = section.querySelector('[data-handle]');
    if (!visual || !after || !handle) return;

    let isDragging = false;
    let startX = 0;
    let startPercent = 50;
    let current = 50;

    const clamp = (v) => Math.min(100, Math.max(0, v));

    const set = (v) => {
      current = clamp(v);
      after.style.width = current + '%';
      handle.style.left = current + '%';
      handle.setAttribute('aria-valuenow', Math.round(current));
    };

    /* üîí HARD LOCK DEFAULT POSITION */
    set(50);

    const getClientX = (e) => {
      if (e.touches && e.touches.length) return e.touches[0].clientX;
      return e.clientX;
    };

    const onMove = (e) => {
      if (!isDragging) return;
      e.preventDefault();

      const rect = visual.getBoundingClientRect();
      const deltaPx = getClientX(e) - startX;
      const deltaPercent = (deltaPx / rect.width) * 100;

      set(startPercent + deltaPercent);
    };

    const stopDrag = (e) => {
      if (!isDragging) return;
      isDragging = false;
      section.classList.remove('sk-results--sliding');
      window.removeEventListener('pointermove', onMove);
      window.removeEventListener('pointerup', stopDrag);
      window.removeEventListener('pointercancel', stopDrag);
      if (handle.releasePointerCapture && e && e.pointerId !== undefined) {
        try {
          handle.releasePointerCapture(e.pointerId);
        } catch (error) {}
      }
    };

    const startDrag = (e) => {
      e.preventDefault();
      isDragging = true;
      section.classList.add('sk-results--sliding');

      startX = getClientX(e);
      startPercent = current;

      if (handle.setPointerCapture && e.pointerId !== undefined) {
        try {
          handle.setPointerCapture(e.pointerId);
        } catch (error) {}
      }

      window.addEventListener('pointermove', onMove);
      window.addEventListener('pointerup', stopDrag);
      window.addEventListener('pointercancel', stopDrag);
    };

    handle.addEventListener('pointerdown', startDrag);

    handle.addEventListener('keydown', (event) => {
      const step = event.shiftKey ? 10 : 5;
      if (event.key === 'ArrowLeft') {
        event.preventDefault();
        set(current - step);
      } else if (event.key === 'ArrowRight') {
        event.preventDefault();
        set(current + step);
      }
    });
  })();
</script>

