<style>
  .sk-tech-{{ section.id }} {
    padding: {{ section.settings.pad_y_mobile }}px 0;
  }
  @media (min-width: 701px) {
    .sk-tech-{{ section.id }} {
      padding: {{ section.settings.pad_y_desktop }}px 0;
    }
  }

  .sk-tech-{{ section.id }} .sk-tech__header {
    text-align: center;
    max-width: 860px;
    margin: 0 auto 48px;
  }

  /* Heading */
  .sk-tech-{{ section.id }} .sk-tech__heading {
    font-size: var(--section-heading-h2);
    font-weight: 700;
    line-height: var(--section-heading-h2-line);
    color: #30273E;
    margin: 0 0 12px 0;
  }

  .sk-tech-{{ section.id }} .sk-tech__subheader {
    font-size: calc(var(--sk-font-size-large) * 1.05);
    line-height: 1.35;
    color: #30273E;
    font-weight: 600;
    margin: 0;
  }

  /* Desktop 3-column */
  .sk-tech-{{ section.id }} .sk-tech__row {
    display: flex;
    gap: clamp(2.4rem, 6vw, 16rem);
    justify-content: center;
    align-items: flex-start;
  }

  .sk-tech-{{ section.id }} .sk-tech__block {
    flex: 1 1 48%;
    max-width: 560px;
  }

  .sk-tech-{{ section.id }} .sk-tech__img {
    margin-bottom: 24px;
  }

  .sk-tech-{{ section.id }} .sk-tech__img img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Bullets */
  .sk-tech__bullets {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 18px;
  }

  .sk-tech__bullets li {
    display: flex;
    align-items: flex-start;
    gap: 14px;
    color: #30273E;
    font-size: 19px;
    line-height: 1.7;
    font-weight: 400;
  }

  .sk-tech__bullets li::before {
    content: '';
    width: 12px;
    height: 12px;
    flex-shrink: 0;
    margin-top: 9px;
    border-right: 2px solid #30273E;
    border-bottom: 2px solid #30273E;
    transform: rotate(-45deg);
    display: inline-block;
  }

  /* Mobile mode */
  .sk-tech-{{ section.id }} .sk-tech__slider {
    display: none;
  }

  @media (max-width: 700px) {
    .sk-tech-{{ section.id }} .sk-tech__row {
      display: none;
    }
    .sk-tech-{{ section.id }} .sk-tech__slider {
      display: block;
    }

    /* Force image scaling inside swiper */
    .sk-tech-{{ section.id }} .swiper-slide .sk-tech__img {
      width: 100% !important;
      max-width: 100% !important;
      display: flex;
      justify-content: center;
    }

    .sk-tech-{{ section.id }} .swiper-slide .sk-tech__img img {
      width: 100% !important;
      max-width: 100% !important;
      height: auto !important;
      max-height: 65vh !important;
      object-fit: contain !important;
      object-position: center !important;
      display: block;
    }

    .sk-tech-{{ section.id }} .swiper-slide {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }
</style>

<section class="sk-tech-{{ section.id }}">
  <div class="page-width">
    {% if section.settings.heading or section.settings.subheader %}
      <div class="sk-tech__header">
        {% if section.settings.heading %}
          <h2 class="sk-tech__heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheader %}
          <h3 class="sk-tech__subheader">{{ section.settings.subheader }}</h3>
        {% endif %}
      </div>
    {% endif %}

    <!-- DESKTOP LAYOUT -->
    <div class="sk-tech__row">
      {% if section.settings.left_image or section.settings.left_bullets %}
        <div class="sk-tech__block">
          {% if section.settings.left_image %}
            <div class="sk-tech__img">
              <img
                src="{{ section.settings.left_image | image_url: width: 1200 }}"
                loading="lazy"
                alt="Skinora Left"
                width="{{ section.settings.left_image.width }}"
                height="{{ section.settings.left_image.height }}"
              >
            </div>
          {% endif %}

          {% if section.settings.left_bullets != blank %}
            {% assign left_items = section.settings.left_bullets | split: '</p>' %}
            {% capture left_list %}
              {% for item in left_items %}
                {% assign text = item | strip | remove: '<p>' | strip %}
                {% if text != '' %}
                  <li>{{ text }}</li>
                {% endif %}
              {% endfor %}
            {% endcapture %}
            {% assign left_list_trimmed = left_list | strip %}
            {% if left_list_trimmed != '' %}
              <ul class="sk-tech__bullets">
                {{ left_list }}
              </ul>
            {% endif %}
          {% endif %}
        </div>
      {% endif %}

      {% if section.settings.right_image or section.settings.right_bullets %}
        <div class="sk-tech__block">
          {% if section.settings.right_image %}
            <div class="sk-tech__img">
              <img
                src="{{ section.settings.right_image | image_url: width: 1200 }}"
                loading="lazy"
                alt="Skinora Right"
                width="{{ section.settings.right_image.width }}"
                height="{{ section.settings.right_image.height }}"
              >
            </div>
          {% endif %}

          {% if section.settings.right_bullets != blank %}
            {% assign right_items = section.settings.right_bullets | split: '</p>' %}
            {% capture right_list %}
              {% for item in right_items %}
                {% assign text = item | strip | remove: '<p>' | strip %}
                {% if text != '' %}
                  <li>{{ text }}</li>
                {% endif %}
              {% endfor %}
            {% endcapture %}
            {% assign right_list_trimmed = right_list | strip %}
            {% if right_list_trimmed != '' %}
              <ul class="sk-tech__bullets">
                {{ right_list }}
              </ul>
            {% endif %}
          {% endif %}
        </div>
      {% endif %}
    </div>

    <!-- MOBILE SWIPER -->
    <div class="sk-tech__slider sk-tech-slider-{{ section.id }}">
      <div class="swiper sk-tech-swiper-{{ section.id }}">
        <div class="swiper-wrapper">
          {% if section.settings.left_image or section.settings.left_bullets %}
            <div class="swiper-slide">
              {% if section.settings.left_image %}
                <div class="sk-tech__img">
                  <img
                    src="{{ section.settings.left_image | image_url: width: 1200 }}"
                    loading="lazy"
                    alt="Skinora Left"
                    width="{{ section.settings.left_image.width }}"
                    height="{{ section.settings.left_image.height }}"
                  >
                </div>
              {% endif %}

              {% if section.settings.left_bullets != blank %}
                {% assign left_items = section.settings.left_bullets | split: '</p>' %}
                {% capture left_list %}
                  {% for item in left_items %}
                    {% assign text = item | strip | remove: '<p>' | strip %}
                    {% if text != '' %}
                      <li>{{ text }}</li>
                    {% endif %}
                  {% endfor %}
                {% endcapture %}
                {% assign left_list_mobile_trimmed = left_list | strip %}
                {% if left_list_mobile_trimmed != '' %}
                  <ul class="sk-tech__bullets">
                    {{ left_list }}
                  </ul>
                {% endif %}
              {% endif %}
            </div>
          {% endif %}

          {% if section.settings.right_image or section.settings.right_bullets %}
            <div class="swiper-slide">
              {% if section.settings.right_image %}
                <div class="sk-tech__img">
                  <img
                    src="{{ section.settings.right_image | image_url: width: 1200 }}"
                    loading="lazy"
                    alt="Skinora Right"
                    width="{{ section.settings.right_image.width }}"
                    height="{{ section.settings.right_image.height }}"
                  >
                </div>
              {% endif %}

              {% if section.settings.right_bullets != blank %}
                {% assign right_items = section.settings.right_bullets | split: '</p>' %}
                {% capture right_list %}
                  {% for item in right_items %}
                    {% assign text = item | strip | remove: '<p>' | strip %}
                    {% if text != '' %}
                      <li>{{ text }}</li>
                    {% endif %}
                  {% endfor %}
                {% endcapture %}
                {% assign right_list_mobile_trimmed = right_list | strip %}
                {% if right_list_mobile_trimmed != '' %}
                  <ul class="sk-tech__bullets">
                    {{ right_list }}
                  </ul>
                {% endif %}
              {% endif %}
            </div>
          {% endif %}
        </div>

        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var mql = window.matchMedia('(max-width: 700px)');
    var swiperInstance = null;

    function initSwiper() {
      var container = document.querySelector('.sk-tech-swiper-{{ section.id }}');
      if (!container) return;

      if (mql.matches && !swiperInstance) {
        swiperInstance = new Swiper(container, {
          slidesPerView: 1,
          spaceBetween: 22,
          pagination: {
            el: container.querySelector('.swiper-pagination'),
            clickable: true,
          },
        });
      } else if (!mql.matches && swiperInstance) {
        swiperInstance.destroy(true, true);
        swiperInstance = null;
      }
    }

    initSwiper();
    mql.addEventListener('change', initSwiper);
  });
</script>

{% schema %}
{
  "name": "SK Technology Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Teknologien bak Skinora"
    },
    {
      "type": "text",
      "id": "subheader",
      "label": "Subheader",
      "default": "Hva gjør Skinora-teknologien?"
    },
    { "type": "image_picker", "id": "left_image", "label": "Left image" },
    {
      "type": "richtext",
      "id": "left_bullets",
      "label": "Left bullet content",
      "default": "<p>Øker kollagen</p><p>Reduserer inflammasjon</p>"
    },
    { "type": "image_picker", "id": "right_image", "label": "Right image" },
    {
      "type": "richtext",
      "id": "right_bullets",
      "label": "Right bullet content",
      "default": "<p>Forbedrer hudens klarhet</p>"
    },
    {
      "type": "range",
      "id": "pad_y_desktop",
      "label": "Padding Y (desktop)",
      "min": 20,
      "max": 160,
      "step": 4,
      "default": 112
    },
    {
      "type": "range",
      "id": "pad_y_mobile",
      "label": "Padding Y (mobile)",
      "min": 16,
      "max": 120,
      "step": 4,
      "default": 60
    }
  ],
  "presets": [{ "name": "SK Technology Section" }]
}
{% endschema %}
