<style>
  .sk-dynamic-banner {
    background-image: url('{{ section.settings.sk_banner_img_desktop | image_url: width: 2200 }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    width: 100%;
    height: 100vh; /* full viewport height */
    display: flex;
    align-items: center;
    position: relative;
  }

  .sk-dynamic-banner__container {
    display: grid;
    grid-template-columns: minmax(0, 1.15fr) minmax(0, 0.85fr);
    column-gap: clamp(2rem, 5vw, 6rem);
    align-items: center;
  }

  .sk-dynamic-banner__content {
    padding-right: clamp(2rem, calc(6vw + 1rem), 15rem);
    max-width: min(90vw, 45rem);
    justify-self: start;
  }

  .sk-dynamic-banner__title {
    font-size: clamp(3.1rem, 4.8vw, 4.8rem);
    color: rgb(var(--sk-color-heading-text));
    font-weight: 500;
    line-height: clamp(1.05, calc(1 + 0.12vw), 1.12);
    margin-bottom: clamp(1.1rem, 2.25vw, 1.25rem);
    letter-spacing: clamp(-0.08rem, -0.35vw, -0.125rem);
    max-width: min(90vw, 45rem);
  }

  .sk-dynamic-banner__description {
    font-size: calc(var(--sk-font-size-large) * 1.1);
    font-weight: 400;
    color: var(--color-neutral-1);
    line-height: 32px;
    margin-bottom: 30px;
    max-width: 520px;
  }

  .sk-dynamic-banner__button {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
  }

  /* Tablet override */
  @media (max-width: 1000px) {
    .sk-dynamic-banner {
      background-image: url('{{ section.settings.sk_banner_img_tablet | image_url: width: 1500 }}');
      height: 100vh;
    }

    .sk-dynamic-banner__content {
      padding-right: 5rem;
    }
  }

  /* Mobile override */
  @media (max-width: 700px) {
    .sk-dynamic-banner {
      background-image: url('{{ section.settings.sk_banner_img_mobile | image_url: width: 900 }}');
      height: 100vh;
    }

    .sk-dynamic-banner__container {
      display: flex;
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .sk-dynamic-banner__content {
      padding-right: 0;
    }

    .sk-dynamic-banner__title {
      font-size: 43px;
      line-height: 1.2;
      max-width: 100%;
    }

    .sk-dynamic-banner__description {
      font-size: 16px;
      line-height: 1.4;
      max-width: 100%;
    }
  }
</style>

<section class="sk-dynamic-banner">
  <div class="page-width">
    <div class="sk-dynamic-banner__container">
      <div class="sk-dynamic-banner__content">
        <h2 class="sk-header__section sk-dynamic-banner__title sk-section-heading sk-section-heading--hxl">
          {{ section.settings.sk_banner_title }}
        </h2>

        <p class="sk-dynamic-banner__description sk-section-body">
          {{ section.settings.sk_banner_description }}
        </p>

        <div>
          <a
            href="{{ section.settings.sk_banner_button_link }}"
            class="sk-dynamic-banner__button sk-btn sk-btn--primary"
          >
            {{ section.settings.sk_banner_button_text }}
            <span class="svg-wrapper sk-btn__icon">
              {{- 'arrow-right.svg' | inline_asset_content -}}
            </span>
          </a>
        </div>
      </div>

      {% comment %}
        Optional image block on the side — remove if you don’t want it:
      {% endcomment %}
      {% if section.settings.sk_banner_img_desktop %}
        <div class="sk-dynamic-banner__img">
          <img
            src="{{ section.settings.sk_banner_img_desktop | image_url: width: 555, height: 370 }}"
            alt="{{ section.settings.sk_banner_title }}"
            width="555"
            height="370"
          >
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SK Dynamic Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "sk_banner_img_desktop",
      "label": "Banner Image – Desktop"
    },
    {
      "type": "image_picker",
      "id": "sk_banner_img_tablet",
      "label": "Banner Image – Tablet"
    },
    {
      "type": "image_picker",
      "id": "sk_banner_img_mobile",
      "label": "Banner Image – Mobile"
    },
    {
      "type": "text",
      "id": "sk_banner_title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "sk_banner_description",
      "label": "Description"
    },
    {
      "type": "url",
      "id": "sk_banner_button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "sk_banner_button_text",
      "label": "Button Text"
    }
  ],
  "presets": [
    {
      "name": "SK Dynamic Banner"
    }
  ]
}
{% endschema %}
