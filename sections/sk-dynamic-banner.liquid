<style>
  .sk-dynamic-banner {
    background-image: url('{{ section.settings.sk_banner_img_desktop | image_url: width: 2200 }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    padding-top: clamp(2rem, 5vh, 6rem);
    padding-bottom: clamp(2rem, 5vh, 6rem);
  }

  /* WIDER SECTION WRAPPER */
  .sk-dynamic-banner .page-width {
    max-width: 1800px;
    width: 95%;
    margin-inline: auto;
    padding-left: 0;
    padding-right: 0;
  }

  /* TEXT COLUMN = LEFT THIRD, BUT WIDER */
  .sk-dynamic-banner__container {
    display: grid;
    grid-template-columns: minmax(35rem, 40vw) 1fr;
    column-gap: clamp(2rem, 6vw, 8rem);
    width: 100%;
    align-items: center;
  }

  /* TEXT BLOCK — SHIFTED RIGHT BY 80px (DYNAMIC) */
  .sk-dynamic-banner__content {
    width: 100%;
    max-width: 56rem;
    justify-self: start;
    transform: none;
    display: grid;
    gap: clamp(1.6rem, 2.6vw, 3.2rem);
    padding: 0.6rem;
  }

  .sk-dynamic-banner__title {
    font-size: clamp(3.36rem, 9.1vw, 7.28rem);
    color: rgb(var(--sk-color-heading-text));
    font-weight: 500;
    line-height: clamp(1.05, 1.15, 1.2);
    margin-bottom: 0;
    letter-spacing: clamp(-0.05rem, -0.35vw, -0.12rem);
    max-width: min(90vw, 60rem);
    word-break: normal;
    overflow-wrap: normal;
    hyphens: manual;
  }

  .sk-dynamic-banner__description {
    font-size: clamp(1.4rem, 2.6vw, 1.9rem);
    font-weight: 300;
    color: rgba(var(--color-foreground), 0.85);
    letter-spacing: 0.1rem;
    line-height: clamp(1.2, 1.4, 1.5);
    margin-bottom: 0;
    max-width: clamp(32rem, 60vw, 60rem);
    overflow-wrap: normal;
    word-break: normal;
    hyphens: manual;
  }

  .sk-dynamic-banner__button .sk-btn {
    font-size: clamp(1rem, 2vw, 1.3rem);
    padding: clamp(0.65rem, 1.8vw, 0.95rem) clamp(1.6rem, 3vw, 2.6rem);
  }

  .sk-dynamic-banner__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    background: transparent;
    -webkit-mask-image: none;
    mask-image: none;
  }

  /* TABLET */
  @media (max-width: 1000px) {
    .sk-dynamic-banner {
      background-image: url('{{ section.settings.sk_banner_img_tablet | image_url: width: 1500 }}');
      height: 100vh;
    }

    .sk-dynamic-banner__container {
      grid-template-columns: minmax(28rem, 50vw) 1fr;
    }

    .sk-dynamic-banner__content {
      max-width: 40rem;
      padding-right: 3rem;
    }

    .sk-dynamic-banner__title {
      font-size: clamp(3.08rem, 12.6vw, 5.6rem);
      letter-spacing: clamp(-0.04rem, -0.4vw, -0.08rem);
    }
  }

  /* MOBILE */
  @media (max-width: 700px) {
    .sk-dynamic-banner {
      background-image: url('{{ section.settings.sk_banner_img_mobile | image_url: width: 900 }}');
      height: 100vh;
      align-items: flex-end;
    }

    .sk-dynamic-banner__container {
      display: flex;
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .sk-dynamic-banner__content {
      padding-right: 0;
      max-width: 100%;
      transform: none;
      display: flex;
      flex-direction: column;
      gap: clamp(1.4rem, 4.5vw, 2.4rem);
      margin-top: 0;
      margin-inline: auto;
    }

    .sk-dynamic-banner__title {
      font-size: clamp(2.59rem, 17.5vw, 3.92rem);
      line-height: 1.2;
      max-width: 100%;
      padding-inline: 0.6rem;
      margin-top: 0;
      margin-bottom: 0;
      text-wrap: balance;
      hyphens: auto;
      overflow-wrap: break-word;
      word-break: normal;
    }

    .sk-dynamic-banner__description {
      font-size: clamp(1.1rem, 3.9vw, 1.5rem);
      line-height: 1.4;
      max-width: 100%;
    }
    .sk-dynamic-banner__button .sk-btn {
      width: min(280px, 90vw);
      justify-content: center;
    }

    .sk-dynamic-banner__cta {
      margin-top: -0.4rem;
    }

    .sk-dynamic-banner--cta-top {
      align-items: flex-start;
    }

    .sk-dynamic-banner--cta-bottom {
      align-items: flex-end;
    }
  }

  @media (max-width: 560px) {
    .sk-dynamic-banner {
      min-height: 80vh;
      padding-top: 1.5rem;
      padding-bottom: 1.5rem;
    }

    .sk-dynamic-banner__content {
      margin-inline: auto;
      transform: none;
    }

    .sk-dynamic-banner__title {
      font-size: clamp(1.75rem, 12.6vw, 2.8rem);
      letter-spacing: -0.02em;
      text-transform: uppercase;
    }

    .sk-dynamic-banner__description {
      font-size: clamp(1.1rem, 5vw, 1.5rem);
      max-width: 100%;
    }

    .sk-dynamic-banner__button .sk-btn {
      width: 100%;
      padding: clamp(0.6rem, 2vw, 0.9rem) clamp(1.4rem, 4vw, 2rem);
      font-size: clamp(0.95rem, 2.5vw, 1.1rem);
    }
  }

  /* Very small phones: scale down a touch more to avoid mid-word wraps */
  @media (max-width: 420px) {
    .sk-dynamic-banner__title {
      font-size: clamp(1.75rem, 11.9vw, 2.73rem);
      letter-spacing: -0.01em;
      hyphens: auto;
      overflow-wrap: break-word;
      word-break: normal;
    }

    .sk-dynamic-banner__description {
      font-size: clamp(0.98rem, 3.6vw, 1.25rem);
    }
  }
</style>

<section class="sk-dynamic-banner sk-dynamic-banner--cta-{{ section.settings.sk_banner_cta_position_mobile }}">
  <div class="page-width">
    <div class="sk-dynamic-banner__container">
      <div class="sk-dynamic-banner__content">
        <h2 lang="no" class="sk-header__section sk-dynamic-banner__title">
          {{ section.settings.sk_banner_title }}
        </h2>

        <p class="sk-section-body sk-dynamic-banner__description">
          {{ section.settings.sk_banner_description }}
        </p>

        <div class="sk-dynamic-banner__cta">
          <a
            href="{{ section.settings.sk_banner_button_link }}"
            class="sk-dynamic-banner__button sk-btn sk-btn--primary"
          >
            {{ section.settings.sk_banner_button_text }}
            <span class="svg-wrapper sk-btn__icon">
              {{- 'arrow-right.svg' | inline_asset_content -}}
            </span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SK Dynamic Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "sk_banner_img_desktop",
      "label": "Banner Image – Desktop"
    },
    {
      "type": "image_picker",
      "id": "sk_banner_img_tablet",
      "label": "Banner Image – Tablet"
    },
    {
      "type": "image_picker",
      "id": "sk_banner_img_mobile",
      "label": "Banner Image – Mobile"
    },
    {
      "type": "text",
      "id": "sk_banner_title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "sk_banner_description",
      "label": "Description"
    },
    {
      "type": "url",
      "id": "sk_banner_button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "sk_banner_button_text",
      "label": "Button Text"
    },
    {
      "type": "select",
      "id": "sk_banner_cta_position_mobile",
      "label": "CTA position (mobile)",
      "default": "bottom",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SK Dynamic Banner"
    }
  ]
}
{% endschema %}
