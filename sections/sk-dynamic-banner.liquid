<style>
  .sk-dynamic-banner {
    background-image: url('{{ section.settings.sk_banner_img_desktop | image_url: width: 2200 }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    padding-top: clamp(2rem, 5vh, 6rem);
    padding-bottom: clamp(2rem, 5vh, 6rem);
  }

  /* WIDER SECTION WRAPPER */
  .sk-dynamic-banner .page-width {
    max-width: 1800px;
    width: 100%;
    margin-inline: auto;
    padding-left: clamp(1rem, 4vw, 6rem);
    padding-right: clamp(1rem, 4vw, 6rem);
  }

  /* TEXT COLUMN = LEFT THIRD, BUT WIDER */
  .sk-dynamic-banner__container {
    display: grid;
    grid-template-columns: minmax(35rem, 40vw) 1fr;
    width: 100%;
    align-items: center;
  }

  /* TEXT BLOCK — SHIFTED RIGHT BY 80px (DYNAMIC) */
  .sk-dynamic-banner__content {
    width: 100%;
    max-width: 50rem;
    justify-self: start;
    transform: translateX(clamp(2rem, 80px, 6vw));
  }

  .sk-dynamic-banner__title {
    font-size: clamp(4.2rem, 6vw, 6.2rem);
    color: rgb(var(--sk-color-heading-text));
    font-weight: 500;
    line-height: clamp(1.05, calc(1 + 0.12vw), 1.12);
    margin-bottom: clamp(1.1rem, 2.25vw, 1.25rem);
    letter-spacing: clamp(-0.08rem, -0.35vw, -0.125rem);
    max-width: min(90vw, 60rem);
  }

  @supports ((-webkit-background-clip: text) or (background-clip: text)) {
    .sk-dynamic-banner__title {
      background-image: linear-gradient(
        135deg,
        rgba(var(--sk-color-heading-text), 1) 0%,
        rgba(var(--sk-color-heading-text), 0.9) 45%,
        rgba(var(--sk-color-heading-text), 0.4)
      );
      color: transparent;
      -webkit-background-clip: text;
      background-clip: text;
    }
  }

  .sk-dynamic-banner__description {
    font-size: calc(var(--sk-font-size-large) * 1.1);
    font-weight: 300;
    color: rgba(var(--sk-color-body-text), 0.95);
    line-height: 32px;
    margin-bottom: 30px;
    max-width: clamp(32rem, 60vw, 60rem);
  }

  .sk-dynamic-banner__button {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
  }

  /* TABLET */
  @media (max-width: 1000px) {
    .sk-dynamic-banner {
      background-image: url('{{ section.settings.sk_banner_img_tablet | image_url: width: 1500 }}');
      height: 100vh;
    }

    .sk-dynamic-banner__container {
      grid-template-columns: minmax(28rem, 50vw) 1fr;
    }

    .sk-dynamic-banner__content {
      max-width: 40rem;
      transform: translateX(clamp(1rem, 60px, 5vw));
      padding-right: 3rem;
    }
  }

  /* MOBILE */
  @media (max-width: 700px) {
    .sk-dynamic-banner {
      background-image: url('{{ section.settings.sk_banner_img_mobile | image_url: width: 900 }}');
      height: 100vh;
    }

    .sk-dynamic-banner__container {
      display: flex;
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .sk-dynamic-banner__content {
      padding-right: 0;
      max-width: 100%;
      transform: none;
    }

    .sk-dynamic-banner__title {
      font-size: 52px;
      line-height: 1.2;
      max-width: 100%;
    }

    .sk-dynamic-banner__description {
      font-size: 16px;
      line-height: 1.4;
      max-width: 100%;
    }
  }
</style>

<section class="sk-dynamic-banner">
  <div class="page-width">
    <div class="sk-dynamic-banner__container">
      <div class="sk-dynamic-banner__content">
        <h2 class="sk-header__section sk-dynamic-banner__title sk-section-heading sk-section-heading--hxl">
          {{ section.settings.sk_banner_title }}
        </h2>

        <p class="sk-section-body sk-dynamic-banner__description">
          {{ section.settings.sk_banner_description }}
        </p>

        <div>
          <a
            href="{{ section.settings.sk_banner_button_link }}"
            class="sk-dynamic-banner__button sk-btn sk-btn--primary"
          >
            {{ section.settings.sk_banner_button_text }}
            <span class="svg-wrapper sk-btn__icon">
              {{- 'arrow-right.svg' | inline_asset_content -}}
            </span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SK Dynamic Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "sk_banner_img_desktop",
      "label": "Banner Image – Desktop"
    },
    {
      "type": "image_picker",
      "id": "sk_banner_img_tablet",
      "label": "Banner Image – Tablet"
    },
    {
      "type": "image_picker",
      "id": "sk_banner_img_mobile",
      "label": "Banner Image – Mobile"
    },
    {
      "type": "text",
      "id": "sk_banner_title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "sk_banner_description",
      "label": "Description"
    },
    {
      "type": "url",
      "id": "sk_banner_button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "sk_banner_button_text",
      "label": "Button Text"
    }
  ],
  "presets": [
    {
      "name": "SK Dynamic Banner"
    }
  ]
}
{% endschema %}
