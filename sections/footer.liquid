{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-list-menu.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {


    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  {%- liquid
    assign has_social_icons = true
    if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
      assign has_social_icons = false
    endif
  -%}
  <section class="footer-top_section">
    <div class="footer-top_section-content">
      <h2>{{ section.settings.newsletter_top_heading | default: 'Join our newsletter' }}</h2>
      {% if section.settings.newsletter_top_subtext != blank %}
  <p class="newsletter-subtext">{{ section.settings.newsletter_top_subtext }}</p>
{% endif %}
      {%- form 'customer', id: 'ContactFooterTop', class: 'footer__newsletter-form newsletter-form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter-form__field-wrapper">
          <div class="field">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              class="field__input"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="ContactFooterTop-error"
              {% elsif form.posted_successfully? %}
                aria-describedby="ContactFooterTop-success"
              {% endif %}
              placeholder="{{ section.settings.newsletter_placeholder | default: 'Email' }}"
              required
            >
            <button
              type="submit"
              class="newsletter-form__button field__button footer_submit_btn"
              name="commit"
              id="Subscribe"
              aria-label="{{ 'newsletter.button_label' | t }}"
            >
              <span class="news_letter_join-btn">{{ section.settings.newsletter_top_cta | default: 'Join' }}</span>
              {% comment %}
                <span class="svg-wrapper">
                  {{- 'icon-arrow.svg' | inline_asset_content -}}
                </span>
              {% endcomment %}
            </button>
          </div>
          {%- if form.errors -%}
            <small class="newsletter-form__message form__message" id="ContactFooterTop-error">
              <span class="svg-wrapper">
                {{- 'icon-error.svg' | inline_asset_content -}}
              </span>
              {{- form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email -}}
            </small>
          {%- endif -%}
          {%- if form.posted_successfully? -%}
            <p
              class="newsletter-form__message newsletter-form__message--success form__message"
              id="ContactFooterTop-success"
              tabindex="-1"
              autofocus
            >
              <span class="svg-wrapper">
                {{- 'icon-success.svg' | inline_asset_content -}}
              </span>
              {{- 'newsletter.success' | t }}
            </p>
          {%- endif -%}
        </div>
      {%- endform -%}
    </div>
  </section>
  <div class="footer__content-top container">
    <div class="footer__main-columns{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {%- comment -%} First Column: Logo, Description, Newsletter, Social Icons {%- endcomment -%}
      <div class="footer__column footer__column--brand">
        {%- if section.settings.logo != blank -%}
          <div class="footer__logo">
            {{ section.settings.logo | image_url: width: section.settings.logo_width | image_tag:
              alt: shop.name,
              loading: 'lazy'
            }}
          </div>
        {%- else -%}
          <div class="footer-logo">
            {{- 'custom-logo.svg' | inline_asset_content -}}
          </div>
        {%- endif -%}

        {%- if section.settings.brand_description != blank -%}
          <div class="footer__brand-description">
            {{ section.settings.brand_description }}
          </div>
        {%- endif -%}

        {% comment %}
          {%- if section.settings.newsletter_enable -%}
            <div class="footer__newsletter">
              {%- if section.settings.newsletter_heading != blank -%}
                <h3 class="footer__newsletter-heading">{{ section.settings.newsletter_heading }}</h3>
              {%- endif -%}
              {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter-form newsletter-form' -%}
                <input
                  type="hidden"
                  name="contact[tags]"
                  value="newsletter"
                >
                <div class="newsletter-form__field-wrapper">
                  <div class="field">
                    <input
                      id="NewsletterForm--{{ section.id }}"
                      type="email"
                      name="contact[email]"
                      class="field__input"
                      value="{{ form.email }}"
                      aria-required="true"
                      autocorrect="off"
                      autocapitalize="off"
                      autocomplete="email"
                      {% if form.errors %}
                        autofocus
                        aria-invalid="true"
                        aria-describedby="ContactFooter-error"
                      {% elsif form.posted_successfully? %}
                        aria-describedby="ContactFooter-success"
                      {% endif %}
                      placeholder="{{ section.settings.newsletter_placeholder | default: 'Email' }}"
                      required
                    >
                    <button
                      type="submit"
                      class="newsletter-form__button field__button footer_submit_btn"
                      name="commit"
                      id="Subscribe"
                      aria-label="{{ 'newsletter.button_label' | t }}"
                    >
                      <span class="">SIGN UP</span>
                      <span class="svg-wrapper">
                        {{- 'icon-arrow.svg' | inline_asset_content -}}
                      </span>
                    </button>
                  </div>
                  {%- if form.errors -%}
                    <small class="newsletter-form__message form__message" id="ContactFooter-error">
                      <span class="svg-wrapper">
                        {{- 'icon-error.svg' | inline_asset_content -}}
                      </span>
                      {{- form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email -}}
                    </small>
                  {%- endif -%}
                </div>
                {%- if form.posted_successfully? -%}
                  <h3
                    class="newsletter-form__message newsletter-form__message--success form__message"
                    id="ContactFooter-success"
                    tabindex="-1"
                    autofocus
                  >
                    <span class="svg-wrapper">
                      {{- 'icon-success.svg' | inline_asset_content -}}
                    </span>
                    {{- 'newsletter.success' | t }}
                  </h3>
                {%- endif -%}
              {%- endform -%}
            </div>
          {%- endif -%}
        {% endcomment %}

        {%- if section.settings.show_social and has_social_icons -%}
          {%- render 'social-icons', class: 'footer__social-icons' -%}
        {%- endif -%}
      </div>

      {%- comment -%} Three Menu Columns {%- endcomment -%}
      {%- if section.settings.footer_menu != blank -%}
        {%- assign footer_menu = linklists[section.settings.footer_menu] -%}
        {%- for parent_link in footer_menu.links limit: 3 -%}
          <div class="footer__column footer__column--menu">
            <a href="{{ parent_link.url }}" class="footer__menu-heading">{{ parent_link.title | escape }}</a>
            {%- if parent_link.links != blank -%}
              <ul class="footer__menu-list list-unstyled">
                {%- for child_link in parent_link.links -%}
                  <li class="footer__menu-item">
                    <a href="{{ child_link.url }}" class="footer__menu-link">
                      {{ child_link.title | escape }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>

  <div
    class="footer__content-bottom{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    <div class="footer__content-bottom-wrapper container">
      <div class="footer__column footer__localization isolate">
        {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
          <localization-form>
            {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
              <div>
                <h2 class="caption-large text-body" id="FooterCountryLabel">{{ 'localization.country_label' | t }}</h2>
                {%- render 'country-localization', localPosition: 'FooterCountry' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}

        {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
          <localization-form>
            {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
              <div>
                <h2 class="caption-large text-body" id="FooterLanguageLabel">
                  {{ 'localization.language_label' | t }}
                </h2>
                {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}
      </div>
      <div class="footer__column footer__column--info">
        <div class="footer__payment-shipping-wrapper">
          {%- if section.settings.payment_enable -%}
            <div class="footer__payment">
              <div>
                <span class="">{{ 'sections.footer.payment' | t }}</span>
              </div>

              <ul class="list list-payment" role="list">
                {% comment %}
                  {%- for type in shop.enabled_payment_types -%}
                    <li class="list-payment__item">
                      {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                    </li>
                  {%- endfor -%}
                {% endcomment %}

                <li class="list-payment__item">
                  {{ 'p1.svg' | inline_asset_content }}
                </li>
                <li class="list-payment__item">
                  {{ 'p2.svg' | inline_asset_content }}
                </li>
                <li class="list-payment__item">
                  {{ 'p3.svg' | inline_asset_content }}
                </li>
                <li class="list-payment__item">
                  {{ 'p4.svg' | inline_asset_content }}
                </li>
              </ul>
            </div>
          {%- endif -%}

          {%- if section.settings.show_shipping_delivery -%}
            <div class="footer__shipping-delivery">
              <div>
                <span class="">{{ 'sections.footer.shipping_and_delivery' | t }}</span>
              </div>

              <ul class="list list-shipping-delivery" role="list">
                {%- if section.settings.show_free_shipping -%}
                  <li class="list-shipping-delivery__item">
                    <div class="shipping-delivery-icon">
                      {%- if section.settings.free_shipping_svg != blank -%}
                        {{ section.settings.free_shipping_svg }}
                      {%- else -%}
                        <svg
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            d="M3 6H21L19 12H5L3 6Z"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                          <path
                            d="M5 12V18H19V12"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                          <path
                            d="M8 15H16"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round" />
                        </svg>
                      {%- endif -%}
                    </div>
                  </li>
                {%- endif -%}

                {%- if section.settings.show_fast_delivery -%}
                  <li class="list-shipping-delivery__item">
                    <div class="shipping-delivery-icon">
                      {%- if section.settings.fast_delivery_svg != blank -%}
                        {{ section.settings.fast_delivery_svg }}
                      {%- else -%}
                        <svg
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            d="M16 3H5C3.89543 3 3 3.89543 3 5V19C3 20.1046 3.89543 21 5 21H19C20.1046 21 21 20.1046 21 19V8L16 3Z"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                          <path
                            d="M16 3V8H21"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                          <path
                            d="M12 11L15 14L12 17"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                          <path
                            d="M8 14H15"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round" />
                        </svg>
                      {%- endif -%}
                    </div>
                  </li>
                {%- endif -%}

                {%- if section.settings.show_secure_payment -%}
                  <li class="list-shipping-delivery__item">
                    <div class="shipping-delivery-icon">
                      {%- if section.settings.secure_payment_svg != blank -%}
                        {{ section.settings.secure_payment_svg }}
                      {%- else -%}
                        <svg
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            d="M12 2L3 7L12 12L21 7L12 2Z"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                          <path
                            d="M3 17L12 22L21 17"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                          <path
                            d="M3 12L12 17L21 12"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                        </svg>
                      {%- endif -%}
                    </div>
                  </li>
                {%- endif -%}

                {%- if section.settings.show_return_policy -%}
                  <li class="list-shipping-delivery__item">
                    <div class="shipping-delivery-icon">
                      {%- if section.settings.return_policy_svg != blank -%}
                        {{ section.settings.return_policy_svg }}
                      {%- else -%}
                        <svg
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            d="M3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12Z"
                            stroke="currentColor"
                            stroke-width="2" />
                          <path
                            d="M12 8V12L15 15"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                        </svg>
                      {%- endif -%}
                    </div>
                  </li>
                {%- endif -%}
              </ul>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
    <div class="footer__content-bottom-wrapper container{% if section.settings.enable_country_selector == false and section.settings.enable_language_selector == false %} footer__content-bottom-wrapper--center{% endif %}">
      <div class="footer__copyright caption">
       <small class="copyright__content">
       {{ section.settings.copyright_text | default: 'Skinora v/Providento AS - 933 648 672 MVA' }} &copy; {{ 'now' | date: '%Y' }}
        </small>
        {% comment %} <small class="copyright__content">{{ powered_by_link }}</small> {% endcomment %}
        {%- if section.settings.show_policy -%}
          <ul class="policies list-unstyled">
            {%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <li>
                  <small class="copyright__content">
                    <a href="{{ policy.url }}">{{ policy.title | escape }}</a>
                  </small>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
    </div>
  </div>
  {%- if section.settings.enable_org_schema -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": {{ shop.name | json }},
  "url": {{ shop.url | json }},
  "logo": {{ section.settings.logo | image_url: width: 400 | json }},
  "description": {{ section.settings.brand_description | strip_html | strip | json }},
  "sameAs": [{% assign socials = '' -%}
    {%- if settings.social_instagram_link != blank -%}{% assign socials = socials | append: settings.social_instagram_link | append: '|' %}{%- endif -%}
    {%- if settings.social_facebook_link  != blank -%}{% assign socials = socials | append: settings.social_facebook_link  | append: '|' %}{%- endif -%}
    {%- if settings.social_youtube_link   != blank -%}{% assign socials = socials | append: settings.social_youtube_link   | append: '|' %}{%- endif -%}
    {%- if settings.social_tiktok_link    != blank -%}{% assign socials = socials | append: settings.social_tiktok_link    | append: '|' %}{%- endif -%}
    {%- if settings.social_twitter_link   != blank -%}{% assign socials = socials | append: settings.social_twitter_link   | append: '|' %}{%- endif -%}
    {%- if settings.social_pinterest_link != blank -%}{% assign socials = socials | append: settings.social_pinterest_link | append: '|' %}{%- endif -%}
    {%- assign sameas = socials | split: '|' | reject: '' -%}
    {%- for u in sameas -%}{{ u | json }}{% unless forloop.last %}, {% endunless %}{%- endfor -%}
  ],
  "contactPoint": [{
    "@type": "ContactPoint",
    "contactType": "customer support",
    "email": {{ shop.email | json }},
    "areaServed": "NO"
  }]
}
</script>
{%- endif -%}

</footer>

