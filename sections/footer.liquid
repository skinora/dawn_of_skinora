    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "default": true,
      "label": "Enable newsletter signup"
    },
    {
      "type": "inline_richtext",
      "id": "newsletter_heading",
      "default": "SUBSCRIBE",
      "label": "Newsletter heading"
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "default": "Email",
      "label": "Email placeholder text"
    },
    {
      "type": "header",
      "content": "Menu"
