<style>
  .sk-features__container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: clamp(16px, 2vw, 32px);
    justify-items: center;
    align-content: center;
    width: min(1200px, 100%);
    margin: 0 auto;
  }
  .sk-features__item {
    display: flex;
    flex-flow: column;
    align-items: center;
    width: 100%;
    max-width: 280px;
  }
  .sk-features__heading {
    text-align: center;
    margin: 0 0 clamp(16px, 3vw, 28px);
    color: #30273e;
  }
  .sk-features__title {
    text-align: center;
    margin: 0;
    padding-top: 1rem;
    color: #30273e;
    font-size: clamp(1.2rem, 3.2vw, 1.6rem);
    line-height: 28px;
    font-weight: 600;
    max-width: 220px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    white-space: normal;
  }
  .sk-features {
    padding: 12px 0;
  }
  .sk-features__icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    overflow: hidden;
  }
  .sk-features__icon svg {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
  }

  @media only screen and (max-width: 900px) {
    .sk-features__container {
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    }
  }

  @media only screen and (max-width: 600px) {
    .sk-features__container {
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: clamp(12px, 3vw, 20px);
    }
  }

  @media only screen and (max-width: 700px) {
    .sk-features {
      padding: 5rem 0;
    }
    .sk-features__title {
      font-size: var(--sk-font-size-medium);
      line-height: 24px;
    }
  }

  @media only screen and (max-width: 600px) {
    .sk-features__container {
      grid-template-columns: 1fr;
    }
    .sk-features__item {
      flex-direction: row;
      justify-content: flex-start;
      align-items: center;
      gap: 1rem;
      margin-bottom: 24px;
    }
    .sk-features__icon {
      width: 60px;
      height: 60px;
    }
    .sk-features__title {
      font-size: clamp(1.1rem, 4vw, 1.35rem);
      line-height: 30px;
      letter-spacing: 0.08em;
      text-align: left;
      flex: 1;
      white-space: normal;
      padding-top: 0;
    }
  }
</style>

<section class="sk-features">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h1 class="sk-header__section sk-features__heading sk-section-heading sk-section-heading--h1">
        {{ section.settings.heading | escape }}
      </h1>
    {% endif %}
    <div class="sk-features__container">
      {% for block in section.blocks %}
        <div class="sk-features__item">
          {% if block.settings.sk_features_svg != blank %}
            <div class="sk-features__icon">
              {{ block.settings.sk_features_svg }}
            </div>
          {% endif %}
          <span class="sk-features__title">{{ block.settings.sk_features_title }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SK Features",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading"
    },
    {
      "type": "color",
      "id": "sk_features_bgColor",
      "label": "Background Color",
      "default": "#fff"
    }
  ],
  "blocks": [
    {
      "name": "Logo",
      "type": "Card",
      "settings": [
        {
          "type": "html",
          "id": "sk_features_svg",
          "label": "SVG Code",
          "info": "Paste your SVG code here. The SVG will be automatically sized to 98x98px."
        },
        {
          "type": "text",
          "id": "sk_features_title",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SK Features",
      "category": "Custom"
    }
  ]
}
{% endschema %}
