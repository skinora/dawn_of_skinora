<style>
  .sk-features__container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: clamp(12px, 2vw, 24px);
    justify-items: center;
    align-content: center;
    width: min(1200px, 100%);
    margin: 0 auto;
  }
  .sk-features__item {
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    width: 100%;
    max-width: 300px;
    padding: clamp(1.25rem, 2.5vw, 1.75rem) clamp(0.75rem, 1.8vw, 1.25rem);
    gap: 0.35rem;
  }
  .sk-features__heading {
    text-align: center;
    margin: 0 0 clamp(16px, 3vw, 28px);
    color: #30273e;
  }
  .sk-features__title {
    margin: 0;
    color: #30273e;
    font-size: clamp(1.2rem, 3.2vw, 1.6rem);
    line-height: 28px;
    font-weight: 600;
    max-width: 240px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    white-space: normal;
  }
  .sk-features {
    background-color: var(--color-ghost-3);
    padding-block: clamp(2.5rem, 5vw, 4.5rem);
  }

  @media only screen and (max-width: 900px) {
    .sk-features__container {
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    }
  }

  @media only screen and (max-width: 600px) {
    .sk-features__container {
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: clamp(12px, 3vw, 20px);
    }
  }

  @media only screen and (max-width: 700px) {
    .sk-features {
      padding: 3.25rem 0;
    }
    .sk-features__title {
      font-size: var(--sk-font-size-medium);
      line-height: 24px;
    }
  }

  @media only screen and (max-width: 600px) {
    .sk-features__container {
      grid-template-columns: 1fr;
    }
    .sk-features__item {
      flex-direction: row;
      justify-content: flex-start;
      align-items: center;
      gap: 1rem;
      margin-bottom: 24px;
    }
    .sk-features__icon {
      width: 60px;
      height: 60px;
    }
    .sk-features__title {
      font-size: clamp(1.1rem, 4vw, 1.35rem);
      line-height: 30px;
      letter-spacing: 0.04em;
      text-align: center;
      flex: 1;
      white-space: normal;
      padding-top: 0;
      text-transform: none;
      font-weight: 400;
      font-variant: small-caps;
    }
  }
  @media screen and (max-width: 749px) {
    .sk-section-heading {
      font-size: var(--sk-mobile-heading-size);
      line-height: var(--sk-mobile-heading-line);
    }
    .sk-section-body {
      font-size: var(--sk-mobile-body-size);
      line-height: var(--sk-mobile-body-line);
    }
  }
</style>

<section class="sk-features">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h1 class="sk-header__section sk-features__heading sk-section-heading sk-section-heading--h1">
        {{ section.settings.heading | escape }}
      </h1>
    {% endif %}
    <div class="sk-features__container">
      {% for block in section.blocks %}
        <div class="sk-features__item">
          <span class="sk-features__title sk-section-body">{{ block.settings.sk_features_title }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SK Features",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading"
    }
  ],
  "blocks": [
    {
      "name": "Logo",
      "type": "Card",
      "settings": [
        {
          "type": "text",
          "id": "sk_features_title",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SK Features",
      "category": "Custom"
    }
  ]
}
{% endschema %}
