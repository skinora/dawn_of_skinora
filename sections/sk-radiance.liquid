{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

<style>
  .sk-radiance {
    background: rgb(var(--color-background));
    padding-top: calc({{section.settings.padding_top}} * 0.1rem);
    padding-bottom: calc({{section.settings.padding_bottom}} * 0.1rem);
  }

  .sk-radiance__inner {
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(2.4rem, 5vw, 4.8rem);
    align-items: center;
    max-width: 100%;
    margin: 0;
  }

  .sk-radiance__image,
  .sk-radiance__media-frame svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .sk-radiance__media-frame {
    display: block;
    overflow: hidden;
    line-height: 0;
    aspect-ratio: 4 / 5;
    width: 100%;
  }

  .sk-radiance__media-frame .placeholder-svg {
    color: rgba(var(--color-foreground), 0.35);
  }

  .sk-radiance__content {
    max-width: 56rem;
    margin: 0 auto;
    display: grid;
    gap: clamp(1.6rem, 3vw, 3.2rem);
    align-items: flex-start;
  }

  .sk-radiance__content .sk-section-header {
    margin-bottom: 0;
  }

  .sk-section-header__eyebrow.sk-copy-eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: clamp(1.1rem, 1.6vw, 1.3rem);
    color: rgba(var(--color-foreground), 0.65);
  }

  .sk-section-header__title {
    line-height: 1.1;
    letter-spacing: -0.01em;
  }

  .sk-radiance__richtext {
    font-size: clamp(1.7rem, 1.9vw, 1.9rem);
    line-height: 1.7;
    color: rgba(var(--color-foreground), 0.85);
  }

  .sk-radiance__richtext p {
    margin: 0 0 1.6rem;
  }

  .sk-radiance__richtext p:last-child {
    margin-bottom: 0;
  }

  .sk-radiance__richtext a {
    color: var(--sk-brand);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  .sk-radiance__richtext ul,
  .sk-radiance__richtext ol {
    list-style: disc;
    padding-left: 2.2rem;
    margin: 0;
    list-style-position: outside;
  }

  .sk-radiance__richtext li {
    margin-bottom: 0.7rem;
    line-height: 1.5;
    font-weight: 400;
    color: rgba(var(--color-foreground), 0.85);
  }

  .sk-radiance__button {
    margin-top: 0;
    align-self: flex-start;
  }

  .sk-radiance__button .sk-btn {
    width: 100%;
    max-width: 100%;
    justify-content: center;
  }

  @media (min-width: 75rem) {
    .sk-radiance__inner {
      grid-template-columns: minmax(0, 1.2fr) minmax(0, 1fr);
      gap: clamp(3.2rem, 5vw, 6rem);
    }

    .sk-radiance__media-frame {
      border-radius: 16px;
    }

    .sk-radiance__content {
      max-width: 52rem;
    }

    .sk-radiance__button .sk-btn {
      width: auto;
      max-width: none;
      justify-content: flex-start;
    }
  }

  @media (max-width: 74.9rem) {
    .sk-radiance__media-frame {
      aspect-ratio: 4 / 3;
      max-height: none;
      width: 100vw;
      max-width: none;
      margin-inline: calc(50% - 50vw);
    }

    .sk-radiance__image,
    .sk-radiance__media-frame svg {
      width: 100%;
      height: auto;
      object-fit: cover;
    }
  }
</style>

<section class="sk-radiance section color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="sk-radiance__inner">
      <div class="sk-radiance__media">
        <div class="sk-radiance__media-frame">
          {% if section.settings.image != blank %}
            {{
              section.settings.image
              | image_url: width: 1600
              | image_tag: class: 'sk-radiance__image', loading: 'lazy', sizes: '(max-width: 749px) 100vw, 50vw'
            }}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'sk-radiance__image' }}
          {% endif %}
        </div>
      </div>

      <div class="sk-radiance__content">
        {% assign has_header = false %}
        {% if section.settings.header_text != blank %}
          {% assign has_header = true %}
        {% endif %}
        {% if section.settings.subheader_text != blank %}
          {% assign has_header = true %}
        {% endif %}

        {% if has_header %}
          <div class="sk-section-header sk-section-header--left">
            {% if section.settings.header_text != blank %}
              <p class="sk-section-header__eyebrow sk-copy-eyebrow">{{ section.settings.header_text }}</p>
            {% endif %}
            {% if section.settings.subheader_text != blank %}
              <h2 class="sk-section-header__title">{{ section.settings.subheader_text }}</h2>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.body_richtext != blank %}
          <div class="sk-radiance__richtext rte sk-section-body">{{ section.settings.body_richtext }}</div>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <div class="sk-radiance__button">
            <a
              {% if section.settings.button_link != blank %}
                href="{{ section.settings.button_link }}"
              {% else %}
                role="button"
                aria-disabled="true"
                tabindex="-1"
              {% endif %}
              class="sk-btn sk-btn--primary{% if section.settings.button_link == blank %} disabled{% endif %}"
            >
              {{ section.settings.button_label }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SK Radiance",
  "class": "section",

  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 48
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header",
      "default": "Skinora Radiance"
    },
    {
      "type": "text",
      "id": "subheader_text",
      "label": "Subheader",
      "default": "Clinically inspired glow ritual"
    },
    {
      "type": "richtext",
      "id": "body_richtext",
      "label": "Rich text",
      "default": "<p>Describe the routine, highlight ingredients, or insert any promotional copy here.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Secondary button label",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Secondary button link"
    }
  ],

  "presets": [
    {
      "name": "SK Radiance"
    }
  ]
}
{% endschema %}
