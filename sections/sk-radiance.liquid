{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

<section
  class="image-with-text section {{ section.settings.color_scheme }}"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="page-width">
    <!-- ⭐ OUR OWN SAFE FLEX CONTAINER (NO DAWN GRID CLASSES) -->
    <div class="image-with-text__wrapper">
      <!-- ------------------------------------------------------------ -->
      <!-- IMAGE COLUMN -->
      <!-- ------------------------------------------------------------ -->
      <div class="image-with-text__media-item">
        {% if section.settings.image != blank %}
          {% assign img = section.settings.image %}
          <img
            src="{{ img | image_url: width: 1600 }}"
            alt="{{ img.alt | escape }}"
            width="{{ img.width }}"
            height="{{ img.height }}"
            loading="lazy"
          >
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag }}
        {% endif %}
      </div>

      <!-- ------------------------------------------------------------ -->
      <!-- TEXT COLUMN -->
      <!-- ------------------------------------------------------------ -->
      <div class="image-with-text__text-item">
        <div class="image-with-text__content">
          {% for block in section.blocks %}
            {% case block.type %}
                <!-- Heading -->
              {% when 'heading' %}
                <h1 class="image-with-text__heading {{ block.settings.heading_size }} sk-section-heading sk-section-heading--h1">
                  {{ block.settings.heading }}
                </h1>

                <!-- Bullet points -->
              {% when 'bullets' %}
                <ul class="image-with-text__list">
                  {% assign items = block.settings.items | split: '|' %}
                  {% for item in items %}
                    {% if item != blank %}
                      <li class="image-with-text__list-item">
                        <span class="image-with-text__bullet-icon">
                          {% if block.settings.icon != blank %}
                            {{ block.settings.icon }}
                          {% else %}
                            <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                              <circle cx="10" cy="10" r="3" />
                            </svg>
                          {% endif %}
                        </span>
                        <span>{{ item | strip }}</span>
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>

                <!-- Description -->
              {% when 'description' %}
                <div class="image-with-text__text rte {{ block.settings.text_style }}">
                  {{ block.settings.description }}
                </div>

                <!-- Button -->
              {% when 'button' %}
                <div class="image-with-text__button">
                  <a href="{{ block.settings.url }}" class="sk-btn sk-btn--primary">
                    {{ block.settings.text }}
                  </a>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Image With Text",
  "class": "section",

  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 32
    }
  ],

  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading text",
          "default": "Sliter du med..."
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading size",
          "options": [
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" },
            { "value": "h0", "label": "Large" }
          ],
          "default": "h1"
        }
      ]
    },

    {
      "type": "bullets",
      "name": "Bullet list",
      "settings": [
        {
          "type": "textarea",
          "id": "items",
          "label": "Bullet items",
          "default": "Fine linjer|Tap av spenst|Pigmentflekker|Ujevn hudtone",
          "info": "Separate with |"
        },
        {
          "type": "html",
          "id": "icon",
          "label": "Custom icon (SVG)"
        }
      ]
    },

    {
      "type": "description",
      "name": "Description",
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Description text",
          "default": "<p>Legg inn beskrivelsen her.</p>"
        },
        {
          "type": "select",
          "id": "text_style",
          "label": "Text style",
          "options": [
            { "value": "body", "label": "Body" },
            { "value": "subtitle", "label": "Subtitle" }
          ],
          "default": "body"
        }
      ]
    },

    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Button text",
          "default": "Kjøp Skinora Radiance"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Button link"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Custom Image With Text",
      "blocks": [{ "type": "heading" }, { "type": "bullets" }, { "type": "description" }, { "type": "button" }]
    }
  ]
}
{% endschema %}
