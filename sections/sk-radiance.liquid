{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{% assign image_width = section.settings.image_width | default: 50 %}
{% assign content_width = 100 | minus: image_width %}

<section
  class="image-with-text section {{ section.settings.color_scheme }}"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="page-width">
    <div class="grid image-with-text__grid{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <!-- Image column -->
      <div
        class="grid__item image-with-text__media-item"
        style="flex: 0 0 {{ image_width }}%; max-width: {{ image_width }}%;"
      >
        {% if section.settings.sk_radiance_image != blank %}
          <img
            src="{{ section.settings.sk_radiance_image | image_url: width: 1200 }}"
            alt="{{ section.settings.sk_radiance_image.alt }}"
            loading="lazy"
            width="{{ section.settings.sk_radiance_image.width }}"
            height="{{ section.settings.sk_radiance_image.height }}"
          >
        {% else %}
          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>

      <!-- Text column -->
      <div
        class="grid__item image-with-text__text-item"
        style="flex: 0 0 {{ content_width }}%; max-width: {{ content_width }}%;"
      >
        <div class="image-with-text__content">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'heading' -%}
                {%- if block.settings.heading != blank -%}
                  <h2
                    class="image-with-text__heading {{ block.settings.heading_size }} sk-section-heading"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.heading }}
                  </h2>
                {%- endif -%}

              {%- when 'bullet_points' -%}
                {%- if block.settings.bullet_items != blank -%}
                  <ul class="image-with-text__list" {{ block.shopify_attributes }}>
                    {%- assign bullet_items = block.settings.bullet_items | split: '|' -%}
                    {%- for item in bullet_items -%}
                      {%- if item != blank -%}
                        <li class="image-with-text__list-item">
                          <div class="image-with-text__bullet-icon">
                            {%- if block.settings.bullet_icon != blank -%}
                              {{ block.settings.bullet_icon }}
                            {%- else -%}
                              <svg
                                width="20"
                                height="20"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                              >
                                <circle cx="10" cy="10" r="3" />
                              </svg>
                            {%- endif -%}
                          </div>
                          <span>{{ item | strip }}</span>
                        </li>
                      {%- endif -%}
                    {%- endfor -%}
                  </ul>
                {%- endif -%}

              {%- when 'description' -%}
                {%- if block.settings.description != blank -%}
                  <div
                    class="image-with-text__text rte {{ block.settings.text_style }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.description }}
                  </div>
                {%- endif -%}

              {%- when 'button' -%}
                {%- if block.settings.button_text != blank -%}
                  <div class="image-with-text__button">
                    <a href="{{ block.settings.button_url }}" class="sk_primary-button">
                      {{ block.settings.button_text }}
                    </a>
                  </div>
                {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with Content",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "sk_radiance_image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 30,
      "max": 60,
      "step": 5,
      "unit": "%",
      "label": "Image width",
      "default": 50
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image with content",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h0",
              "label": "Large"
            },
            {
              "value": "hxl",
              "label": "Extra large"
            },
            {
              "value": "hxxl",
              "label": "XX Large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        }
      ]
    },
    {
      "type": "bullet_points",
      "name": "Bullet Points",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "bullet_items",
          "label": "Bullet points",
          "info": "Enter each bullet point on a new line or separate with | symbol",
          "placeholder": "First bullet point\nSecond bullet point\nThird bullet point"
        },
        {
          "type": "html",
          "id": "bullet_icon",
          "label": "Custom bullet icon (SVG)",
          "info": "Leave empty to use default bullet. Paste SVG code for custom icon."
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "default": "<p>Add your description text here. You can use rich text formatting.</p>",
          "label": "Description"
        },
        {
          "type": "select",
          "id": "text_style",
          "options": [
            {
              "value": "body",
              "label": "Body"
            },
            {
              "value": "subtitle",
              "label": "Subtitle"
            }
          ],
          "default": "body",
          "label": "Text style"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "default": "Learn more",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "default": false,
          "label": "Use outline button style"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with Content",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "bullet_points"
        },
        {
          "type": "description"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
