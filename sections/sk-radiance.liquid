{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

<style>
  .sk-radiance {
    padding-top: {{ section.settings.padding_top | times: 4 | divided_by: 3 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 4 | divided_by: 3 }}px;
  }

  .sk-radiance__inner {
    display: grid;
    gap: clamp(3rem, 5vw, 6.4rem);
    align-items: center;
    max-width: min(1280px, 100%);
    margin: 0 auto;
  }

  @media (min-width: 750px) {
    .sk-radiance__inner {
      grid-template-columns: minmax(0, 1.2fr) minmax(0, 1fr);
    }
  }

  .sk-radiance__media-frame {
    aspect-ratio: 1 / 1;
    width: min(880px, 100%);
    margin: 0 auto;
    border-radius: 32px;
    overflow: hidden;
    background: rgba(var(--color-foreground), 0.06);
  }

  .sk-radiance__image,
  .sk-radiance__media-frame svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .sk-radiance__media-frame .placeholder-svg {
    background: rgba(var(--color-foreground), 0.04);
    color: rgba(var(--color-foreground), 0.35);
  }

  .sk-radiance__content {
    max-width: 640px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: clamp(var(--sk-gap-md), 3vw, var(--sk-gap-lg));
    align-items: flex-start;
  }

  .sk-radiance__eyebrow {
    font-size: var(--sk-font-size-caption);
    line-height: var(--sk-line-height-tight);
    letter-spacing: var(--sk-letter-spacing-button);
    text-transform: uppercase;
    color: rgba(var(--color-foreground), 0.7);
    margin: 0;
  }

  .sk-radiance__title {
    font-size: var(--section-heading-h1);
    line-height: var(--section-heading-h1-line);
    margin: 0;
  }

  .sk-radiance__richtext {
    font-size: var(--sk-font-size-medium);
    line-height: var(--sk-line-height-base);
    color: rgba(var(--color-foreground), 0.85);
  }

  .sk-radiance__richtext ul,
  .sk-radiance__richtext ol {
    list-style: none;
    padding-left: 1.5rem;
    margin: 0;
  }

  .sk-radiance__richtext li {
    position: relative;
    margin-bottom: calc(var(--sk-line-height-base) / 3);
    line-height: calc(var(--sk-line-height-base) / 3 * 2);
    font-weight: 400;
  }

  .sk-radiance__richtext li::before {
    content: 'â†’';
    position: absolute;
    left: -1.5rem;
    top: 0;
    color: rgba(var(--color-foreground), 0.85);
  }

  .sk-radiance__button {
    margin-top: 0.05rem;
    align-self: flex-start;
  }

  .sk-radiance__button .sk-btn--primary {
    min-width: 200px;
    text-align: center;
  }

  .sk-radiance__button .sk-btn--primary.is-disabled {
    pointer-events: none;
    opacity: 0.6;
  }

  @media (max-width: 749px) {
    .sk-radiance__title {
      font-size: var(--sk-mobile-heading-size);
      line-height: var(--sk-mobile-heading-line);
    }

    .sk-radiance__richtext {
      font-size: var(--sk-mobile-body-size);
      line-height: var(--sk-mobile-body-line);
    }
  }
</style>

<section class="sk-radiance section color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="sk-radiance__inner">
      <div class="sk-radiance__media">
        <div class="sk-radiance__media-frame">
          {% if section.settings.image != blank %}
            {{
              section.settings.image
              | image_url: width: 1600
              | image_tag: class: 'sk-radiance__image', loading: 'lazy', sizes: '(max-width: 749px) 100vw, 50vw'
            }}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'sk-radiance__image' }}
          {% endif %}
        </div>
      </div>

      <div class="sk-radiance__content">
        {% if section.settings.header_text != blank %}
          <p class="sk-radiance__eyebrow">{{ section.settings.header_text }}</p>
        {% endif %}

        {% if section.settings.subheader_text != blank %}
          <h2 class="sk-radiance__title">{{ section.settings.subheader_text }}</h2>
        {% endif %}

        {% if section.settings.body_richtext != blank %}
          <div class="sk-radiance__richtext rte">{{ section.settings.body_richtext }}</div>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <div class="sk-radiance__button">
            <a
              {% if section.settings.button_link != blank %}
                href="{{ section.settings.button_link }}"
              {% else %}
                role="button"
                aria-disabled="true"
                tabindex="-1"
              {% endif %}
              class="sk-btn sk-btn--primary{% if section.settings.button_link == blank %} is-disabled{% endif %}"
            >
              {{ section.settings.button_label }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SK Radiance",
  "class": "section",

  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 48
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header",
      "default": "Skinora Radiance"
    },
    {
      "type": "text",
      "id": "subheader_text",
      "label": "Subheader",
      "default": "Clinically inspired glow ritual"
    },
    {
      "type": "richtext",
      "id": "body_richtext",
      "label": "Rich text",
      "default": "<p>Describe the routine, highlight ingredients, or insert any promotional copy here.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Secondary button label",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Secondary button link"
    }
  ],

  "presets": [
    {
      "name": "SK Radiance"
    }
  ]
}
{% endschema %}
