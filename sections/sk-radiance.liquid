{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

<style>
  .sk-radiance {
    background: #f1eff4;
    padding: 7rem 0;
  }
  .sk-radiance__container {
    display: flex;
    align-items: start;
    gap: 7rem;
    flex-wrap: wrap;
  }

  .sk-radiance__image {
    flex: 0 0 600px;
  }
  .sk-image-content__content {
    flex: 0 0 550px;
  }

  .sk-radiance .sk-image-content__bullet-list {
    list-style: none;
    padding: 0;
    margin-bottom: 20px;
  }
  .sk-radiance .sk-image-content__bullet-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    color: #30273e;
    font-weight: 500;
  }

  .sk-radiance .sk-image-content__heading {
    color: #30273e;
    font-size: 65px;
    line-height: 70px;
    margin-bottom: 25px;
    font-weight: 700;
  }

  .sk-image-content__description p {
    font-size: 14px;
    line-height: 21px;
  }

  .sk-image-content__button {
    margin-top: 3rem;
  }
</style>

<section class="sk-radiance">
  <div class="container">
    <div class="sk-image-content{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="sk-radiance__container">
        <!-- Image Section -->

        <div class="sk-radiance__image">
          {%- if section.settings.sk_radiance_image != blank -%}
            <img
              src="{{ section.settings.sk_radiance_image | image_url: width: 577,height: 640 }}"
              alt="{{ section.settings.sk_radiance_image.alt }}"
              width="577"
              height="640"
              loading="lazy"
            >
          {%- else -%}
            {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        <!-- Content Section -->
        <div class="sk-image-content__content">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'heading' -%}
                {%- if block.settings.heading != blank -%}
                  <h2
                    class="sk-image-content__heading {{ block.settings.heading_size }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.heading }}
                  </h2>
                {%- endif -%}

              {%- when 'bullet_points' -%}
                {%- if block.settings.bullet_items != blank -%}
                  <ul class="sk-image-content__bullet-list" {{ block.shopify_attributes }}>
                    {%- assign bullet_items = block.settings.bullet_items | split: '|' -%}
                    {%- for item in bullet_items -%}
                      {%- if item != blank -%}
                        <li class="sk-image-content__bullet-item">
                          <div class="sk-image-content__bullet-icon">
                            {%- if block.settings.bullet_icon != blank -%}
                              {{ block.settings.bullet_icon }}
                            {%- else -%}
                              <svg
                                width="20"
                                height="20"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                              >
                                <circle
                                  cx="10"
                                  cy="10"
                                  r="3" />
                              </svg>
                            {%- endif -%}
                          </div>
                          <span>{{ item | strip }}</span>
                        </li>
                      {%- endif -%}
                    {%- endfor -%}
                  </ul>
                {%- endif -%}

              {%- when 'description' -%}
                {%- if block.settings.description != blank -%}
                  <div
                    class="sk-image-content__description rte {{ block.settings.text_style }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.description }}
                  </div>
                {%- endif -%}

              {%- when 'button' -%}
                {%- if block.settings.button_text != blank -%}
                  <div class="sk-image-content__button">
                    <a href="{{ block.settings.button_url }}" class=" sk_primary-button">
                      {{ block.settings.button_text }}
                    </a>
                  </div>
                {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with Content",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "sk_radiance_image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 30,
      "max": 60,
      "step": 5,
      "unit": "%",
      "label": "Image width",
      "default": 50
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image with content",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h0",
              "label": "Large"
            },
            {
              "value": "hxl",
              "label": "Extra large"
            },
            {
              "value": "hxxl",
              "label": "XX Large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        }
      ]
    },
    {
      "type": "bullet_points",
      "name": "Bullet Points",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "bullet_items",
          "label": "Bullet points",
          "info": "Enter each bullet point on a new line or separate with | symbol",
          "placeholder": "First bullet point\nSecond bullet point\nThird bullet point"
        },
        {
          "type": "html",
          "id": "bullet_icon",
          "label": "Custom bullet icon (SVG)",
          "info": "Leave empty to use default bullet. Paste SVG code for custom icon."
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "default": "<p>Add your description text here. You can use rich text formatting.</p>",
          "label": "Description"
        },
        {
          "type": "select",
          "id": "text_style",
          "options": [
            {
              "value": "body",
              "label": "Body"
            },
            {
              "value": "subtitle",
              "label": "Subtitle"
            }
          ],
          "default": "body",
          "label": "Text style"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "default": "Learn more",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "default": false,
          "label": "Use outline button style"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with Content",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "bullet_points"
        },
        {
          "type": "description"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
