<style>
  .sk-reasons--{{ section.id }} {
    background: transparent;
    padding: clamp(3rem, 4vw, 5rem) 0;
  }

  .sk-reasons--{{ section.id }} .sk-reasons__inner {
    max-width: 1100px;
    margin: 0 auto;
    padding-inline: var(--sk-page-gutter);
    display: flex;
    flex-direction: column;
    gap: clamp(2rem, 3vw, 3.5rem);
  }

  .sk-reasons--{{ section.id }} .sk-reasons__layout {
    display: flex;
    align-items: stretch;
    gap: calc(var(--sk-why-gap) * 1%);
  }

  .sk-reasons--{{ section.id }} .sk-reasons__media {
    flex: 0 0 calc(var(--sk-why-image-width) * 1%);
    max-width: calc(var(--sk-why-image-width) * 1%);
    display: flex;
  }

  .sk-reasons--{{ section.id }} .sk-reasons__media img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 16px;
    display: block;
  }

  .sk-reasons--{{ section.id }} .sk-reasons__content-wrap {
    flex: 1 1 calc(var(--sk-why-text-width) * 1%);
    display: flex;
    flex-direction: column;
    gap: clamp(2rem, 3vw, 3.5rem);
  }

  .sk-reasons--{{ section.id }} .sk-reasons__header {
    max-width: 70ch;
    display: flex;
    flex-direction: column;
    gap: var(--sk-section-header-gap);
  }

  .sk-reasons--{{ section.id }} .sk-reasons__title {
    margin: 0;
    font-size: var(--section-heading-h2);
    line-height: var(--section-heading-h2-line);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--sk-section-title-spacing);
    color: rgb(var(--sk-color-heading-text));
  }

  .sk-reasons--{{ section.id }} .sk-reasons__lead {
    margin: 0;
    max-width: 60ch;
    font-size: clamp(1.6rem, 1.2vw, 2rem);
    line-height: 1.6;
    color: rgba(var(--sk-color-body-text), 0.8);
  }

  .sk-reasons--{{ section.id }} .sk-reasons__list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: clamp(1.5rem, 2.5vw, 2.5rem);
  }

  .sk-reasons--{{ section.id }} .sk-reasons__item {
    display: grid;
    grid-template-columns: 64px minmax(0, 1fr);
    column-gap: clamp(1.6rem, 3vw, 2.6rem);
    align-items: flex-start;
    padding-block: clamp(1.2rem, 2vw, 1.8rem);
  }

  .sk-reasons--{{ section.id }} .sk-reasons__item + .sk-reasons__item {
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
  }

  .sk-reasons--{{ section.id }} .sk-reasons__num {
    font-size: clamp(3.6rem, 4.5vw, 5.2rem);
    line-height: 1;
    font-weight: 600;
    font-family: var(--font-heading-family);
    color: rgba(var(--color-foreground), 0.32);
  }

  .sk-reasons--{{ section.id }} .sk-reasons__content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .sk-reasons--{{ section.id }} .sk-reasons__item-title {
    margin: 0;
    font-weight: 600;
    font-size: clamp(1.6rem, 1.2vw, 2.1rem);
    letter-spacing: 0.02em;
    text-transform: uppercase;
    color: rgb(var(--color-foreground));
  }

  .sk-reasons--{{ section.id }} .sk-reasons__item-body {
    margin: 0;
    max-width: 68ch;
    font-size: clamp(1.5rem, 1.1vw, 1.8rem);
    line-height: 1.65;
    color: rgba(var(--color-foreground), 0.75);
  }

  .sk-reasons--{{ section.id }} .sk-reasons__cta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.4rem;
    align-items: center;
  }

  .sk-reasons--{{ section.id }} .sk-reasons__link {
    color: rgb(var(--color-foreground));
    text-decoration: none;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.3);
    padding-bottom: 0.2rem;
  }

  .sk-reasons--{{ section.id }} .sk-reasons__link:hover {
    color: rgb(var(--color-brand-rgb));
    border-bottom-color: rgba(var(--color-brand-rgb), 0.5);
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .sk-reasons--{{ section.id }} {
      padding: clamp(2.6rem, 4vw, 4.2rem) 0;
    }

    .sk-reasons--{{ section.id }} .sk-reasons__inner {
      gap: clamp(1.8rem, 2.6vw, 3rem);
    }

    .sk-reasons--{{ section.id }} .sk-reasons__item {
      grid-template-columns: 52px minmax(0, 1fr);
      column-gap: clamp(1.2rem, 2.5vw, 2rem);
    }

    .sk-reasons--{{ section.id }} .sk-reasons__num {
      font-size: clamp(3.2rem, 4vw, 4.4rem);
    }
  }

  @media screen and (max-width: 749px) {
    .sk-reasons--{{ section.id }} {
      padding: clamp(2.8rem, 6vw, 3.6rem) 0;
    }

    .sk-reasons--{{ section.id }} .sk-reasons__inner {
      padding-inline: clamp(1.6rem, 5vw, 2.6rem);
    }

    .sk-reasons--{{ section.id }} .sk-reasons__layout {
      flex-direction: column;
      gap: clamp(1.8rem, 6vw, 2.6rem);
    }

    .sk-reasons--{{ section.id }} .sk-reasons__media,
    .sk-reasons--{{ section.id }} .sk-reasons__content-wrap {
      flex-basis: auto;
      max-width: 100%;
    }

    .sk-reasons--{{ section.id }} .sk-reasons__title {
      font-size: var(--sk-mobile-heading-size);
      line-height: var(--sk-mobile-heading-line);
    }

    .sk-reasons--{{ section.id }} .sk-reasons__lead {
      font-size: var(--sk-mobile-body-size);
      line-height: var(--sk-mobile-body-line);
    }

    .sk-reasons--{{ section.id }} .sk-reasons__item {
      grid-template-columns: 36px minmax(0, 1fr);
      column-gap: 1rem;
      padding-block: 1.6rem;
    }

    .sk-reasons--{{ section.id }} .sk-reasons__num {
      width: 34px;
      height: 34px;
      border-radius: 999px;
      background: rgba(var(--color-foreground), 0.08);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-size: 1.4rem;
      font-weight: 600;
      color: rgba(var(--color-foreground), 0.6);
    }

    .sk-reasons--{{ section.id }} .sk-reasons__item-title {
      font-size: 1.6rem;
    }

    .sk-reasons--{{ section.id }} .sk-reasons__item-body {
      font-size: 1.5rem;
      line-height: 1.6;
    }
  }
</style>

{%- assign why_choose_reference = product.metafields.custom.why_choose_reference -%}
{%- assign why_choose_entry = blank -%}
{%- assign heading = '' -%}
{%- assign subheading = '' -%}
{%- assign image_obj = blank -%}
{%- assign points = blank -%}
{%- assign show_section = false -%}

{%- if why_choose_reference != blank and why_choose_reference.value != blank -%}
  {%- assign why_choose_entry = why_choose_reference.value -%}
  {%- assign heading = why_choose_entry.heading.value | default: '' -%}
  {%- assign subheading = why_choose_entry.subheading.value | default: '' -%}
  {%- assign image_obj = why_choose_entry.image.value -%}

  {%- if why_choose_entry.points != blank and why_choose_entry.points.value != blank -%}
    {%- assign points = why_choose_entry.points.value -%}
  {%- endif -%}

  {%- if heading != blank or subheading != blank or points != blank or image_obj != blank -%}
    {%- assign show_section = true -%}
  {%- endif -%}
{%- endif -%}

{%- if show_section -%}
  <section
    class="sk-product-why-choose sk-reasons sk-reasons--{{ section.id }}"
    style="--sk-why-image-width: {{ section.settings.layout_image_width }}; --sk-why-text-width: {{ section.settings.layout_text_width }}; --sk-why-gap: {{ section.settings.layout_gap }};"
  >
    <div class="sk-reasons__inner">
      <div class="sk-reasons__layout">
        {% if image_obj != blank %}
          <div class="sk-reasons__media">
            {{
              image_obj
              | image_url: width: 1400
              | image_tag:
                widths: '375, 550, 750, 900, 1100, 1400',
                sizes: '(min-width: 990px) 40vw, (min-width: 750px) 45vw, 100vw',
                loading: 'lazy',
                alt: image_obj.alt
              | default: heading
            }}
          </div>
        {% endif %}

        <div class="sk-reasons__content-wrap">
          {% if heading != blank or subheading != blank %}
            <header class="sk-reasons__header">
              {% if heading != blank %}
                <h2 class="sk-reasons__title">
                  {{ heading | escape }}
                </h2>
              {% endif %}
              {% if subheading != blank %}
                <p class="sk-reasons__lead">
                  {{ subheading | escape }}
                </p>
              {% endif %}
            </header>
          {% endif %}

          {% if points != blank %}
            <ol class="sk-reasons__list" aria-label="Why choose">
              {% for point in points limit: 3 %}
                {% assign point_question = point.question.value | default: '' %}
                {% assign point_detail = point.point.value | default: '' %}

                {% if point_question != blank or point_detail != blank %}
                  <li class="sk-reasons__item">
                    <div class="sk-reasons__num" aria-hidden="true">
                      {{ forloop.index }}
                    </div>
                    <div class="sk-reasons__content">
                      {% if point_question != blank %}
                        <h3 class="sk-reasons__item-title">
                          {{ point_question | escape }}
                        </h3>
                      {% endif %}

                      {% if point_detail != blank %}
                        <p class="sk-reasons__item-body">
                          {{ point_detail | escape }}
                        </p>
                      {% endif %}
                    </div>
                  </li>
                {% endif %}
              {% endfor %}
            </ol>
          {% endif %}

          {%- assign cta_label = section.settings.cta_label | strip | replace: '__', '' -%}
          {%- assign link_label = section.settings.link_label | strip | replace: '__', '' -%}
          {% if cta_label != blank or link_label != blank %}
            <div class="sk-reasons__cta">
              {% if cta_label != blank %}
                <a
                  class="button button--primary"
                  href="{{ section.settings.cta_link | default: '#' }}"
                >
                  {{ cta_label | escape }}
                </a>
              {% endif %}
              {% if link_label != blank %}
                <a class="sk-reasons__link" href="{{ section.settings.link_url | default: '#' }}">
                  {{ link_label | escape }}
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{%- endif -%}

{% schema %}
{
  "name": "SK Product – Why Choose",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "cta_label",
      "label": "Primary button label",
      "default": "__"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "Secondary link label",
      "default": "__"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Secondary link URL"
    },
    {
      "type": "range",
      "id": "layout_image_width",
      "label": "Image width (%)",
      "min": 30,
      "max": 60,
      "step": 1,
      "unit": "%",
      "default": 45
    },
    {
      "type": "range",
      "id": "layout_text_width",
      "label": "Text width (%)",
      "min": 30,
      "max": 60,
      "step": 1,
      "unit": "%",
      "default": 45
    },
    {
      "type": "range",
      "id": "layout_gap",
      "label": "Gap between image and text (%)",
      "min": 5,
      "max": 20,
      "step": 1,
      "unit": "%",
      "default": 10
    }
  ],
  "presets": [
    {
      "name": "SK Product – Why Choose"
    }
  ]
}
{% endschema %}
