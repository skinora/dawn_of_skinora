{% comment %}
  SK Why-Choose (Standalone)
  - Use this on ANY page (no metafields).
  - You can set: main heading, image, and any number of text columns via blocks.
{% endcomment %}

<style>
  .sk-why-choose-{{ section.id }} {
    background: var(--color-ghost-3, #f8f8f8);
    padding: {{ section.settings.padding_top | default: 64 }}px 0 {{ section.settings.padding_bottom | default: 64 }}px;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__container {
    display: flex;
    align-items: center;
    gap: 56px;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__image {
    flex: 0 0 320px;
    order: {% if section.settings.image_position == 'left' %}0{% else %}2{% endif %};
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__image img {
    display: block;
    width: 100%;
    height: auto;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__content {
    flex: 1 1 560px;
    min-width: 300px;
    order: 1;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__main-heading {
    margin: 0 0 28px 0;
    font-weight: 700;
    line-height: 1.2;
    color: var(--color-brand, #30273e);
    font-size: clamp(28px, 3.2vw, 42px);
    text-align: center;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__columns {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 28px 36px;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__column h3,
  .sk-why-choose-{{ section.id }} .sk-why-choose__column h4 {
    margin: 0 0 10px 0;
    font-weight: 800;
    text-transform: uppercase;
    color: var(--color-brand, #30273e);
    font-size: 15px;
    text-align: center;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__column p {
    margin: 0;
    color: var(--color-neutral-3, #333333);
    line-height: 1.6;
    font-size: 14px;
    text-align: center;
  }

  @media (max-width: 900px) {
    .sk-why-choose-{{ section.id }} .sk-why-choose__columns {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 640px) {
    .sk-why-choose-{{ section.id }} .sk-why-choose__container {
      gap: 28px;
    }
    .sk-why-choose-{{ section.id }} .sk-why-choose__image {
      flex-basis: 100%;
      order: 0 !important;
      max-width: 420px;
      margin: 0 auto;
    }
    .sk-why-choose-{{ section.id }} .sk-why-choose__columns {
      grid-template-columns: 1fr;
      gap: 18px;
    }
    .sk-why-choose-{{ section.id }} .sk-why-choose__column h3,
    .sk-why-choose-{{ section.id }} .sk-why-choose__column h4 {
      font-size: 14px;
    }
    .sk-why-choose-{{ section.id }} .sk-why-choose__column p {
      font-size: 13px;
      line-height: 1.5;
    }
  }
</style>

<section class="sk-why-choose-{{ section.id }} color-{{ section.settings.color_scheme }}">
  <div class="sk-why-choose__container">
    {% if section.settings.image != blank %}
      <div class="sk-why-choose__image">
        <img
          srcset="
            {{ section.settings.image | image_url: width: 320 }} 320w,
            {{ section.settings.image | image_url: width: 480 }} 480w,
            {{ section.settings.image | image_url: width: 640 }} 640w,
            {{ section.settings.image | image_url: width: 800 }} 800w
          "
          sizes="(max-width: 640px) 90vw, 320px"
          src="{{ section.settings.image | image_url: width: 480 }}"
          alt="{{ section.settings.image.alt | escape | default: section.settings.heading }}"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
          loading="lazy"
        >
      </div>
    {% endif %}

    <div class="sk-why-choose__content">
      {% if section.settings.heading != blank %}
        <h2 class="sk-why-choose__main-heading">{{ section.settings.heading | escape }}</h2>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="sk-why-choose__columns">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'column' %}
                <div class="sk-why-choose__column" {{ block.shopify_attributes }}>
                  {% if block.settings.title != blank %}
                    <h3>{{ block.settings.title | escape }}</h3>
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <p>{{ block.settings.text }}</p>
                  {% endif %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SK Why-Choose (Standalone)",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main heading",
      "default": "Tror du Skinora Radiance er enda en LED-maske?"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Side image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position (desktop)",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1",
      "options": [
        { "value": "background-1", "label": "Background 1" },
        { "value": "background-2", "label": "Background 2" },
        { "value": "accent-1", "label": "Accent 1" },
        { "value": "accent-2", "label": "Accent 2" },
        { "value": "inverse", "label": "Inverse" }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 140,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 140,
      "step": 4,
      "unit": "px",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Kolonne",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "ET NIVÅ INGEN ANDRE LED-MASKER I NORGE KAN TILBY"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Eneste masken i Norge med klinisk dokumentert 1072&nbsp;nm. Når dypere i huden der kollagen og elastin dannes.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SK Why-Choose (Standalone)",
      "blocks": [
        {
          "type": "column",
          "settings": {
            "title": "ET NIVÅ INGEN ANDRE LED-MASKER I NORGE KAN TILBY",
            "text": "<p>Eneste masken i Norge med klinisk dokumentert 1072&nbsp;nm. Når dypere i huden der kollagen og elastin dannes.</p>"
          }
        },
        {
          "type": "column",
          "settings": {
            "title": "DOKUMENTERT TEKNOLOGI",
            "text": "<p>Rødt (630&nbsp;nm) og NIR (830/1072&nbsp;nm) jobber sammen for å dempe inflammasjon og stimulere hudens egen reparasjon.</p>"
          }
        },
        {
          "type": "column",
          "settings": {
            "title": "RESULTATER DU SER",
            "text": "<p>Jevnere hudtone, forbedret fasthet og roligere hud. Skånsomt – ingen nedetid.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
