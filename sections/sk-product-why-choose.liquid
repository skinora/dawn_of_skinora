<style>
  .sk-why-choose-{{ section.id }} {
    background: var(--color-ghost-3, #f8f8f8);
    padding: {{ section.settings.pad_top }}px 0 {{ section.settings.pad_bottom }}px;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__container {
    display: flex;
    align-items: center;
    justify-content: space-around;
    gap: 48px;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: 0 auto;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__image {
    flex: 0 0 {{ section.settings.image_width }}px;
    {% if section.settings.layout == 'image-right' %}
      order: 2;
    {% else %}
      order: 0;
    {% endif %}
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__content {
    flex: 1;
    min-width: 320px;
    max-width: 700px;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__main-heading {
    font-size: 42px;
    line-height: 1.2;
    font-weight: 700;
    color: var(--color-brand, #30273e);
    margin: 0 0 32px 0;
    text-align: center;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__columns {
    display: grid;
    grid-template-columns: repeat( {{ section.settings.columns_desktop }}, minmax(0,1fr) );
    gap: 28px;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__column {
    text-align: center;
    padding: 0 8px;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__column h3,
  .sk-why-choose-{{ section.id }} .sk-why-choose__column h4 {
    font-size: 16px;
    line-height: 1.4;
    font-weight: 700;
    color: var(--color-brand, #30273e);
    margin: 0 0 10px 0;
    text-transform: uppercase;
  }

  .sk-why-choose-{{ section.id }} .sk-why-choose__column p {
    font-size: 13px;
    line-height: 1.6;
    color: var(--color-neutral-3, #333333);
    margin: 0;
  }

  @media (max-width: 900px) {
    .sk-why-choose-{{ section.id }} .sk-why-choose__columns {
      grid-template-columns: repeat(2, minmax(0,1fr));
    }
  }

  @media (max-width: 700px) {
    .sk-why-choose-{{ section.id }} .sk-why-choose__image {
      {% if section.settings.hide_image_mobile %} display: none; {% endif %}
      order: 0;
      flex-basis: 100%;
    }
    .sk-why-choose-{{ section.id }} .sk-why-choose__main-heading {
      font-size: 32px;
      line-height: 37px;
    }
  }

  @media (max-width: 480px) {
    .sk-why-choose-{{ section.id }} .sk-why-choose__columns {
      grid-template-columns: 1fr;
      gap: 18px;
    }
    .sk-why-choose-{{ section.id }} .sk-why-choose__column h3,
    .sk-why-choose-{{ section.id }} .sk-why-choose__column h4 {
      font-size: 14px;
      line-height: 20px;
    }
    .sk-why-choose-{{ section.id }} .sk-why-choose__column p {
      font-size: 12px;
      line-height: 20px;
    }
  }
</style>

<section class="sk-why-choose-{{ section.id }}">
  <div class="sk-why-choose__container">
    {% if section.settings.image != blank and section.settings.show_image %}
      <div class="sk-why-choose__image">
        <img
          src="{{ section.settings.image | image_url: width: section.settings.image_width | default: 280 }}"
          srcset="
            {{ section.settings.image | image_url: width: section.settings.image_width | default: 280 }} 1x,
            {{ section.settings.image | image_url: width: section.settings.image_width | times: 2 }} 2x
          "
          sizes="(max-width: 700px) 100vw, {{ section.settings.image_width }}px"
          alt="{{ section.settings.image.alt | escape | default: section.settings.heading }}"
          loading="lazy"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
        >
      </div>
    {% endif %}

    <div class="sk-why-choose__content">
      {% if section.settings.heading != blank %}
        <h2 class="sk-why-choose__main-heading">{{ section.settings.heading }}</h2>
      {% endif %}

      <div class="sk-why-choose__columns">
        {% for block in section.blocks %}
          {% if block.type == 'column' %}
            <div class="sk-why-choose__column" {{ block.shopify_attributes }}>
              {% if block.settings.title != blank %}
                <h3>{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="rte">{{ block.settings.text }}</div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SK Why Choose (Home)",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Hvorfor velge Skinora?" },

    { "type": "image_picker", "id": "image", "label": "Sidebilde" },
    { "type": "checkbox", "id": "show_image", "label": "Vis bilde", "default": true },
    { "type": "checkbox", "id": "hide_image_mobile", "label": "Skjul bilde på mobil", "default": false },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "default": "image-left",
      "options": [
        { "value": "image-left", "label": "Bilde til venstre" },
        { "value": "image-right", "label": "Bilde til høyre" }
      ]
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Bildebredde (px)",
      "min": 200,
      "max": 520,
      "step": 10,
      "default": 280
    },

    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Kolonner på desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },

    { "type": "range", "id": "pad_top", "label": "Padding topp (px)", "min": 0, "max": 120, "step": 4, "default": 84 },
    {
      "type": "range",
      "id": "pad_bottom",
      "label": "Padding bunn (px)",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 84
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Kolonne",
      "settings": [
        { "type": "text", "id": "title", "label": "Tittel", "default": "Klinisk dokumentert" },
        {
          "type": "richtext",
          "id": "text",
          "label": "Tekst",
          "default": "<p>1072 nm, 830 nm og 630 nm for målrettet effekt – dokumentert i studier.</p>"
        }
      ]
    }
  ],
  "presets": [
    { "name": "SK Why Choose (Home)", "blocks": [{ "type": "column" }, { "type": "column" }, { "type": "column" }] }
  ]
}
{% endschema %}
