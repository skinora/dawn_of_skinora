<!-- Swiper CSS (for mobile slider only) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<style>
  .sk-product-why-choose-{{ section.id }} {
    background: var(--color-ghost-3, #f8f8f8);
    padding: 7rem 0;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__container {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 60px;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__image {
    flex: 0 0 280px;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    display: block;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__content {
    flex: 1;
    min-width: 300px;
    max-width: 820px;
  }

  /* Main heading centered with column width */
  .sk-product-why-choose-{{ section.id }} .sk-why-choose__main-heading {
    font-size: 48px;
    line-height: 1.25;
    font-weight: 700;
    color: var(--color-brand, #30273e);
    text-align: center;
    margin: 0 auto 48px auto;
    max-width: 1100px; /* aligns heading with grid width */
  }

  /* Desktop grid */
  .sk-product-why-choose-{{ section.id }} .sk-why-choose__columns--grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(280px, 1fr));
    gap: 60px;
    max-width: 1100px;
    margin: 0 auto;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__column {
    text-align: left;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__column h3,
  .sk-product-why-choose-{{ section.id }} .sk-why-choose__column h4 {
    font-size: 20px;
    line-height: 1.5;
    font-weight: 700;
    color: var(--color-brand, #30273e);
    margin: 0 0 12px 0;
    text-transform: uppercase;
    text-align: left;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__column p {
    font-size: 16px;
    line-height: 1.8;
    color: var(--color-neutral-3, #333333);
    margin: 0;
    text-align: left;
  }

  /* Mobile slider wrapper (hidden on desktop) */
  .sk-product-why-choose-{{ section.id }} .sk-why-choose__columns--swiper {
    display: none;
  }

  /* Responsive */
  @media (max-width: 990px) {
    .sk-product-why-choose-{{ section.id }} .sk-why-choose__columns--grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 40px;
    }
  }

  @media (max-width: 700px) {
    .sk-product-why-choose-{{ section.id }} .sk-why-choose__image { display: none; }

    /* Hide grid, show slider on mobile */
    .sk-product-why-choose-{{ section.id }} .sk-why-choose__columns--grid { display: none; }
    .sk-product-why-choose-{{ section.id }} .sk-why-choose__columns--swiper {
      display: block;
      max-width: 600px;
      margin: 0 auto;
    }

    .sk-product-why-choose-{{ section.id }} .swiper-slide {
      padding: 0 8px;
    }

    /* Center dots */
    .sk-product-why-choose-{{ section.id }} .swiper-pagination {
      position: static;
      margin-top: 18px;
      text-align: center;
    }
    .sk-product-why-choose-{{ section.id }} .swiper-pagination-bullet {
      width: 10px; height: 10px; background: #ddd; opacity: 1;
    }
    .sk-product-why-choose-{{ section.id }} .swiper-pagination-bullet-active {
      background: #4a4458;
      transform: scale(1.15);
    }
  }

  @media (max-width: 435px) {
    .sk-product-why-choose-{{ section.id }} .sk-why-choose__main-heading {
      font-size: 34px;
      line-height: 40px;
    }
    .sk-product-why-choose-{{ section.id }} .sk-why-choose__column h3,
    .sk-product-why-choose-{{ section.id }} .sk-why-choose__column h4 {
      font-size: 16px;
      line-height: 22px;
    }
    .sk-product-why-choose-{{ section.id }} .sk-why-choose__column p {
      font-size: 14px;
      line-height: 22px;
    }
  }
</style>

<section class="sk-product-why-choose sk-product-why-choose-{{ section.id }}">
  <div class="container">
    <div class="sk-why-choose__container">
      {% if section.settings.side_image != blank %}
        <div class="sk-why-choose__image">
          <img
            src="{{ section.settings.side_image | image_url: width: 560, height: 760, crop: 'center' }}"
            alt="{{ section.settings.side_image.alt | default: section.settings.main_heading | escape }}"
            width="560"
            height="760"
            loading="lazy"
          >
        </div>
      {% endif %}

      <div class="sk-why-choose__content">
        {% if section.settings.main_heading != blank %}
          <h2 class="sk-why-choose__main-heading">
            {{ section.settings.main_heading | escape }}
          </h2>
        {% endif %}

        {%- comment -%}
          DESKTOP/TABLET GRID
        {%- endcomment -%}
        <div class="sk-why-choose__columns sk-why-choose__columns--grid">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'item' %}
                <div class="sk-why-choose__column" {{ block.shopify_attributes }}>
                  {% if block.settings.title != blank %}
                    <h3>{{ block.settings.title | escape }}</h3>
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <div class="sk-why-choose__column-text">
                      {{ block.settings.text }}
                    </div>
                  {% endif %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>

        {%- comment -%}
          MOBILE SWIPER
        {%- endcomment -%}
        <div class="sk-why-choose__columns--swiper">
          <div class="swiper why-choose-swiper-{{ section.id }}">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'item' %}
                    <div class="swiper-slide" {{ block.shopify_attributes }}>
                      <div class="sk-why-choose__column">
                        {% if block.settings.title != blank %}
                          <h3>{{ block.settings.title | escape }}</h3>
                        {% endif %}
                        {% if block.settings.text != blank %}
                          <div class="sk-why-choose__column-text">
                            {{ block.settings.text }}
                          </div>
                        {% endif %}
                      </div>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
            <div class="swiper-pagination"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Swiper JS (for mobile slider only) -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var el = document.querySelector('.why-choose-swiper-{{ section.id }}');
    if (!el) return;

    // Only init on mobile to avoid duplicate UI with the desktop grid
    var mql = window.matchMedia('(max-width: 700px)');
    var instance = null;

    function initOrDestroy() {
      if (mql.matches && !instance) {
        instance = new Swiper(el, {
          slidesPerView: 1,
          spaceBetween: 16,
          pagination: {
            el: el.querySelector('.swiper-pagination'),
            clickable: true,
          },
        });
      } else if (!mql.matches && instance) {
        instance.destroy(true, true);
        instance = null;
      }
    }

    initOrDestroy();
    mql.addEventListener ? mql.addEventListener('change', initOrDestroy) : mql.addListener(initOrDestroy);
  });
</script>

{% schema %}
{
  "name": "SK Product Why Choose",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main heading",
      "default": "Hvorfor velge Skinora?"
    },
    {
      "type": "image_picker",
      "id": "side_image",
      "label": "Side image (desktop)"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Text column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column title",
          "default": "KLINISK INSPIRERT"
        },
        {
          "type": "html",
          "id": "text",
          "label": "Column text",
          "default": "<p>Utviklet med b√∏lgelengder brukt i studier for synlige resultater over tid.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SK Product Why Choose",
      "blocks": [{ "type": "item" }, { "type": "item" }, { "type": "item" }]
    }
  ]
}
{% endschema %}
