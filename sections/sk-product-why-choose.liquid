<style>
  .sk-product-why-choose-{{ section.id }} {
    background: #F8F8F8;
    padding: 7rem 0;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__container {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    justify-content: space-around;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__image {
    flex: 0 0 280px;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__image img {
    width: 100%;
    height: auto;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__content {
    flex: 1;
    max-width: 700px;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__main-heading {
    font-size: 42px;
    line-height: 1.2;
    font-weight: 700;
    color: #30273E;
    margin-bottom: 48px;
    text-align: center;
  }


  .sk-product-why-choose-{{ section.id }} .sk-why-choose__column h3,
  .sk-product-why-choose-{{ section.id }} .sk-why-choose__column h4 {
    font-size: 16px;
    line-height: 1.4;
    font-weight: 700;
    color: #30273E;
    margin: 0 0 12px 0;
    text-transform: uppercase;
  }

  .sk-product-why-choose-{{ section.id }} .sk-why-choose__column p {
    font-size: 13px;
    line-height: 1.6;
    color: #333333;
    margin: 0;
  }

  .sk-product-why-choose .metafield-rich_text_field{
    display: none;
  }
  .sk-product-why-choose .sk-why-choose__columns > .sk-why-choose__column{
    display: flex;
    gap: 50px;
  }
</style>

{%- if product.metafields.custom.why_choose_content != blank or product.metafields.custom.why_choose_image != blank -%}
  <section class="sk-product-why-choose sk-product-why-choose-{{ section.id }}">
    <div class="container">
      <div class="sk-why-choose__container">
        <!-- Image Section -->
        <div class="sk-why-choose__image">
          {%- if product.metafields.custom.why_choose_image != blank -%}
            <img
              src="{{ product.metafields.custom.why_choose_image | image_url: width: 280, height: 380 }}"
              alt="{{ product.metafields.custom.why_choose_image.alt | default: product.title }}"
              width="280"
              height="380"
              loading="lazy"
            >
          {%- else -%}
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        <!-- Content Section -->
        <div class="sk-why-choose__content">
          {%- if product.metafields.custom.why_choose_content != blank -%}
            {%- capture why_choose_html -%}
              {{ product.metafields.custom.why_choose_content | metafield_tag }}
            {%- endcapture -%}

            {%- comment -%} Extract main heading (first h2 or h3) {%- endcomment -%}
            {%- assign heading_start = why_choose_html | split: '<h2>' | first -%}
            {%- if heading_start == why_choose_html -%}
              {%- assign heading_start = why_choose_html | split: '<h3>' | first -%}
              {%- assign heading_end = why_choose_html | split: '</h3>' | last -%}
              {%- assign heading_full = why_choose_html
                | replace: heading_start, ''
                | replace: heading_end, ''
                | replace: '<h3>', ''
                | replace: '</h3>', ''
                | strip
              -%}
            {%- else -%}
              {%- assign heading_end = why_choose_html | split: '</h2>' | last -%}
              {%- assign heading_full = why_choose_html
                | replace: heading_start, ''
                | replace: heading_end, ''
                | replace: '<h2>', ''
                | replace: '</h2>', ''
                | strip
              -%}
            {%- endif -%}

            {%- if heading_full != blank -%}
              <h2 class="sk-why-choose__main-heading">{{ heading_full }}</h2>
            {%- endif -%}

            {%- comment -%} Parse columns separated by || {%- endcomment -%}
            {%- assign columns_content = why_choose_html | split: '||' -%}

            <div class="sk-why-choose__columns">
              {%- for column in columns_content -%}
                {%- if column contains '<h3>' or column contains '<h4>' or column contains '<p>' -%}
                  <div class="sk-why-choose__column">
                    {{ column }}
                  </div>
                {%- endif -%}
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </section>
{%- endif -%}

{% schema %}
{
  "name": "SK Product Why Choose",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Product-Specific Control"
    },
    {
      "type": "paragraph",
      "content": "This section displays why-choose content from product metafields. Add these 2 metafields:"
    },
    {
      "type": "paragraph",
      "content": "1. 'custom.why_choose_image' (File) - Upload the product image"
    },
    {
      "type": "paragraph",
      "content": "2. 'custom.why_choose_content' (Rich text) - Format: Main heading, then columns separated by ||"
    },
    {
      "type": "paragraph",
      "content": "Example: <h2>Main Heading</h2> ||<h3>Column 1 Title</h3><p>Description...</p> ||<h3>Column 2 Title</h3><p>Description...</p> ||<h3>Column 3 Title</h3><p>Description...</p>"
    }
  ],
  "presets": [
    {
      "name": "SK Product Why Choose"
    }
  ]
}
{% endschema %}
