{{ 'section-sk-product-showcase.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<div class="sk-product-showcase section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="container-xl px-xl-0 px-md-5 px-4">
    <div class="sk-product-showcase__wrapper">
      <div class="sk-product-showcase__image-section">
        {%- if section.settings.product_image != blank -%}
          <div class="sk-product-showcase__image-wrapper">
            <img
              srcset="
                {%- if section.settings.product_image.width >= 400 -%}{{ section.settings.product_image | image_url: width: 400 }} 400w,{%- endif -%}
                {%- if section.settings.product_image.width >= 600 -%}{{ section.settings.product_image | image_url: width: 600 }} 600w,{%- endif -%}
                {%- if section.settings.product_image.width >= 800 -%}{{ section.settings.product_image | image_url: width: 800 }} 800w,{%- endif -%}
                {{ section.settings.product_image | image_url }} {{ section.settings.product_image.width }}w
              "
              src="{{ section.settings.product_image | image_url: width: 600 }}"
              sizes="600px"
              alt="{{ section.settings.product_image.alt | escape }}"
              class="sk-product-showcase__image"
              width="{{ section.settings.product_image.width }}"
              height="{{ section.settings.product_image.height }}"
              loading="lazy"
            >
          </div>
        {%- endif -%}
      </div>

      <div class="sk-product-showcase__content-section">
        {%- if section.settings.product_title != blank -%}
          <h2 class="sk-product-showcase__title">
            {{ section.settings.product_title | escape }}
          </h2>
        {%- endif -%}

        {%- if section.settings.product_description != blank -%}
          <div class="sk-product-showcase__description">
            {{ section.settings.product_description }}
          </div>
        {%- endif -%}

        {%- if section.settings.project_title != blank -%}
          <div class="sk-product-showcase__project-info">
            <span class="sk-product-showcase__project-title">
              {{ section.settings.project_title | escape }}
            </span>
            {%- if section.settings.project_subtitle != blank -%}
              <p class="sk-product-showcase__project-subtitle">
                {{ section.settings.project_subtitle | escape }}
              </p>
            {%- endif -%}
            {%- if section.settings.project_date != blank -%}
              <p class="sk-product-showcase__project-date">
                {{ section.settings.project_date | escape }}
              </p>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <div>
            <a href="{{ section.settings.button_link }}" class="sk_primary-button about-sec-2-btn">
              {{ section.settings.button_label }}
              <span class="svg-wrapper">
                <svg xmlns="http://www.w3.org/2000/svg" width="23" height="29" viewBox="0 0 23 29" fill="none">
                  <path d="M22.1904 13.8521L21.5352 14.5132L22.1904 15.1763L9.02734 28.4858L6.39453 25.8247L15.6016 16.5142H0.499023V12.5142H15.6016L6.39453 3.20361L9.02734 0.541504L22.1904 13.8521Z" fill="white"/>
                </svg>
              </span>
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Showcase",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    },
    {
      "type": "text",
      "id": "product_title",
      "label": "Product Title",
      "default": "Blue Mask"
    },
    {
      "type": "richtext",
      "id": "product_description",
      "label": "Product Description",
      "default": "<p>Beauty services encompass a wide range of treatments that can enhance your appearance and well-being. From classic hair care services like haircuts, coloring, and styling to nail care including manicures, pedicures, and artificial nail applications, there's something for everyone.</p>"
    },
    {
      "type": "text",
      "id": "project_title",
      "label": "Project Title",
      "default": "Lorem Ipsum Dolor sit Amet"
    },
    {
      "type": "text",
      "id": "project_subtitle",
      "label": "Project Subtitle",
      "default": "Beauty Project"
    },
    {
      "type": "text",
      "id": "project_date",
      "label": "Project Date",
      "default": "SEP 2025"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "View Product"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Product Showcase"
    }
  ]
}
{% endschema %}
