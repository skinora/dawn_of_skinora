<script>
  (function () {
    const HOVER_DELAY = 160;

    function bindHoverMenus(root) {
      const detailNodes = root.querySelectorAll('.sk-header header-menu details');
      detailNodes.forEach((detailsEl) => {
        if (detailsEl.dataset.hoverBound === 'true') return;
        detailsEl.dataset.hoverBound = 'true';

        let closeTimer;

        const openMenu = () => {
          clearTimeout(closeTimer);
          detailsEl.dataset.hover = 'true';
          detailsEl.open = true;
        };

        const scheduleClose = () => {
          clearTimeout(closeTimer);
          closeTimer = setTimeout(() => {
            detailsEl.dataset.hover = 'false';
            detailsEl.removeAttribute('data-hover');
            detailsEl.open = false;
          }, HOVER_DELAY);
        };

        detailsEl.addEventListener('mouseenter', openMenu);
        detailsEl.addEventListener('mouseleave', scheduleClose);
        detailsEl.querySelector('summary')?.addEventListener('focus', openMenu);
        detailsEl.addEventListener('focusout', (event) => {
          if (!detailsEl.contains(event.relatedTarget)) {
            scheduleClose();
          }
        });
      });
    }

    function initHoverMenus() {
      const root = document;
      bindHoverMenus(root);
    }

    document.addEventListener('DOMContentLoaded', initHoverMenus);
    document.addEventListener('shopify:section:load', (event) => {
      bindHoverMenus(event.target);
    });
  })();
</script>
