  <link rel="stylesheet" href="{{ 'component-mega-menu.css' | asset_url }}" media="print" onload="this.media='all'">
{%- endif -%}

<style>
  /* Drawer (mobile burger) */
  header-drawer {
    justify-self: start;
    margin-left: -1.2rem;
  }
  @media (min-width: 750px) {
    header-drawer {
      display: none !important;
    }
  }

  /* Grid: nav | logo | icons */
  .sk-header__grid {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    width: 100%;
  }

  /* Left: NAV */
  .header__menu {
    justify-self: start;
    display: flex;
    align-items: center;
    gap: 2.4rem;
  }

  /* Remove bullets from menu lists and prevent default styling */
  .header__menu ul,
  .header__menu li,
  .sk-header__inline-menu,
  .sk-header__inline-menu li {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  /* Change font style: remove italic, use condensed typeface with letter-spacing adjustments */
  .header__menu .list-menu__item,
  .header__menu .list-menu__item--link,
  .sk-header__inline-menu .list-menu__item,
  .sk-header__inline-menu .list-menu__item--link {
    font-style: normal;
    font-stretch: condensed;
    letter-spacing: -0.3px;
    font-weight: 600;
    text-transform: uppercase;
  }

  /* Right: ICONS */
  .header__icons {
    justify-self: end;
    display: flex;
    align-items: center;
    gap: 1.6rem;
  }

  /* Apply brand color to icons */
  .header__icons .svg-wrapper svg,
  .header__icons .svg-wrapper svg * {
    fill: var(--sk-brand-color, #30273e) !important;
    stroke: var(--sk-brand-color, #30273e) !important;
  }

  /* Also apply brand color to menu-item dropdown icons (e.g. error/dropdown arrow) */
  .header__menu .list-menu__item .icon,
  .sk-header__inline-menu .list-menu__item .icon {
    fill: var(--sk-brand-color, #30273e) !important;
    stroke: var(--sk-brand-color, #30273e) !important;
  }

  /* Inline menu spacing */
  .sk-header__inline-menu,
  .list-menu--inline {
    gap: 2.4rem !important;
  }

  /* Show nav always on tablet/desktop */
  @media (min-width: 750px) {
    .header__menu,
    .sk-header__nav,
    .sk-header__inline-menu,
    .list-menu--inline {
      display: flex !important;
    }
    .header__menu.medium-hide,
    .header__menu .medium-hide,
    nav.medium-hide {
      display: flex !important;
    }
  }

  /* Logo block styling */
  .sk-header__brand {
    justify-self: center;
    display: flex;
    align-items: center;
  }
</style>

{%- style -%}
  .header {
    padding: 10px 5px;
  }
  .section-header {
    position: sticky;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-header {
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
  @media screen and (min-width: 990px) {
    .header {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<script src="{{ 'cart-notification.js' | asset_url }}" defer></script>

{% liquid
  assign header_tag = 'div'
  if section.settings.sticky_header_type != 'none'
    assign header_tag = 'sticky-header'
  endif
%}

<{{ header_tag }}
  {% if header_tag == 'sticky-header' %}
    data-sticky-type="{{ section.settings.sticky_header_type }}"
  {% endif %}
  class="header-wrapper header-wrapper--sk color-{{ section.settings.color_scheme }}{% if section.settings.show_line_separator %} header-wrapper--border-bottom{% endif %}"
>
  <header class="header sk-header header--{{ section.settings.logo_position }} header--mobile-{{ section.settings.mobile_logo_position }}">
    <div class="sk-header__grid">
      <!-- LEFT: NAV + DRAWER -->
      {% render 'header-drawer' %}

      {% if section.settings.menu != blank %}
        {%- assign nav_links_count = section.settings.menu.links | size -%}
        <nav class="header__menu small-hide">
          {% case section.settings.menu_type_desktop %}
            {% when 'dropdown', 'drawer' %}
              {% render 'header-dropdown-menu',
                nav_limit: nav_links_count,
                nav_variant_class: 'sk-header__inline-menu sk-header__inline-menu--primary'
              %}
            {% when 'mega' %}
              {% render 'header-mega-menu',
                nav_limit: nav_links_count,
                nav_variant_class: 'sk-header__inline-menu sk-header__inline-menu--primary'
              %}
          {% endcase %}
        </nav>
      {% endif %}

      <!-- CENTER: LOGO -->
      <div class="sk-header__brand">
        <a href="{{ routes.root_url }}" class="header__heading-link link link--text">
          <div class="header__heading-logo-wrapper" style="--header-logo-width: {{ settings.logo_width }}px;">
            {{ 'custom-logo.svg' | inline_asset_content }}
          </div>
        </a>
      </div>

      <!-- RIGHT: ICONS -->
      <div class="header__icons">
        {% render 'header-search', input_id: 'Search-In-Modal' %}

        {%- if shop.customer_accounts_enabled -%}
          <a
            href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
            class="header__icon header__icon--account link focus-inset small-hide"
            rel="nofollow"
          >
            <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
          </a>
        {%- endif -%}

        <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link focus-inset" id="cart-icon-bubble">
          <span class="svg-wrapper{% if cart == empty %} cart-empty{% endif %}">
            {{ 'icon-cart-empty.svg' | inline_asset_content }}
          </span>
          {% if cart != empty %}
            <div class="cart-count-bubble">
              <span aria-hidden="true">{{ cart.item_count }}</span>
            </div>
          {% endif %}
        </a>
      </div>
    </div>
  </header>
</{{ header_tag }}>

{% schema %}
{
  "name": "Header",
  "class": "section-header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Main menu",
      "default": "main-menu"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "default": 20,
      "label": "Top padding"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "default": 20,
      "label": "Bottom padding"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0,
      "label": "Margin bottom"
    },
    {
      "type": "checkbox",
      "id": "show_line_separator",
      "default": true,
      "label": "Show separator line"
    },
    {
      "type": "select",
      "id": "menu_type_desktop",
      "default": "dropdown",
      "options": [
        { "value": "dropdown", "label": "Dropdown" },
        { "value": "mega", "label": "Mega menu" },
        { "value": "drawer", "label": "Drawer" }
      ],
      "label": "Desktop menu type"
    }
  ]
}
{% endschema %}
