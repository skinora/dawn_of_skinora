<style>
  /* Drawer (mobile burger) */
  header-drawer {
    justify-self: start;
    margin-left: -1.2rem;
  }
  @media (min-width: 1400px) {
    header-drawer {
      display: none !important;
    }
  }

  @media (min-width: 990px) and (max-width: 1399px) {
    header-drawer {
      display: flex !important;
      align-items: center;
      margin-left: 0;
    }

    .header__menu,
    .sk-header__nav,
    .sk-header__inline-menu,
    .list-menu--inline {
      display: none !important;
    }
  }

  /* Grid: nav | logo | icons */
  .sk-header {
    --sk-premium-ease: cubic-bezier(0.19, 1, 0.22, 1);
  }

  .sk-header__grid {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    width: 100%;
  }

  /* Left: NAV */
  .header__menu {
    justify-self: start;
    display: flex;
    align-items: center;
    gap: 2.4rem;
  }

  /* Right: ICONS */
  .header__icons {
    justify-self: end;
    display: flex;
    align-items: center;
    gap: 1.6rem;
    color: var(--color-brand);
    padding: 0;
    margin: 0;
    width: fit-content;
  }

  .header__icons .header__icon .svg-wrapper svg {
    width: 26px;
    height: 26px;
  }

  /* Inline menu spacing */
  .sk-header__inline-menu,
  .list-menu--inline {
    gap: 2.4rem !important;
  }

  .sk-header__inline-menu .list-menu,
  .sk-header__inline-menu .list-menu li {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .sk-header .sk-header__inline-menu .header__menu-item {
    font-style: normal;
    letter-spacing: clamp(-0.01em, 0.08vw, 0.05em) !important;
    text-transform: uppercase;
    font-size: 1.6rem; /* Base font size for large screens */
  }
  /* Mobile drawer typography */
  .menu-drawer__menu-item,
  .menu-drawer__submenu-list .menu-drawer__menu-item {
    text-transform: uppercase;
    letter-spacing: clamp(-0.01em, 0.08vw, 0.05em);
    font-style: normal !important;
  }

  .sk-header__inline-menu .header__menu-item span {
    letter-spacing: inherit;
  }

  /* Dropdown panel background */
  .sk-header .header__submenu {
    background-color: #fff !important;
  }

  /* Premium hover motion */
  .sk-header .header__menu-item,
  .sk-header .header__menu-item span {
    transition: color 280ms var(--sk-premium-ease);
  }

  .sk-header .header__menu-item span::after {
    transition: transform 340ms var(--sk-premium-ease);
  }

  .sk-header .header__submenu {
    opacity: 0;
    transform: translateY(12px);
    transition: opacity 420ms var(--sk-premium-ease), transform 460ms var(--sk-premium-ease);
    will-change: opacity, transform;
  }

  .sk-header details[open] > .header__submenu,
  .sk-header details[data-hover='true'] > .header__submenu {
    opacity: 1;
    transform: translateY(0);
    animation: none !important;
  }

  /* Keep nav link color steady */
  .sk-header .header__menu-item,
  .sk-header .header__menu-item span {
    color: var(--color-neutral-4);
  }

  .sk-header .header__menu-item span {
    position: relative;
    padding-bottom: 0.35rem;
    display: inline-flex;
    align-items: center;
  }

  .sk-header .header__menu-item span::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: -0.15rem;
    height: 0.18rem;
    background-color: var(--color-brand) !important;
    border-radius: 999px;
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 320ms var(--sk-premium-ease);
    opacity: 0;
  }

  .sk-header .header__menu-item:visited,
  .sk-header .header__menu-item:visited span {
    color: var(--color-neutral-4);
    text-decoration: none;
  }

  .sk-header .header__menu-item:visited span::after,
  .sk-header .header__menu-item span.header__active-menu-item::after {
    opacity: 1;
    transform: scaleX(1);
  }

  .sk-header .header__menu-item:hover span::after,
  .sk-header .header__menu-item:focus-visible span::after {
    transform: scaleX(0) !important;
    opacity: 0 !important;
  }

  .sk-header details[open] > .header__menu-item,
  .sk-header details[open]:hover > .header__menu-item,
  .sk-header .header__active-menu-item,
  .sk-header .header__menu-item:hover .header__active-menu-item {
    text-decoration: none !important;
  }

  .sk-header .header__menu-item:hover,
  .sk-header .header__menu-item:focus-visible,
  .sk-header .header__menu-item:hover span,
  .sk-header .header__menu-item:focus-visible span {
    color: var(--color-neutral-4);
    text-decoration: none;
  }

  .sk-header .header__submenu .header__menu-item {
    color: var(--color-neutral-4);
  }

  .sk-header .header__submenu .header__menu-item:hover {
    color: var(--color-neutral-4) !important;
    text-decoration: none;
  }

  /* SHOW NAV ALWAYS â‰¥ tablet */
  @media (min-width: 1400px) {
    .header__menu,
    .sk-header__nav,
    .sk-header__inline-menu,
    .list-menu--inline {
      display: flex !important;
    }
  }

  /* FORCE OVERRIDE Dawn auto-added medium-hide */
  @media (min-width: 1400px) {
    .header__menu.medium-hide,
    .header__menu .medium-hide,
    nav.medium-hide {
      display: flex !important;
    }
  }

  /* Logo block styling fix */
  .sk-header__brand {
    justify-self: center;
    display: flex;
    align-items: center;
  }

  /* Responsive logo scaling - Tablet */
  @media (min-width: 750px) and (max-width: 1199px) {
    .header__heading-logo-wrapper {
      --header-logo-width: 170px !important;
      width: 170px !important;
      max-width: 170px !important;
    }
    .header__heading-logo-wrapper img,
    .header__heading-logo-wrapper svg {
      width: 170px !important;
      max-width: 170px !important;
    }
  }

  /* Responsive logo scaling - Laptop */
  @media (min-width: 1200px) and (max-width: 1599px) {
    .header__heading-logo-wrapper {
      --header-logo-width: 200px !important;
      width: 200px !important;
      max-width: 200px !important;
    }
    .header__heading-logo-wrapper img,
    .header__heading-logo-wrapper svg {
      width: 200px !important;
      max-width: 200px !important;
    }
  }

  /* Responsive logo scaling - Wide Desktop */
  @media (min-width: 1600px) {
    .header__heading-logo-wrapper {
      --header-logo-width: 230px !important;
      width: 230px !important;
      max-width: 230px !important;
    }
    .header__heading-logo-wrapper img,
    .header__heading-logo-wrapper svg {
      width: 230px !important;
      max-width: 230px !important;
    }
  }

  /* Responsive navigation font scaling - Tablet only */
  @media (min-width: 750px) and (max-width: 1199px) {
    .sk-header .sk-header__inline-menu .header__menu-item,
    .menu-drawer__menu-item {
      font-size: 1.4rem !important;
    }
  }

  /* Responsive icon scaling - Tablet */
  @media (min-width: 750px) and (max-width: 1199px) {
    .header__icons .header__icon .svg-wrapper svg {
      width: 19px !important;
      height: 19px !important;
    }
  }

  /* Responsive icon scaling - Laptop */
  @media (min-width: 1200px) and (max-width: 1599px) {
    .header__icons .header__icon .svg-wrapper svg {
      width: 21px !important;
      height: 21px !important;
    }
  }

  /* Responsive icon scaling - Wide Desktop */
  @media (min-width: 1600px) {
    .header__icons .header__icon .svg-wrapper svg {
      width: 24px !important;
      height: 24px !important;
    }
  }

  /* Responsive header spacing - Tablet only */
  @media (min-width: 750px) and (max-width: 1199px) {
    .header__menu {
      gap: 1.8rem !important;
    }

    .header__icons {
      gap: 1.2rem !important;
    }

    .sk-header__inline-menu,
    .list-menu--inline {
      gap: 1.8rem !important;
    }
  }

  /* Responsive header spacing - Laptop */
  @media (min-width: 1200px) and (max-width: 1599px) {
    .header__menu {
      gap: 1rem !important;
    }

    .sk-header__inline-menu,
    .list-menu--inline {
      gap: 1rem !important;
    }
  }

  /* Responsive header padding - Tablet only */
  @media (min-width: 750px) and (max-width: 1199px) {
    .section-header .sk-header {
      padding-inline: 3rem !important;
    }
  }
</style>

