{% liquid
  assign header_tag = 'div'
  if section.settings.sticky_header_type != 'none'
    assign header_tag = 'sticky-header'
  endif
%}

<{{ header_tag }}
  {% if header_tag == 'sticky-header' %}
    data-sticky-type="{{ section.settings.sticky_header_type }}"
  {% endif %}
  class="header-wrapper header-wrapper--sk color-{{ section.settings.color_scheme }}{% if section.settings.show_line_separator %} header-wrapper--border-bottom{% endif %}"
>
  <header class="header sk-header header--{{ section.settings.logo_position }} header--mobile-{{ section.settings.mobile_logo_position }}">
    <div class="sk-header__grid">
      <!-- LEFT: NAV + DRAWER -->
      {% render 'header-drawer' %}

      {% if section.settings.menu != blank %}
        {%- assign nav_links_count = section.settings.menu.links | size -%}
        <nav class="header__menu small-hide">
          {% case section.settings.menu_type_desktop %}
            {% when 'dropdown', 'drawer' %}
              {% render 'header-dropdown-menu',
                nav_limit: nav_links_count,
                nav_variant_class: 'sk-header__inline-menu sk-header__inline-menu--primary'
              %}
            {% when 'mega' %}
              {% render 'header-mega-menu',
                nav_limit: nav_links_count,
                nav_variant_class: 'sk-header__inline-menu sk-header__inline-menu--primary'
              %}
          {% endcase %}
        </nav>
      {% endif %}

      <!-- CENTER: LOGO -->
      <div class="sk-header__brand">
        <a href="{{ routes.root_url }}" class="header__heading-link link link--text">
          <div class="header__heading-logo-wrapper" style="--header-logo-width: {{ settings.logo_width }}px;">
            {{ 'custom-logo.svg' | inline_asset_content }}
          </div>
        </a>
      </div>

      <!-- RIGHT: ICONS -->
      <div class="header__icons">
        {% render 'header-search', input_id: 'Search-In-Modal' %}

        {%- if shop.customer_accounts_enabled -%}
          <a
            href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
            class="header__icon header__icon--account link focus-inset small-hide"
            rel="nofollow"
          >
            <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
          </a>
        {%- endif -%}

        <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link focus-inset" id="cart-icon-bubble">
          <span class="svg-wrapper{% if cart == empty %} cart-empty{% endif %}">
            {{ 'icon-cart-empty.svg' | inline_asset_content }}
          </span>
          {% if cart != empty %}
            <div class="cart-count-bubble">
              <span aria-hidden="true">{{ cart.item_count }}</span>
            </div>
          {% endif %}
        </a>
      </div>
    </div>
  </header>
</{{ header_tag }}>

